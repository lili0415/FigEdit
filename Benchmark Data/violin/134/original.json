{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing transaction amount distributions by transaction type.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 10,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "transactions",
      "values": [
        {
          "Transaction Type": "Purchase",
          "Transaction Amount": 50.5
        },
        {
          "Transaction Type": "Purchase",
          "Transaction Amount": 60.2
        },
        {
          "Transaction Type": "Purchase",
          "Transaction Amount": 55.8
        },
        {
          "Transaction Type": "Purchase",
          "Transaction Amount": 62.1
        },
        {
          "Transaction Type": "Purchase",
          "Transaction Amount": 58.3
        },
        {
          "Transaction Type": "Transfer",
          "Transaction Amount": 100.5
        },
        {
          "Transaction Type": "Transfer",
          "Transaction Amount": 110.2
        },
        {
          "Transaction Type": "Transfer",
          "Transaction Amount": 105.8
        },
        {
          "Transaction Type": "Transfer",
          "Transaction Amount": 112.1
        },
        {
          "Transaction Type": "Transfer",
          "Transaction Amount": 108.3
        },
        {
          "Transaction Type": "Refund",
          "Transaction Amount": 20.5
        },
        {
          "Transaction Type": "Refund",
          "Transaction Amount": 30.2
        },
        {
          "Transaction Type": "Refund",
          "Transaction Amount": 25.8
        },
        {
          "Transaction Type": "Refund",
          "Transaction Amount": 32.1
        },
        {
          "Transaction Type": "Refund",
          "Transaction Amount": 28.3
        }
      ]
    },
    {
      "name": "density",
      "source": "transactions",
      "transform": [
        {
          "type": "kde",
          "field": "Transaction Amount",
          "groupby": [
            "Transaction Type"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "transactions",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Transaction Type"
          ],
          "fields": [
            "Transaction Amount",
            "Transaction Amount",
            "Transaction Amount"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "transactions",
        "field": "Transaction Type"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "transactions",
        "field": "Transaction Amount"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "transactions",
        "field": "Transaction Type"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Transaction Type"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Transaction Type",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Transaction Type'] === parent['Transaction Type']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Transaction Type"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}