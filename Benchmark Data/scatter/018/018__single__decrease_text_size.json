{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing feature relationships in Santander Value Prediction dataset.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Feature_1": 0.5,
          "Feature_2": 1.2,
          "Category": "A"
        },
        {
          "Feature_1": 1.1,
          "Feature_2": 0.8,
          "Category": "B"
        },
        {
          "Feature_1": 0.7,
          "Feature_2": 1.5,
          "Category": "C"
        },
        {
          "Feature_1": 1.3,
          "Feature_2": 1.0,
          "Category": "A"
        },
        {
          "Feature_1": 0.9,
          "Feature_2": 0.6,
          "Category": "B"
        },
        {
          "Feature_1": 1.0,
          "Feature_2": 1.4,
          "Category": "C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        0.5,
        1.3
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Feature_2"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Feature 1",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Feature 2",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Feature_1"
          },
          "y": {
            "scale": "y",
            "field": "Feature_2"
          },
          "fill": {
            "scale": "color",
            "field": "Category"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}