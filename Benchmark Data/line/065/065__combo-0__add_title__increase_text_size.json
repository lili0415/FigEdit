{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing university rankings over years for different countries.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "rankings",
      "values": [
        {
          "year": 2017,
          "rank": 5,
          "country": "United States"
        },
        {
          "year": 2018,
          "rank": 4,
          "country": "United States"
        },
        {
          "year": 2019,
          "rank": 3,
          "country": "United States"
        },
        {
          "year": 2020,
          "rank": 3,
          "country": "United States"
        },
        {
          "year": 2017,
          "rank": 10,
          "country": "United Kingdom"
        },
        {
          "year": 2018,
          "rank": 9,
          "country": "United Kingdom"
        },
        {
          "year": 2019,
          "rank": 8,
          "country": "United Kingdom"
        },
        {
          "year": 2020,
          "rank": 7,
          "country": "United Kingdom"
        },
        {
          "year": 2017,
          "rank": 15,
          "country": "Australia"
        },
        {
          "year": 2018,
          "rank": 14,
          "country": "Australia"
        },
        {
          "year": 2019,
          "rank": 13,
          "country": "Australia"
        },
        {
          "year": 2020,
          "rank": 12,
          "country": "Australia"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2017,
        2018,
        2019,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "rankings",
        "field": "rank"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "rankings",
        "field": "country"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Rank",
      "format": "d",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Country",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "rankings",
          "groupby": "country"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "rank"
              },
              "stroke": {
                "scale": "color",
                "field": "country"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}