{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 16750,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-02",
          "price": 16800,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-03",
          "price": 16950,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-01",
          "price": 1200,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-02",
          "price": 1250,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-03",
          "price": 1300,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-01",
          "price": 0.35,
          "currency": "Ripple"
        },
        {
          "date": "2023-01-02",
          "price": 0.36,
          "currency": "Ripple"
        },
        {
          "date": "2023-01-03",
          "price": 0.37,
          "currency": "Ripple"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "currency"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "titleFontSize": 18
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)",
      "labelFontSize": 16,
      "titleFontSize": 18
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Cryptocurrency",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "currency"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "currency"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}