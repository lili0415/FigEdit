{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing data from World Bank WDI.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Urban Population",
          "series": "2010",
          "value": 45
        },
        {
          "category": "Urban Population",
          "series": "2020",
          "value": 50
        },
        {
          "category": "Rural Population",
          "series": "2010",
          "value": 55
        },
        {
          "category": "Rural Population",
          "series": "2020",
          "value": 50
        },
        {
          "category": "GDP Growth",
          "series": "2010",
          "value": 3.5
        },
        {
          "category": "GDP Growth",
          "series": "2020",
          "value": 2.1
        },
        {
          "category": "Life Expectancy",
          "series": "2010",
          "value": 72.5
        },
        {
          "category": "Life Expectancy",
          "series": "2020",
          "value": 74.2
        },
        {
          "category": "CO2 Emissions",
          "series": "2010",
          "value": 10.8
        },
        {
          "category": "CO2 Emissions",
          "series": "2020",
          "value": 9.5
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "paddingInner": 0.1,
      "padding": 0.0
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Category"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Year",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "y2": {
            "scale": "y",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}