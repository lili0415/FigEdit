{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing review length vs sentiment score for IMDB Reviews.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "ReviewLength": 120,
          "SentimentScore": 0.8,
          "Genre": "Drama"
        },
        {
          "ReviewLength": 250,
          "SentimentScore": 0.3,
          "Genre": "Comedy"
        },
        {
          "ReviewLength": 300,
          "SentimentScore": 0.6,
          "Genre": "Action"
        },
        {
          "ReviewLength": 180,
          "SentimentScore": 0.7,
          "Genre": "Drama"
        },
        {
          "ReviewLength": 400,
          "SentimentScore": 0.2,
          "Genre": "Horror"
        },
        {
          "ReviewLength": 220,
          "SentimentScore": 0.9,
          "Genre": "Romance"
        },
        {
          "ReviewLength": 150,
          "SentimentScore": 0.5,
          "Genre": "Comedy"
        },
        {
          "ReviewLength": 330,
          "SentimentScore": 0.4,
          "Genre": "Action"
        },
        {
          "ReviewLength": 270,
          "SentimentScore": 0.7,
          "Genre": "Drama"
        },
        {
          "ReviewLength": 310,
          "SentimentScore": 0.3,
          "Genre": "Horror"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        120.0,
        400.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "SentimentScore"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Genre"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Review Length (words)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Sentiment Score",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "ReviewLength"
          },
          "y": {
            "scale": "y",
            "field": "SentimentScore"
          },
          "fill": {
            "scale": "color",
            "field": "Genre"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "tooltip": {
            "signal": "{'Review Length': datum.ReviewLength, 'Sentiment Score': datum.SentimentScore, 'Genre': datum.Genre}"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}