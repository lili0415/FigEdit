{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average wind speed by month from the UCI Forest Fires Dataset.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "January",
          "avg_wind_speed": 4.5
        },
        {
          "month": "February",
          "avg_wind_speed": 5.1
        },
        {
          "month": "March",
          "avg_wind_speed": 4.7
        },
        {
          "month": "April",
          "avg_wind_speed": 5.3
        },
        {
          "month": "May",
          "avg_wind_speed": 6.0
        },
        {
          "month": "June",
          "avg_wind_speed": 5.8
        },
        {
          "month": "July",
          "avg_wind_speed": 6.2
        },
        {
          "month": "August",
          "avg_wind_speed": 5.9
        },
        {
          "month": "September",
          "avg_wind_speed": 5.4
        },
        {
          "month": "October",
          "avg_wind_speed": 4.8
        },
        {
          "month": "November",
          "avg_wind_speed": 4.6
        },
        {
          "month": "December",
          "avg_wind_speed": 4.3
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "avg_wind_speed"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month",
      "labelFontSize": 12,
      "tickSize": 10,
      "titleFontSize": 14
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Wind Speed (m/s)",
      "labelFontSize": 12,
      "tickSize": 10,
      "titleFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "month"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_wind_speed"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.month",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.avg_wind_speed",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.avg_wind_speed"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}