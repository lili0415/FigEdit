{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing precipitation over time in Seattle.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "weather_data",
      "values": [
        {
          "date": "2021-01-01",
          "precipitation": 5.2
        },
        {
          "date": "2021-01-02",
          "precipitation": 3.8
        },
        {
          "date": "2021-01-03",
          "precipitation": 0.0
        },
        {
          "date": "2021-01-04",
          "precipitation": 1.5
        },
        {
          "date": "2021-01-05",
          "precipitation": 4.7
        },
        {
          "date": "2021-01-06",
          "precipitation": 2.3
        },
        {
          "date": "2021-01-07",
          "precipitation": 6.1
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "weather_data",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "weather_data",
        "field": "precipitation"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Precipitation (mm)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "weather_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "precipitation"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}