{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the number of matches played by teams in international football.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "team": "Argentina",
          "matches": 120
        },
        {
          "team": "Brazil",
          "matches": 135
        },
        {
          "team": "Germany",
          "matches": 142
        },
        {
          "team": "Italy",
          "matches": 110
        },
        {
          "team": "Spain",
          "matches": 98
        },
        {
          "team": "France",
          "matches": 115
        },
        {
          "team": "England",
          "matches": 105
        },
        {
          "team": "Netherlands",
          "matches": 89
        },
        {
          "team": "Portugal",
          "matches": 94
        },
        {
          "team": "Uruguay",
          "matches": 87
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "team"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "matches"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Team",
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Matches Played",
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "team"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "matches"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          },
          "fontSize": 10
        },
        "update": {
          "x": {
            "scale": "xscale",
            "field": "team",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "matches",
            "offset": -5
          },
          "text": {
            "field": "matches"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}