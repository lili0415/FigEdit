{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing sales values for different video game genres.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "Genre": "Shooter",
          "Global_Sales": 45.6
        },
        {
          "Genre": "Sports",
          "Global_Sales": 35.3
        },
        {
          "Genre": "Action",
          "Global_Sales": 28.1
        },
        {
          "Genre": "Role-Playing",
          "Global_Sales": 22.5
        },
        {
          "Genre": "Platform",
          "Global_Sales": 19.7
        },
        {
          "Genre": "Racing",
          "Global_Sales": 15.2
        },
        {
          "Genre": "Puzzle",
          "Global_Sales": 12.8
        },
        {
          "Genre": "Simulation",
          "Global_Sales": 10.3
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Shooter",
        "Sports",
        "Action",
        "Role-Playing",
        "Platform",
        "Racing",
        "Puzzle",
        "Simulation"
      ],
      "range": [
        "#ff0000",
        "#4682b4",
        "#4682b4",
        "#4682b4",
        "#4682b4",
        "#4682b4",
        "#4682b4",
        "#4682b4"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Video Game Genre",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Global Sales (in millions)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Genre"
          },
          "y": {
            "scale": "y",
            "field": "Global_Sales"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "field": "Genre",
            "scale": "color"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 1.0
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}