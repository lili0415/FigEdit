{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing GDP growth rates over years for multiple countries.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "country": "USA",
          "gdp_growth": 4.1
        },
        {
          "year": 2001,
          "country": "USA",
          "gdp_growth": 1.0
        },
        {
          "year": 2002,
          "country": "USA",
          "gdp_growth": 1.8
        },
        {
          "year": 2000,
          "country": "China",
          "gdp_growth": 8.4
        },
        {
          "year": 2001,
          "country": "China",
          "gdp_growth": 8.3
        },
        {
          "year": 2002,
          "country": "China",
          "gdp_growth": 9.1
        },
        {
          "year": 2000,
          "country": "India",
          "gdp_growth": 4.0
        },
        {
          "year": 2001,
          "country": "India",
          "gdp_growth": 3.8
        },
        {
          "year": 2002,
          "country": "India",
          "gdp_growth": 4.6
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['country']=='USA' || datum['country']=='China'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "gdp_growth"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "#e377c2"
      ],
      "domain": [
        "USA",
        "China"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "GDP Growth (%)"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "country"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "gdp_growth"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "country"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 1
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.7
              }
            }
          },
          "sort": {
            "field": "year",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Country",
      "orient": "right"
    }
  ]
}