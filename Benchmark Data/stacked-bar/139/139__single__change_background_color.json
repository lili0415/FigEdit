          "value": 25
        },
        {
          "category": "Sports",
          "series": "Positive",
          "value": 60
        },
        {
          "category": "Sports",
          "series": "Negative",
          "value": 20
        },
        {
          "category": "Sports",
          "series": "Neutral",
          "value": 20
        },
        {
          "category": "Technology",
          "series": "Positive",
          "value": 50
        },
        {
          "category": "Technology",
          "series": "Negative",
          "value": 35
        },
        {
          "category": "Technology",
          "series": "Neutral",
          "value": 15
        },
        {
          "category": "Health",
          "series": "Positive",
          "value": 70
