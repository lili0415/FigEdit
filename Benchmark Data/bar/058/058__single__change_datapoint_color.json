{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average goals scored by teams in European Soccer Database.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "team": "FC Barcelona",
          "average_goals": 2.8
        },
        {
          "team": "Real Madrid",
          "average_goals": 2.5
        },
        {
          "team": "Manchester United",
          "average_goals": 2.2
        },
        {
          "team": "Bayern Munich",
          "average_goals": 2.4
        },
        {
          "team": "Juventus",
          "average_goals": 2.1
        },
        {
          "team": "Paris Saint-Germain",
          "average_goals": 2.6
        },
        {
          "team": "Chelsea",
          "average_goals": 2.0
        },
        {
          "team": "Liverpool",
          "average_goals": 2.3
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "team"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "average_goals"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Team"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Goals"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "team"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "average_goals"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['team']==='Manchester United'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.team",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.average_goals",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.average_goals"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}