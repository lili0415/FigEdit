{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot of FIFA 19 players showing potential vs overall rating, with position as color.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Overall": 85,
          "Potential": 92,
          "Position": "Forward"
        },
        {
          "Overall": 88,
          "Potential": 90,
          "Position": "Midfielder"
        },
        {
          "Overall": 82,
          "Potential": 87,
          "Position": "Defender"
        },
        {
          "Overall": 91,
          "Potential": 94,
          "Position": "Forward"
        },
        {
          "Overall": 79,
          "Potential": 85,
          "Position": "Goalkeeper"
        },
        {
          "Overall": 84,
          "Potential": 88,
          "Position": "Midfielder"
        },
        {
          "Overall": 86,
          "Potential": 89,
          "Position": "Defender"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        79,
        82,
        84,
        85,
        86,
        88,
        91
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Potential"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Overall Rating",
      "grid": true
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Potential Rating",
      "grid": true
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Overall"
          },
          "y": {
            "scale": "y",
            "field": "Potential"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}