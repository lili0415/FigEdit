{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing the number of terrorist incidents by attack type.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "attack_type": "Bombing/Explosion",
          "incidents": 4500
        },
        {
          "attack_type": "Armed Assault",
          "incidents": 3200
        },
        {
          "attack_type": "Assassination",
          "incidents": 1200
        },
        {
          "attack_type": "Hostage Taking (Kidnapping)",
          "incidents": 800
        },
        {
          "attack_type": "Hostage Taking (Barricade Incident)",
          "incidents": 600
        },
        {
          "attack_type": "Facility/Infrastructure Attack",
          "incidents": 1500
        },
        {
          "attack_type": "Unarmed Assault",
          "incidents": 400
        },
        {
          "attack_type": "Hijacking",
          "incidents": 300
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "attack_type"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "incidents"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Attack Type",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Incidents",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "attack_type"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "incidents"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.attack_type",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.incidents",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.incidents"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}