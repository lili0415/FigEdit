{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the number of passengers in different classes on the Titanic.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "class": "First",
          "passengers": 216
        },
        {
          "class": "Second",
          "passengers": 184
        },
        {
          "class": "Third",
          "passengers": 491
        },
        {
          "class": "Crew",
          "passengers": 885
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "class"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "passengers"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Class"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Passengers"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "class"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "passengers"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "forestgreen"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['class']==='First'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ]
}