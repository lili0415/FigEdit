{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing demand over time for different product categories.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01",
          "demand": 120,
          "category": "Electronics"
        },
        {
          "date": "2022-02",
          "demand": 150,
          "category": "Electronics"
        },
        {
          "date": "2022-03",
          "demand": 170,
          "category": "Electronics"
        },
        {
          "date": "2022-01",
          "demand": 90,
          "category": "Furniture"
        },
        {
          "date": "2022-02",
          "demand": 110,
          "category": "Furniture"
        },
        {
          "date": "2022-03",
          "demand": 130,
          "category": "Furniture"
        },
        {
          "date": "2022-01",
          "demand": 200,
          "category": "Clothing"
        },
        {
          "date": "2022-02",
          "demand": 220,
          "category": "Clothing"
        },
        {
          "date": "2022-03",
          "demand": 250,
          "category": "Clothing"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Demand",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "demand"
              },
              "stroke": {
                "scale": "color",
                "field": "category"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}