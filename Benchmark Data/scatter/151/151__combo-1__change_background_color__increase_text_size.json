{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot of economic indicators from FRED Economic Data.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "GDP": 21000,
          "UnemploymentRate": 3.5,
          "Region": "North"
        },
        {
          "GDP": 18000,
          "UnemploymentRate": 4.2,
          "Region": "South"
        },
        {
          "GDP": 25000,
          "UnemploymentRate": 2.8,
          "Region": "East"
        },
        {
          "GDP": 22000,
          "UnemploymentRate": 3.9,
          "Region": "West"
        },
        {
          "GDP": 19500,
          "UnemploymentRate": 4.5,
          "Region": "North"
        },
        {
          "GDP": 24000,
          "UnemploymentRate": 3.2,
          "Region": "East"
        },
        {
          "GDP": 20000,
          "UnemploymentRate": 4.0,
          "Region": "South"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        18000.0,
        25000.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "UnemploymentRate"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Region"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "GDP (in Billion USD)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Unemployment Rate (%)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "GDP"
          },
          "y": {
            "scale": "y",
            "field": "UnemploymentRate"
          },
          "fill": {
            "scale": "color",
            "field": "Region"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}