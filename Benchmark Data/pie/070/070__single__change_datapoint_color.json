{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Pie chart showing proportions of mortality causes.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Ischemic Heart Disease",
          "value": 35
        },
        {
          "category": "Stroke",
          "value": 25
        },
        {
          "category": "Lower Respiratory Infections",
          "value": 15
        },
        {
          "category": "Chronic Obstructive Pulmonary Disease",
          "value": 10
        },
        {
          "category": "Diabetes Mellitus",
          "value": 8
        },
        {
          "category": "Other Causes",
          "value": 7
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.283185307179586
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c",
        "#d62728",
        "#9467bd",
        "#8c564b"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Cause of Mortality",
      "orient": "right",
      "symbolType": "circle"
    }
  ]
}