{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions based on Pew Research Center Surveys.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Trust in Government",
          "value": 35
        },
        {
          "category": "Trust in Media",
          "value": 25
        },
        {
          "category": "Trust in Science",
          "value": 30
        },
        {
          "category": "Trust in Religion",
          "value": 10
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ]
}