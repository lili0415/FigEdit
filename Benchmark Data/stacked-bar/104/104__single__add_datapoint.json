{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing Netflix stock price performance across months and series.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "January",
          "series": "Open",
          "value": 540
        },
        {
          "category": "January",
          "series": "Close",
          "value": 560
        },
        {
          "category": "February",
          "series": "Open",
          "value": 550
        },
        {
          "category": "February",
          "series": "Close",
          "value": 570
        },
        {
          "category": "March",
          "series": "Open",
          "value": 565
        },
        {
          "category": "March",
          "series": "Close",
          "value": 580
        },
        {
          "category": "April",
          "series": "Open",
          "value": 570
        },
        {
          "category": "April",
          "series": "Close",
          "value": 590
        },
        {
          "category": "May",
          "series": "Open",
          "value": 580
        },
        {
          "category": "May",
          "series": "Close",
          "value": 600
        },
        {
          "category": "June",
          "series": "Open",
          "value": 590
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Stock Price"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Series",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}