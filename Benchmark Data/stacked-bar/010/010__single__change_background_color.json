{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing item condition distribution across categories.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "series": "New",
          "value": 120
        },
        {
          "category": "Electronics",
          "series": "Used",
          "value": 80
        },
        {
          "category": "Electronics",
          "series": "Refurbished",
          "value": 40
        },
        {
          "category": "Clothing",
          "series": "New",
          "value": 150
        },
        {
          "category": "Clothing",
          "series": "Used",
          "value": 70
        },
        {
          "category": "Clothing",
          "series": "Refurbished",
          "value": 30
        },
        {
          "category": "Home Goods",
          "series": "New",
          "value": 100
        },
        {
          "category": "Home Goods",
          "series": "Used",
          "value": 50
        },
        {
          "category": "Home Goods",
          "series": "Refurbished",
          "value": 20
        },
        {
          "category": "Toys",
          "series": "New",
          "value": 90
        },
        {
          "category": "Toys",
          "series": "Used",
          "value": 60
        },
        {
          "category": "Toys",
          "series": "Refurbished",
          "value": 15
        },
        {
          "category": "Books",
          "series": "New",
          "value": 110
        },
        {
          "category": "Books",
          "series": "Used",
          "value": 95
        },
        {
          "category": "Books",
          "series": "Refurbished",
          "value": 25
        }
      ],
      "transform": [
        {
          "type": "stack",
          "field": "value",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Category"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Condition",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}