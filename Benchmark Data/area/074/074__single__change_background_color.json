{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing university rankings over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "rankings",
      "values": [
        {
          "year": 2016,
          "rank": 85,
          "university": "University A"
        },
        {
          "year": 2017,
          "rank": 78,
          "university": "University A"
        },
        {
          "year": 2018,
          "rank": 72,
          "university": "University A"
        },
        {
          "year": 2019,
          "rank": 65,
          "university": "University A"
        },
        {
          "year": 2020,
          "rank": 60,
          "university": "University A"
        },
        {
          "year": 2016,
          "rank": 95,
          "university": "University B"
        },
        {
          "year": 2017,
          "rank": 88,
          "university": "University B"
        },
        {
          "year": 2018,
          "rank": 85,
          "university": "University B"
        },
        {
          "year": 2019,
          "rank": 80,
          "university": "University B"
        },
        {
          "year": 2020,
          "rank": 75,
          "university": "University B"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2016,
        2017,
        2018,
        2019,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "rankings",
        "field": "rank"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "rankings",
        "field": "university"
      },
      "range": [
        "steelblue",
        "orange"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Rank"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "rankings",
          "name": "series_facet",
          "groupby": "university"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "rank"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "university"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "year",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "University",
      "orient": "right"
    }
  ]
}