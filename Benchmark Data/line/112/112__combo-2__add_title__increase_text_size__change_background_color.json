{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing the number of routes over years for different airlines.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "routes",
      "values": [
        {
          "year": 2015,
          "routes": 1200,
          "airline": "Airline X"
        },
        {
          "year": 2016,
          "routes": 1300,
          "airline": "Airline X"
        },
        {
          "year": 2017,
          "routes": 1250,
          "airline": "Airline X"
        },
        {
          "year": 2018,
          "routes": 1400,
          "airline": "Airline X"
        },
        {
          "year": 2015,
          "routes": 800,
          "airline": "Airline Y"
        },
        {
          "year": 2016,
          "routes": 850,
          "airline": "Airline Y"
        },
        {
          "year": 2017,
          "routes": 900,
          "airline": "Airline Y"
        },
        {
          "year": 2018,
          "routes": 950,
          "airline": "Airline Y"
        },
        {
          "year": 2015,
          "routes": 600,
          "airline": "Airline Z"
        },
        {
          "year": 2016,
          "routes": 700,
          "airline": "Airline Z"
        },
        {
          "year": 2017,
          "routes": 750,
          "airline": "Airline Z"
        },
        {
          "year": 2018,
          "routes": 800,
          "airline": "Airline Z"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "routes",
        "field": "routes"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "routes",
        "field": "airline"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Routes",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Airline",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "routes",
          "groupby": "airline"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "routes"
              },
              "stroke": {
                "scale": "color",
                "field": "airline"
              },
              "strokeWidth": {
                "value": 2
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}