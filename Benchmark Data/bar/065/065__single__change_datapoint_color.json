{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the distribution of abalone shell lengths.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Shell Length: 0.1-0.2",
          "amount": 35
        },
        {
          "category": "Shell Length: 0.2-0.3",
          "amount": 50
        },
        {
          "category": "Shell Length: 0.3-0.4",
          "amount": 75
        },
        {
          "category": "Shell Length: 0.4-0.5",
          "amount": 90
        },
        {
          "category": "Shell Length: 0.5-0.6",
          "amount": 120
        },
        {
          "category": "Shell Length: 0.6-0.7",
          "amount": 80
        },
        {
          "category": "Shell Length: 0.7-0.8",
          "amount": 45
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "amount"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Shell Length Range (meters)"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "amount"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['category']==='Shell Length: 0.2-0.3'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.amount",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.amount"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}