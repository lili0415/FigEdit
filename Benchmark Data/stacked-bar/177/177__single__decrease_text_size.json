{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing house prices by location and type.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Location A",
          "series": "Detached",
          "value": 350000
        },
        {
          "category": "Location A",
          "series": "Semi-Detached",
          "value": 280000
        },
        {
          "category": "Location A",
          "series": "Terraced",
          "value": 240000
        },
        {
          "category": "Location B",
          "series": "Detached",
          "value": 400000
        },
        {
          "category": "Location B",
          "series": "Semi-Detached",
          "value": 300000
        },
        {
          "category": "Location B",
          "series": "Terraced",
          "value": 260000
        },
        {
          "category": "Location C",
          "series": "Detached",
          "value": 450000
        },
        {
          "category": "Location C",
          "series": "Semi-Detached",
          "value": 320000
        },
        {
          "category": "Location C",
          "series": "Terraced",
          "value": 270000
        },
        {
          "category": "Location D",
          "series": "Detached",
          "value": 380000
        },
        {
          "category": "Location D",
          "series": "Semi-Detached",
          "value": 310000
        },
        {
          "category": "Location D",
          "series": "Terraced",
          "value": 250000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Location",
      "titleFontSize": 12,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "House Prices (USD)",
      "titleFontSize": 12,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "House Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}