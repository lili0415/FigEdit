{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing item demand over time for different stores.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "store": "Store A",
          "demand": 120
        },
        {
          "date": "2023-01-01",
          "store": "Store B",
          "demand": 150
        },
        {
          "date": "2023-02-01",
          "store": "Store A",
          "demand": 130
        },
        {
          "date": "2023-02-01",
          "store": "Store B",
          "demand": 160
        },
        {
          "date": "2023-03-01",
          "store": "Store A",
          "demand": 110
        },
        {
          "date": "2023-03-01",
          "store": "Store B",
          "demand": 170
        },
        {
          "date": "2023-04-01",
          "store": "Store A",
          "demand": 140
        },
        {
          "date": "2023-04-01",
          "store": "Store B",
          "demand": 180
        },
        {
          "date": "2023-05-01",
          "store": "Store A",
          "demand": 150
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange"
      ],
      "domain": {
        "data": "table",
        "field": "store"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Demand"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "store"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "demand"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "store"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.7
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Store",
      "orient": "right"
    }
  ]
}