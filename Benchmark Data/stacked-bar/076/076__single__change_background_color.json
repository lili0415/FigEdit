{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing Netflix stock performance by year and quarter.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "2015",
          "series": "Q1",
          "value": 120
        },
        {
          "category": "2015",
          "series": "Q2",
          "value": 150
        },
        {
          "category": "2015",
          "series": "Q3",
          "value": 180
        },
        {
          "category": "2015",
          "series": "Q4",
          "value": 200
        },
        {
          "category": "2016",
          "series": "Q1",
          "value": 140
        },
        {
          "category": "2016",
          "series": "Q2",
          "value": 160
        },
        {
          "category": "2016",
          "series": "Q3",
          "value": 190
        },
        {
          "category": "2016",
          "series": "Q4",
          "value": 210
        },
        {
          "category": "2017",
          "series": "Q1",
          "value": 170
        },
        {
          "category": "2017",
          "series": "Q2",
          "value": 185
        },
        {
          "category": "2017",
          "series": "Q3",
          "value": 195
        },
        {
          "category": "2017",
          "series": "Q4",
          "value": 220
        },
        {
          "category": "2018",
          "series": "Q1",
          "value": 200
        },
        {
          "category": "2018",
          "series": "Q2",
          "value": 230
        },
        {
          "category": "2018",
          "series": "Q3",
          "value": 250
        },
        {
          "category": "2018",
          "series": "Q4",
          "value": 270
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Stock Price ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Quarter",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}