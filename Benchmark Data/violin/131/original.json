{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing distributions of monthly charges for customer churn categories.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 20,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "customers",
      "values": [
        {
          "Churn": "Yes",
          "MonthlyCharges": 70
        },
        {
          "Churn": "Yes",
          "MonthlyCharges": 85
        },
        {
          "Churn": "Yes",
          "MonthlyCharges": 95
        },
        {
          "Churn": "Yes",
          "MonthlyCharges": 110
        },
        {
          "Churn": "Yes",
          "MonthlyCharges": 120
        },
        {
          "Churn": "Yes",
          "MonthlyCharges": 130
        },
        {
          "Churn": "No",
          "MonthlyCharges": 40
        },
        {
          "Churn": "No",
          "MonthlyCharges": 50
        },
        {
          "Churn": "No",
          "MonthlyCharges": 60
        },
        {
          "Churn": "No",
          "MonthlyCharges": 65
        },
        {
          "Churn": "No",
          "MonthlyCharges": 70
        },
        {
          "Churn": "No",
          "MonthlyCharges": 75
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Churn != null && datum.MonthlyCharges != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "customers",
      "transform": [
        {
          "type": "kde",
          "field": "MonthlyCharges",
          "groupby": [
            "Churn"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "customers",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Churn"
          ],
          "fields": [
            "MonthlyCharges",
            "MonthlyCharges",
            "MonthlyCharges"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "customers",
        "field": "Churn"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "customers",
        "field": "MonthlyCharges"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "customers",
        "field": "Churn"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Churn"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Churn",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Churn === parent.Churn"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Churn"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}