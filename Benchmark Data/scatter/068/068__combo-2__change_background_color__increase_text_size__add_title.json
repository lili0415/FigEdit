{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing relationships between two numeric fields from the Santander Customer Transaction dataset.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "TransactionAmount": 250.5,
          "CustomerScore": 78.2,
          "Region": "North"
        },
        {
          "TransactionAmount": 180.3,
          "CustomerScore": 65.1,
          "Region": "South"
        },
        {
          "TransactionAmount": 310.8,
          "CustomerScore": 82.5,
          "Region": "East"
        },
        {
          "TransactionAmount": 225.4,
          "CustomerScore": 74.3,
          "Region": "West"
        },
        {
          "TransactionAmount": 195.7,
          "CustomerScore": 68.9,
          "Region": "North"
        },
        {
          "TransactionAmount": 275.2,
          "CustomerScore": 79.6,
          "Region": "East"
        },
        {
          "TransactionAmount": 245.9,
          "CustomerScore": 72.8,
          "Region": "South"
        },
        {
          "TransactionAmount": 305.1,
          "CustomerScore": 81.3,
          "Region": "West"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": [
        180.3,
        310.8
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "CustomerScore"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Region"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Transaction Amount",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Customer Score",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "TransactionAmount"
          },
          "y": {
            "scale": "y",
            "field": "CustomerScore"
          },
          "fill": {
            "scale": "color",
            "field": "Region"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}