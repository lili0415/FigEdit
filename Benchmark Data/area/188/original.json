{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing demand trends over time for Avito Demand Prediction.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "2021-01",
          "demand": 120
        },
        {
          "month": "2021-02",
          "demand": 150
        },
        {
          "month": "2021-03",
          "demand": 180
        },
        {
          "month": "2021-04",
          "demand": 200
        },
        {
          "month": "2021-05",
          "demand": 170
        },
        {
          "month": "2021-06",
          "demand": 190
        },
        {
          "month": "2021-07",
          "demand": 220
        },
        {
          "month": "2021-08",
          "demand": 210
        },
        {
          "month": "2021-09",
          "demand": 230
        },
        {
          "month": "2021-10",
          "demand": 250
        },
        {
          "month": "2021-11",
          "demand": 240
        },
        {
          "month": "2021-12",
          "demand": 260
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Demand"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "month"
          },
          "y": {
            "scale": "yscale",
            "field": "demand"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}