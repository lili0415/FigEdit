{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Dot plot showing evaluation categories and their corresponding values.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Buying Price",
          "Value": 4
        },
        {
          "Category": "Maintenance Cost",
          "Value": 3
        },
        {
          "Category": "Number of Doors",
          "Value": 2
        },
        {
          "Category": "Person Capacity",
          "Value": 5
        },
        {
          "Category": "Luggage Boot Size",
          "Value": 3
        },
        {
          "Category": "Safety",
          "Value": 4
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Evaluation Categories"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Values",
      "grid": true
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "orange"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}