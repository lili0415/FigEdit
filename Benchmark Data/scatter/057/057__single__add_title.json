{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing NBA players' statistics.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart"
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Points": 25.3,
          "Assists": 7.5,
          "Position": "Guard"
        },
        {
          "Points": 30.1,
          "Assists": 4.2,
          "Position": "Forward"
        },
        {
          "Points": 18.9,
          "Assists": 9.1,
          "Position": "Guard"
        },
        {
          "Points": 22.5,
          "Assists": 6.3,
          "Position": "Center"
        },
        {
          "Points": 27.8,
          "Assists": 5.0,
          "Position": "Forward"
        },
        {
          "Points": 15.4,
          "Assists": 10.2,
          "Position": "Guard"
        },
        {
          "Points": 20.7,
          "Assists": 8.5,
          "Position": "Forward"
        },
        {
          "Points": 12.3,
          "Assists": 11.8,
          "Position": "Center"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        12.3,
        30.1
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Assists"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Points Per Game"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Assists Per Game"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Points"
          },
          "y": {
            "scale": "y",
            "field": "Assists"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}