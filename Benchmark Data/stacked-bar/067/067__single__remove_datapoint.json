{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing global temperature anomalies by decade and region.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "1900s",
          "series": "North America",
          "value": -0.12
        },
        {
          "category": "1900s",
          "series": "Europe",
          "value": -0.08
        },
        {
          "category": "1900s",
          "series": "Asia",
          "value": -0.1
        },
        {
          "category": "1910s",
          "series": "North America",
          "value": -0.15
        },
        {
          "category": "1910s",
          "series": "Europe",
          "value": -0.11
        },
        {
          "category": "1920s",
          "series": "North America",
          "value": -0.09
        },
        {
          "category": "1920s",
          "series": "Europe",
          "value": -0.05
        },
        {
          "category": "1920s",
          "series": "Asia",
          "value": -0.07
        },
        {
          "category": "1930s",
          "series": "North America",
          "value": 0.01
        },
        {
          "category": "1930s",
          "series": "Europe",
          "value": 0.03
        },
        {
          "category": "1930s",
          "series": "Asia",
          "value": 0.02
        },
        {
          "category": "1940s",
          "series": "North America",
          "value": 0.05
        },
        {
          "category": "1940s",
          "series": "Europe",
          "value": 0.07
        },
        {
          "category": "1940s",
          "series": "Asia",
          "value": 0.06
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Decade"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}