{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing demand values for different store categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Beverages",
          "Demand": 120
        },
        {
          "Category": "Snacks",
          "Demand": 200
        },
        {
          "Category": "Dairy",
          "Demand": 150
        },
        {
          "Category": "Frozen Foods",
          "Demand": 180
        },
        {
          "Category": "Household",
          "Demand": 100
        },
        {
          "Category": "Personal Care",
          "Demand": 90
        },
        {
          "Category": "Produce",
          "Demand": 250
        },
        {
          "Category": "Bakery",
          "Demand": 170
        },
        {
          "Category": "Electronics",
          "Demand": 220
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Demand"
      },
      "nice": true,
      "zero": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category",
      "labelAngle": -45
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Demand"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Demand"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "#1f77b4"
          },
          "tooltip": {
            "signal": "datum.Category + ': ' + datum.Demand"
          }
        }
      }
    }
  ]
}