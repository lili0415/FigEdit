{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy consumption trends over years for different sources.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2015,
          "value": 1200,
          "source": "Coal"
        },
        {
          "year": 2015,
          "value": 800,
          "source": "Natural Gas"
        },
        {
          "year": 2015,
          "value": 600,
          "source": "Renewables"
        },
        {
          "year": 2016,
          "value": 1100,
          "source": "Coal"
        },
        {
          "year": 2016,
          "value": 850,
          "source": "Natural Gas"
        },
        {
          "year": 2016,
          "value": 700,
          "source": "Renewables"
        },
        {
          "year": 2017,
          "value": 1000,
          "source": "Coal"
        },
        {
          "year": 2017,
          "value": 900,
          "source": "Natural Gas"
        },
        {
          "year": 2017,
          "value": 800,
          "source": "Renewables"
        },
        {
          "year": 2018,
          "value": 950,
          "source": "Coal"
        },
        {
          "year": 2018,
          "value": 950,
          "source": "Natural Gas"
        },
        {
          "year": 2018,
          "value": 900,
          "source": "Renewables"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "red",
        "blue",
        "green"
      ],
      "domain": {
        "data": "table",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Consumption (in TWh)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Energy Source",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "source"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "value"
              },
              "stroke": {
                "scale": "color",
                "field": "source"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}