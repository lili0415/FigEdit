{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing player statistics from Baseball Reference.",
  "width": 300,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Batting_Average": 0.32,
          "Home_Runs": 45,
          "Team": "Yankees"
        },
        {
          "Batting_Average": 0.28,
          "Home_Runs": 30,
          "Team": "Red Sox"
        },
        {
          "Batting_Average": 0.305,
          "Home_Runs": 25,
          "Team": "Dodgers"
        },
        {
          "Batting_Average": 0.29,
          "Home_Runs": 40,
          "Team": "Giants"
        },
        {
          "Batting_Average": 0.275,
          "Home_Runs": 35,
          "Team": "Cubs"
        },
        {
          "Batting_Average": 0.31,
          "Home_Runs": 50,
          "Team": "Astros"
        },
        {
          "Batting_Average": 0.3,
          "Home_Runs": 28,
          "Team": "Cardinals"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        0.265,
        0.32
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Home_Runs"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Team"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd",
        "#8c564b",
        "#e377c2",
        "#7f7f7f"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Batting Average"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Home Runs"
    }
  ],
  "legends": [
    {
      "scale": "color",
      "title": "Team"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Batting_Average"
          },
          "y": {
            "scale": "y",
            "field": "Home_Runs"
          },
          "fill": {
            "scale": "color",
            "field": "Team"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}