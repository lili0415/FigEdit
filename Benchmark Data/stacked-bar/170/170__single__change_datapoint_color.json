{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing energy consumption by source across different sectors.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Residential",
          "series": "Coal",
          "value": 120
        },
        {
          "category": "Residential",
          "series": "Natural Gas",
          "value": 300
        },
        {
          "category": "Residential",
          "series": "Renewables",
          "value": 180
        },
        {
          "category": "Commercial",
          "series": "Coal",
          "value": 90
        },
        {
          "category": "Commercial",
          "series": "Natural Gas",
          "value": 250
        },
        {
          "category": "Commercial",
          "series": "Renewables",
          "value": 120
        },
        {
          "category": "Industrial",
          "series": "Coal",
          "value": 200
        },
        {
          "category": "Industrial",
          "series": "Natural Gas",
          "value": 400
        },
        {
          "category": "Industrial",
          "series": "Renewables",
          "value": 220
        },
        {
          "category": "Transportation",
          "series": "Coal",
          "value": 50
        },
        {
          "category": "Transportation",
          "series": "Natural Gas",
          "value": 150
        },
        {
          "category": "Transportation",
          "series": "Renewables",
          "value": 100
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "purple",
        "#1f77b4",
        "#2ca02c"
      ],
      "domain": [
        "Coal",
        "Natural Gas",
        "Renewables"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Sector"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Consumption (in TWh)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Energy Source",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "value",
            "offset": 0
          },
          "y2": {
            "scale": "y",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='Residential'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}