{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions from US Census ACS data.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "White",
          "value": 60
        },
        {
          "category": "Black or African American",
          "value": 13
        },
        {
          "category": "Asian",
          "value": 6
        },
        {
          "category": "Hispanic or Latino",
          "value": 18
        },
        {
          "category": "Other",
          "value": 3
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#FF5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Race/Ethnicity",
      "orient": "right"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  }
}