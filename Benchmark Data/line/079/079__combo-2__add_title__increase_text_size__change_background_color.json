{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy consumption trends by source.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "energy_data",
      "values": [
        {
          "year": 2010,
          "source": "Coal",
          "consumption": 20.5
        },
        {
          "year": 2010,
          "source": "Natural Gas",
          "consumption": 25.3
        },
        {
          "year": 2010,
          "source": "Renewables",
          "consumption": 10.2
        },
        {
          "year": 2015,
          "source": "Coal",
          "consumption": 18.7
        },
        {
          "year": 2015,
          "source": "Natural Gas",
          "consumption": 28.1
        },
        {
          "year": 2015,
          "source": "Renewables",
          "consumption": 15.4
        },
        {
          "year": 2020,
          "source": "Coal",
          "consumption": 15.2
        },
        {
          "year": 2020,
          "source": "Natural Gas",
          "consumption": 30.8
        },
        {
          "year": 2020,
          "source": "Renewables",
          "consumption": 22.1
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "energy_data",
        "field": "consumption"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "energy_data",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "labelFontSize": 14,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Consumption (Quadrillion BTUs)",
      "labelFontSize": 14,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Energy Source",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "energy_data",
          "groupby": "source"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "consumption"
              },
              "stroke": {
                "scale": "color",
                "field": "source"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}