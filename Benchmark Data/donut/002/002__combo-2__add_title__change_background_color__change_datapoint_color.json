{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing sales distribution by genre in video games.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Action",
          "sales": 35
        },
        {
          "genre": "Sports",
          "sales": 25
        },
        {
          "genre": "Shooter",
          "sales": 20
        },
        {
          "genre": "Role-Playing",
          "sales": 15
        },
        {
          "genre": "Adventure",
          "sales": 5
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": {
        "scheme": "category20",
        "extent": [
          0,
          1
        ]
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "genre"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "fill": [
            {
              "test": "datum.genre === 'Sports'",
              "value": "#0000ff"
            },
            {
              "scale": "color",
              "field": "genre"
            }
          ]
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "background": "#fff5e6"
}