{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing proportions of sales categories.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "innerRadius",
      "value": 100
    },
    {
      "name": "outerRadius",
      "value": 150
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Grocery",
          "value": 45
        },
        {
          "category": "Pharmacy",
          "value": 30
        },
        {
          "category": "Electronics",
          "value": 15
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.283185307179586,
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "outerRadius"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ]
}