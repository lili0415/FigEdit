{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing player statistics from Basketball Reference.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Points_Per_Game": 25.4,
          "Rebounds_Per_Game": 10.2,
          "Position": "Forward"
        },
        {
          "Points_Per_Game": 30.1,
          "Rebounds_Per_Game": 8.5,
          "Position": "Guard"
        },
        {
          "Points_Per_Game": 18.7,
          "Rebounds_Per_Game": 12.1,
          "Position": "Center"
        },
        {
          "Points_Per_Game": 22.3,
          "Rebounds_Per_Game": 7.8,
          "Position": "Forward"
        },
        {
          "Points_Per_Game": 15.6,
          "Rebounds_Per_Game": 9.4,
          "Position": "Center"
        },
        {
          "Points_Per_Game": 27.8,
          "Rebounds_Per_Game": 6.3,
          "Position": "Guard"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        15.6,
        30.1
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Rebounds_Per_Game"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": [
        "#e41a1c",
        "#377eb8",
        "#4daf4a"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Points Per Game"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Rebounds Per Game"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Points_Per_Game"
          },
          "y": {
            "scale": "y",
            "field": "Rebounds_Per_Game"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ]
}