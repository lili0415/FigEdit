{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing the relationship between age and campaign contacts, with job type as the color series.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "age": 25,
          "campaign": 3,
          "job": "admin"
        },
        {
          "age": 35,
          "campaign": 1,
          "job": "technician"
        },
        {
          "age": 50,
          "campaign": 2,
          "job": "management"
        },
        {
          "age": 28,
          "campaign": 4,
          "job": "blue-collar"
        },
        {
          "age": 42,
          "campaign": 1,
          "job": "services"
        },
        {
          "age": 30,
          "campaign": 3,
          "job": "admin"
        },
        {
          "age": 45,
          "campaign": 2,
          "job": "entrepreneur"
        },
        {
          "age": 38,
          "campaign": 5,
          "job": "technician"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        25,
        28,
        30,
        35,
        38,
        42,
        45,
        50
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "campaign"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "job"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Age"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Number of Campaign Contacts"
    }
  ],
  "legends": [
    {
      "scale": "color",
      "title": "Job Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "age"
          },
          "y": {
            "scale": "y",
            "field": "campaign"
          },
          "fill": {
            "scale": "color",
            "field": "job"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}