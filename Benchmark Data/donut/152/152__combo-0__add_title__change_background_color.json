{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions for Mercari Price Suggestion.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "value": 120
        },
        {
          "category": "Home Appliances",
          "value": 90
        },
        {
          "category": "Fashion",
          "value": 150
        },
        {
          "category": "Toys",
          "value": 70
        },
        {
          "category": "Beauty",
          "value": 110
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.283185307179586
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Categories",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "background": "#fff5e6"
}