{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing transaction amounts for different classes in the Credit Card Fraud Detection dataset.",
  "width": 500,
  "padding": 5,
  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 2"
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "transactions",
      "values": [
        {
          "Class": "Legitimate",
          "Transaction Amount": 50
        },
        {
          "Class": "Legitimate",
          "Transaction Amount": 100
        },
        {
          "Class": "Legitimate",
          "Transaction Amount": 150
        },
        {
          "Class": "Legitimate",
          "Transaction Amount": 200
        },
        {
          "Class": "Legitimate",
          "Transaction Amount": 250
        },
        {
          "Class": "Legitimate",
          "Transaction Amount": 300
        },
        {
          "Class": "Fraudulent",
          "Transaction Amount": 5
        },
        {
          "Class": "Fraudulent",
          "Transaction Amount": 10
        },
        {
          "Class": "Fraudulent",
          "Transaction Amount": 15
        },
        {
          "Class": "Fraudulent",
          "Transaction Amount": 20
        },
        {
          "Class": "Fraudulent",
          "Transaction Amount": 25
        },
        {
          "Class": "Fraudulent",
          "Transaction Amount": 30
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Class != null && datum['Transaction Amount'] != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "transactions",
      "transform": [
        {
          "type": "kde",
          "field": "Transaction Amount",
          "groupby": [
            "Class"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "transactions",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Class"
          ],
          "fields": [
            "Transaction Amount",
            "Transaction Amount",
            "Transaction Amount"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "transactions",
        "field": "Class"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "transactions",
        "field": "Transaction Amount"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "transactions",
        "field": "Class"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Class"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Class",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Class === parent.Class"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Class"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}