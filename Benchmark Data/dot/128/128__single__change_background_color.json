{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing loan amounts for different property areas.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Property_Area": "Urban",
          "LoanAmount": 150
        },
        {
          "Property_Area": "Urban",
          "LoanAmount": 200
        },
        {
          "Property_Area": "Urban",
          "LoanAmount": 180
        },
        {
          "Property_Area": "Semiurban",
          "LoanAmount": 130
        },
        {
          "Property_Area": "Semiurban",
          "LoanAmount": 170
        },
        {
          "Property_Area": "Semiurban",
          "LoanAmount": 160
        },
        {
          "Property_Area": "Rural",
          "LoanAmount": 120
        },
        {
          "Property_Area": "Rural",
          "LoanAmount": 140
        },
        {
          "Property_Area": "Rural",
          "LoanAmount": 110
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Property_Area"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "LoanAmount"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Property Area"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Loan Amount (in thousands)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Property_Area"
          },
          "y": {
            "scale": "y",
            "field": "LoanAmount"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}