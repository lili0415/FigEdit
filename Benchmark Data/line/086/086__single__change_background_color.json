{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing Netflix stock price trends over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01-01",
          "price": 597.37,
          "series": "Open"
        },
        {
          "date": "2022-01-01",
          "price": 602.44,
          "series": "Close"
        },
        {
          "date": "2022-02-01",
          "price": 458.0,
          "series": "Open"
        },
        {
          "date": "2022-02-01",
          "price": 460.08,
          "series": "Close"
        },
        {
          "date": "2022-03-01",
          "price": 375.0,
          "series": "Open"
        },
        {
          "date": "2022-03-01",
          "price": 380.32,
          "series": "Close"
        },
        {
          "date": "2022-04-01",
          "price": 348.0,
          "series": "Open"
        },
        {
          "date": "2022-04-01",
          "price": 345.23,
          "series": "Close"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "interpolate": {
                "value": "linear"
              },
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ]
}