{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing forest fire data.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Temperature": 22.3,
          "Humidity": 40,
          "Month": "Aug"
        },
        {
          "Temperature": 25.1,
          "Humidity": 35,
          "Month": "Sep"
        },
        {
          "Temperature": 19.2,
          "Humidity": 50,
          "Month": "Jul"
        },
        {
          "Temperature": 30.0,
          "Humidity": 20,
          "Month": "Aug"
        },
        {
          "Temperature": 21.5,
          "Humidity": 45,
          "Month": "Jul"
        },
        {
          "Temperature": 28.7,
          "Humidity": 30,
          "Month": "Sep"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": false,
      "domain": [
        19.2,
        30.0
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Humidity"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Month"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Temperature (Â°C)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Humidity (%)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Month",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Temperature"
          },
          "y": {
            "scale": "y",
            "field": "Humidity"
          },
          "fill": {
            "scale": "color",
            "field": "Month"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}