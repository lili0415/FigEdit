{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "prices",
      "values": [
        {
          "date": "2023-06-01",
          "price": 27000,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-06-02",
          "price": 27500,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-06-03",
          "price": 28000,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-06-01",
          "price": 1800,
          "currency": "Ethereum"
        },
        {
          "date": "2023-06-02",
          "price": 1850,
          "currency": "Ethereum"
        },
        {
          "date": "2023-06-03",
          "price": 1900,
          "currency": "Ethereum"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "prices",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "prices",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "prices",
        "field": "currency"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Cryptocurrency",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "prices"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "price"
          },
          "stroke": {
            "scale": "color",
            "field": "currency"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          },
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ]
}