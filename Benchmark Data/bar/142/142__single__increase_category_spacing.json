{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing total goals scored by players in the European Soccer Database.",
  "width": 400,
  "height": 250,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "player": "Lionel Messi",
          "goals": 91
        },
        {
          "player": "Cristiano Ronaldo",
          "goals": 81
        },
        {
          "player": "Robert Lewandowski",
          "goals": 75
        },
        {
          "player": "Kylian Mbappé",
          "goals": 68
        },
        {
          "player": "Zlatan Ibrahimović",
          "goals": 62
        },
        {
          "player": "Luis Suárez",
          "goals": 58
        },
        {
          "player": "Neymar",
          "goals": 54
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "player"
      },
      "range": "width",
      "padding": 0.30000000000000004,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "goals"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Player"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Goals Scored"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "player"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "goals"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.player",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.goals",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.goals"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}