{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Pie chart showing distribution of contact types in a marketing dataset.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "cornerRadius",
      "value": 5
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "contact_type": "Mobile",
          "count": 1500
        },
        {
          "contact_type": "Email",
          "count": 800
        },
        {
          "contact_type": "SMS",
          "count": 500
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "count",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "contact_type"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Contact Type",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "contact_type"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}