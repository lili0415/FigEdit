{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing the distribution of stroke risk factors.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 5,
    "top": 5,
    "right": 5,
    "bottom": 5
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Hypertension",
          "value": 45
        },
        {
          "category": "Heart Disease",
          "value": 30
        },
        {
          "category": "Smoking",
          "value": 50
        },
        {
          "category": "Obesity",
          "value": 25
        },
        {
          "category": "Diabetes",
          "value": 40
        },
        {
          "category": "Physical Inactivity",
          "value": 35
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Risk Factors",
      "orient": "right",
      "symbolType": "circle"
    }
  ]
}