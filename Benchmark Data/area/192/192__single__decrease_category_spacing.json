{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing unemployment rates over months for two age groups.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "Jan",
          "age_group": "16-24",
          "unemployment_rate": 12.5
        },
        {
          "month": "Feb",
          "age_group": "16-24",
          "unemployment_rate": 12.0
        },
        {
          "month": "Mar",
          "age_group": "16-24",
          "unemployment_rate": 11.8
        },
        {
          "month": "Apr",
          "age_group": "16-24",
          "unemployment_rate": 11.5
        },
        {
          "month": "May",
          "age_group": "16-24",
          "unemployment_rate": 11.0
        },
        {
          "month": "Jan",
          "age_group": "25-54",
          "unemployment_rate": 5.0
        },
        {
          "month": "Feb",
          "age_group": "25-54",
          "unemployment_rate": 4.8
        },
        {
          "month": "Mar",
          "age_group": "25-54",
          "unemployment_rate": 4.6
        },
        {
          "month": "Apr",
          "age_group": "25-54",
          "unemployment_rate": 4.5
        },
        {
          "month": "May",
          "age_group": "25-54",
          "unemployment_rate": 4.3
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "padding": 0.9,
      "domain": {
        "data": "table",
        "field": "month"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "unemployment_rate"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "age_group"
      },
      "range": [
        "steelblue",
        "orange"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Unemployment Rate (%)"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "age_group"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "month"
              },
              "y": {
                "scale": "yscale",
                "field": "unemployment_rate"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "age_group"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Age Group",
      "orient": "right"
    }
  ]
}