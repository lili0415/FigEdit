{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing COVID-19 cases over time for multiple countries.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-03-01",
          "cases": 50,
          "country": "USA"
        },
        {
          "date": "2020-03-02",
          "cases": 80,
          "country": "USA"
        },
        {
          "date": "2020-03-03",
          "cases": 150,
          "country": "USA"
        },
        {
          "date": "2020-03-01",
          "cases": 30,
          "country": "Italy"
        },
        {
          "date": "2020-03-02",
          "cases": 60,
          "country": "Italy"
        },
        {
          "date": "2020-03-03",
          "cases": 120,
          "country": "Italy"
        },
        {
          "date": "2020-03-01",
          "cases": 20,
          "country": "Spain"
        },
        {
          "date": "2020-03-02",
          "cases": 40,
          "country": "Spain"
        },
        {
          "date": "2020-03-03",
          "cases": 100,
          "country": "Spain"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "country"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Cases"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Country",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "country"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "cases"
              },
              "stroke": {
                "scale": "color",
                "field": "country"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ]
}