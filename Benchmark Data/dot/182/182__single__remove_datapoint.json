{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing individual product prices for categories in the Mercari Price Suggestion dataset.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Electronics",
          "Price": 120
        },
        {
          "Category": "Electronics",
          "Price": 150
        },
        {
          "Category": "Electronics",
          "Price": 95
        },
        {
          "Category": "Clothing",
          "Price": 45
        },
        {
          "Category": "Clothing",
          "Price": 60
        },
        {
          "Category": "Clothing",
          "Price": 75
        },
        {
          "Category": "Home Goods",
          "Price": 200
        },
        {
          "Category": "Home Goods",
          "Price": 180
        },
        {
          "Category": "Home Goods",
          "Price": 220
        },
        {
          "Category": "Toys",
          "Price": 35
        },
        {
          "Category": "Toys",
          "Price": 50
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Price"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Price ($)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Price"
          },
          "size": {
            "value": 50
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        },
        "update": {
          "opacity": {
            "value": 0.8
          }
        },
        "hover": {
          "opacity": {
            "value": 1
          }
        }
      }
    }
  ]
}