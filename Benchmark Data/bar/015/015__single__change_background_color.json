{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing app categories and their average ratings.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Tools",
          "rating": 4.5
        },
        {
          "category": "Entertainment",
          "rating": 4.2
        },
        {
          "category": "Education",
          "rating": 4.7
        },
        {
          "category": "Health & Fitness",
          "rating": 4.6
        },
        {
          "category": "Lifestyle",
          "rating": 4.3
        },
        {
          "category": "Business",
          "rating": 4.1
        },
        {
          "category": "Finance",
          "rating": 4.4
        },
        {
          "category": "Books & Reference",
          "rating": 4.8
        },
        {
          "category": "Travel & Local",
          "rating": 4.5
        },
        {
          "category": "Shopping",
          "rating": 4.3
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "rating"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "App Categories"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Rating"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "rating"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.rating",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.rating"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}