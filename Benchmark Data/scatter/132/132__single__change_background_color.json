  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        0.2,
        0.9
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "MonthlyIncome"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "SeriousDlqin2yrs"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Debt Ratio"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Monthly Income"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Serious Delinquency in 2 Years",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "DebtRatio"
          },
          "y": {
            "scale": "y",
            "field": "MonthlyIncome"
          },
          "fill": {
            "scale": "color",
            "field": "SeriousDlqin2yrs"
          },
          "size": {
