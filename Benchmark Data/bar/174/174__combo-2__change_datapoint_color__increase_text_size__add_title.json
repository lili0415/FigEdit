{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing crop production by type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "crop": "Corn",
          "production": 375
        },
        {
          "crop": "Wheat",
          "production": 280
        },
        {
          "crop": "Soybeans",
          "production": 320
        },
        {
          "crop": "Rice",
          "production": 150
        },
        {
          "crop": "Cotton",
          "production": 90
        },
        {
          "crop": "Barley",
          "production": 110
        },
        {
          "crop": "Sorghum",
          "production": 75
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "crop"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "production"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Crop Type",
      "labelFontSize": 14
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Production (in millions)",
      "labelFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "crop"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "production"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['crop']==='Soybeans'",
              "value": "#2ca02c"
            },
            {
              "test": "datum['crop']==='Corn'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum['crop']==='Soybeans'",
              "value": "#2ca02c"
            },
            {
              "test": "datum['crop']==='Corn'",
              "value": "#ff7f0e"
            },
            {
              "test": "datum.crop === 'Corn'",
              "value": "green"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  }
}