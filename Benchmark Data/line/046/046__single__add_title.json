{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing Bitcoin closing prices and trading volume over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "middle",
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 16500,
          "volume": 350000000
        },
        {
          "date": "2023-01-02",
          "price": 16750,
          "volume": 370000000
        },
        {
          "date": "2023-01-03",
          "price": 17000,
          "volume": 400000000
        },
        {
          "date": "2023-01-04",
          "price": 17250,
          "volume": 420000000
        },
        {
          "date": "2023-01-05",
          "price": 17500,
          "volume": 450000000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yPrice",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "yVolume",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "volume"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": [
        "Price",
        "Volume"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yPrice",
      "title": "Price (USD)"
    },
    {
      "orient": "right",
      "scale": "yVolume",
      "title": "Volume (USD)",
      "offset": 10
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Metrics",
      "orient": "top-right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "yPrice",
            "field": "price"
          },
          "stroke": {
            "scale": "color",
            "value": "Price"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    },
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "yVolume",
            "field": "volume"
          },
          "stroke": {
            "scale": "color",
            "value": "Volume"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ]
}