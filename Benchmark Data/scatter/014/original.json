{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Scatter plot showing relationships between question word count and average sentiment score, categorized by question type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Word_Count": 15,
          "Sentiment_Score": 0.65,
          "Question_Type": "Insincere"
        },
        {
          "Word_Count": 8,
          "Sentiment_Score": 0.85,
          "Question_Type": "Sincere"
        },
        {
          "Word_Count": 20,
          "Sentiment_Score": 0.45,
          "Question_Type": "Insincere"
        },
        {
          "Word_Count": 12,
          "Sentiment_Score": 0.75,
          "Question_Type": "Sincere"
        },
        {
          "Word_Count": 18,
          "Sentiment_Score": 0.55,
          "Question_Type": "Insincere"
        },
        {
          "Word_Count": 10,
          "Sentiment_Score": 0.8,
          "Question_Type": "Sincere"
        },
        {
          "Word_Count": 22,
          "Sentiment_Score": 0.4,
          "Question_Type": "Insincere"
        },
        {
          "Word_Count": 14,
          "Sentiment_Score": 0.7,
          "Question_Type": "Sincere"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        8,
        10,
        12,
        14,
        15,
        18,
        20,
        22
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Sentiment_Score"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Question_Type"
      },
      "range": [
        "#e41a1c",
        "#377eb8"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Word Count"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Sentiment Score"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Question Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Word_Count"
          },
          "y": {
            "scale": "y",
            "field": "Sentiment_Score"
          },
          "fill": {
            "scale": "color",
            "field": "Question_Type"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}