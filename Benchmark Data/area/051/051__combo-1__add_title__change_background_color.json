{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "prices",
      "values": [
        {
          "date": "2023-01-01",
          "Bitcoin": 16500,
          "Ethereum": 1200
        },
        {
          "date": "2023-01-02",
          "Bitcoin": 16700,
          "Ethereum": 1230
        },
        {
          "date": "2023-01-03",
          "Bitcoin": 17000,
          "Ethereum": 1250
        },
        {
          "date": "2023-01-04",
          "Bitcoin": 16800,
          "Ethereum": 1240
        },
        {
          "date": "2023-01-05",
          "Bitcoin": 17200,
          "Ethereum": 1270
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "fold",
          "fields": [
            "Bitcoin",
            "Ethereum"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "prices",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "prices",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Bitcoin",
        "Ethereum"
      ],
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "prices"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": "key"
          }
        },
        "update": {}
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Legend",
      "orient": "right"
    }
  ]
}