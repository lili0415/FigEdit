{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing FAO Food Price Index for various food categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Cereals",
          "value": 140
        },
        {
          "category": "Vegetable Oils",
          "value": 125
        },
        {
          "category": "Dairy",
          "value": 110
        },
        {
          "category": "Meat",
          "value": 130
        },
        {
          "category": "Sugar",
          "value": 95
        },
        {
          "category": "Fruits",
          "value": 85
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.0,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Food Categories"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "FAO Food Price Index"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "teal"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}