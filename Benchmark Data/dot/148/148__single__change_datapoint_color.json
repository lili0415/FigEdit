{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing values for categories in the UCI: Heart Disease Dataset.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "Category": "Age",
          "Value": 63
        },
        {
          "Category": "Age",
          "Value": 45
        },
        {
          "Category": "Age",
          "Value": 54
        },
        {
          "Category": "Cholesterol",
          "Value": 233
        },
        {
          "Category": "Cholesterol",
          "Value": 250
        },
        {
          "Category": "Cholesterol",
          "Value": 204
        },
        {
          "Category": "RestingBP",
          "Value": 145
        },
        {
          "Category": "RestingBP",
          "Value": 120
        },
        {
          "Category": "RestingBP",
          "Value": 130
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": {
        "data": "table",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Category"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "Category"
          },
          "y": {
            "scale": "yscale",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "orange"
          },
          "stroke": {
            "value": "black"
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}