{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing sales values for different store types.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "StoreType": "A",
          "Sales": 7500
        },
        {
          "StoreType": "B",
          "Sales": 6300
        },
        {
          "StoreType": "C",
          "Sales": 8900
        },
        {
          "StoreType": "D",
          "Sales": 7100
        },
        {
          "StoreType": "A",
          "Sales": 7700
        },
        {
          "StoreType": "B",
          "Sales": 6200
        },
        {
          "StoreType": "C",
          "Sales": 9100
        },
        {
          "StoreType": "D",
          "Sales": 7000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "StoreType"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Sales"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Store Type"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Sales"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "StoreType"
          },
          "y": {
            "scale": "y",
            "field": "Sales"
          },
          "size": {
            "value": 50
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        },
        "update": {
          "opacity": {
            "value": 1
          }
        },
        "hover": {
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}