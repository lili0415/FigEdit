{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-11-01",
          "Bitcoin": 61000,
          "Ethereum": 4300
        },
        {
          "date": "2021-11-02",
          "Bitcoin": 61500,
          "Ethereum": 4400
        },
        {
          "date": "2021-11-03",
          "Bitcoin": 62000,
          "Ethereum": 4500
        },
        {
          "date": "2021-11-04",
          "Bitcoin": 63000,
          "Ethereum": 4700
        },
        {
          "date": "2021-11-05",
          "Bitcoin": 64000,
          "Ethereum": 4800
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "fields": [
          {
            "data": "table",
            "field": "Bitcoin"
          },
          {
            "data": "table",
            "field": "Ethereum"
          }
        ]
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Bitcoin",
        "Ethereum"
      ],
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": {
              "signal": "datum"
            }
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": {
              "signal": "datum"
            }
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Legend",
      "orient": "right"
    }
  ]
}