{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing COVID-19 case counts by region and case type.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "region": "North America",
          "case_type": "Confirmed",
          "cases": 1200000
        },
        {
          "region": "North America",
          "case_type": "Recovered",
          "cases": 800000
        },
        {
          "region": "North America",
          "case_type": "Deaths",
          "cases": 50000
        },
        {
          "region": "Europe",
          "case_type": "Confirmed",
          "cases": 1500000
        },
        {
          "region": "Europe",
          "case_type": "Recovered",
          "cases": 1000000
        },
        {
          "region": "Europe",
          "case_type": "Deaths",
          "cases": 70000
        },
        {
          "region": "Asia",
          "case_type": "Confirmed",
          "cases": 2000000
        },
        {
          "region": "Asia",
          "case_type": "Recovered",
          "cases": 1500000
        },
        {
          "region": "Asia",
          "case_type": "Deaths",
          "cases": 100000
        },
        {
          "region": "South America",
          "case_type": "Confirmed",
          "cases": 1000000
        },
        {
          "region": "South America",
          "case_type": "Recovered",
          "cases": 700000
        },
        {
          "region": "South America",
          "case_type": "Deaths",
          "cases": 40000
        },
        {
          "region": "Africa",
          "case_type": "Confirmed",
          "cases": 500000
        },
        {
          "region": "Africa",
          "case_type": "Recovered",
          "cases": 300000
        },
        {
          "region": "Africa",
          "case_type": "Deaths",
          "cases": 20000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "region"
          ],
          "sort": {
            "field": "case_type"
          },
          "field": "cases"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "region"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "case_type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Cases",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Case Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "region"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "case_type"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}