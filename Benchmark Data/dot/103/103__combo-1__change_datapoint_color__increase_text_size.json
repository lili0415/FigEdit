{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing transaction values for different customer categories.",
  "width": 300,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "CustomerCategory": "A",
          "TransactionValue": 1200
        },
        {
          "CustomerCategory": "B",
          "TransactionValue": 1500
        },
        {
          "CustomerCategory": "C",
          "TransactionValue": 800
        },
        {
          "CustomerCategory": "D",
          "TransactionValue": 950
        },
        {
          "CustomerCategory": "E",
          "TransactionValue": 1100
        },
        {
          "CustomerCategory": "F",
          "TransactionValue": 1300
        },
        {
          "CustomerCategory": "G",
          "TransactionValue": 1400
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "A",
        "B",
        "C",
        "D",
        "E",
        "F",
        "G"
      ],
      "range": [
        "#1f77b4",
        "#1f77b4",
        "#ff5733",
        "#1f77b4",
        "#1f77b4",
        "#1f77b4",
        "#1f77b4"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Customer Category",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Transaction Value",
      "grid": true,
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "CustomerCategory"
          },
          "y": {
            "scale": "y",
            "field": "TransactionValue"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "field": "CustomerCategory",
            "scale": "color"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}