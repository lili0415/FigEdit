{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing house prices over time for different neighborhoods.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "Year": 2000,
          "Price": 200000,
          "Neighborhood": "A"
        },
        {
          "Year": 2001,
          "Price": 210000,
          "Neighborhood": "A"
        },
        {
          "Year": 2002,
          "Price": 220000,
          "Neighborhood": "A"
        },
        {
          "Year": 2000,
          "Price": 180000,
          "Neighborhood": "B"
        },
        {
          "Year": 2001,
          "Price": 185000,
          "Neighborhood": "B"
        },
        {
          "Year": 2002,
          "Price": 190000,
          "Neighborhood": "B"
        },
        {
          "Year": 2000,
          "Price": 240000,
          "Neighborhood": "C"
        },
        {
          "Year": 2001,
          "Price": 250000,
          "Neighborhood": "C"
        },
        {
          "Year": 2002,
          "Price": 260000,
          "Neighborhood": "C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "Price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "Neighborhood"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Neighborhood",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "Neighborhood"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "Year"
              },
              "y": {
                "scale": "y",
                "field": "Price"
              },
              "stroke": {
                "scale": "color",
                "field": "Neighborhood"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}