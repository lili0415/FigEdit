{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing transaction amount vs. transaction time with fraud status as color.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "TransactionAmt": 200.5,
          "TransactionTime": 120,
          "Fraud": "Yes"
        },
        {
          "TransactionAmt": 50.0,
          "TransactionTime": 300,
          "Fraud": "No"
        },
        {
          "TransactionAmt": 120.75,
          "TransactionTime": 180,
          "Fraud": "No"
        },
        {
          "TransactionAmt": 500.0,
          "TransactionTime": 60,
          "Fraud": "Yes"
        },
        {
          "TransactionAmt": 75.25,
          "TransactionTime": 240,
          "Fraud": "No"
        },
        {
          "TransactionAmt": 300.0,
          "TransactionTime": 90,
          "Fraud": "Yes"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        60.0,
        300.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "TransactionAmt"
      },
      "range": "height",
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Fraud"
      },
      "range": [
        "#FF0000",
        "#00FF00"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Transaction Time (seconds)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Transaction Amount ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Fraud Status",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "TransactionTime"
          },
          "y": {
            "scale": "y",
            "field": "TransactionAmt"
          },
          "fill": {
            "scale": "color",
            "field": "Fraud"
          },
          "size": {
            "value": 100
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}