{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing global temperature anomalies over years for multiple series.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "temperature",
      "values": [
        {
          "year": 1880,
          "anomaly": -0.12,
          "series": "Global"
        },
        {
          "year": 1880,
          "anomaly": -0.08,
          "series": "Northern Hemisphere"
        },
        {
          "year": 1880,
          "anomaly": -0.16,
          "series": "Southern Hemisphere"
        },
        {
          "year": 1900,
          "anomaly": -0.11,
          "series": "Global"
        },
        {
          "year": 1900,
          "anomaly": -0.07,
          "series": "Northern Hemisphere"
        },
        {
          "year": 1900,
          "anomaly": -0.15,
          "series": "Southern Hemisphere"
        },
        {
          "year": 1950,
          "anomaly": 0.02,
          "series": "Global"
        },
        {
          "year": 1950,
          "anomaly": 0.05,
          "series": "Northern Hemisphere"
        },
        {
          "year": 1950,
          "anomaly": -0.01,
          "series": "Southern Hemisphere"
        },
        {
          "year": 2000,
          "anomaly": 0.72,
          "series": "Global"
        },
        {
          "year": 2000,
          "anomaly": 0.85,
          "series": "Northern Hemisphere"
        },
        {
          "year": 2000,
          "anomaly": 0.59,
          "series": "Southern Hemisphere"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        1880,
        1900,
        1950,
        2000
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "temperature",
        "field": "anomaly"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "temperature",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16,
      "tickSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)",
      "labelFontSize": 16,
      "tickSize": 12
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Hemisphere",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "temperature",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "anomaly"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}