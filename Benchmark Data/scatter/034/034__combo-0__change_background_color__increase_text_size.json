{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing FIFA 19 player statistics.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Overall": 85,
          "Potential": 90,
          "Position": "Forward"
        },
        {
          "Overall": 78,
          "Potential": 83,
          "Position": "Midfielder"
        },
        {
          "Overall": 92,
          "Potential": 94,
          "Position": "Forward"
        },
        {
          "Overall": 88,
          "Potential": 91,
          "Position": "Defender"
        },
        {
          "Overall": 80,
          "Potential": 85,
          "Position": "Goalkeeper"
        },
        {
          "Overall": 75,
          "Potential": 80,
          "Position": "Midfielder"
        },
        {
          "Overall": 89,
          "Potential": 93,
          "Position": "Forward"
        },
        {
          "Overall": 84,
          "Potential": 88,
          "Position": "Defender"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        75,
        78,
        80,
        84,
        85,
        88,
        89,
        92
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Potential"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Overall Rating",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Potential Rating",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Overall"
          },
          "y": {
            "scale": "y",
            "field": "Potential"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}