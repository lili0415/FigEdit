{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing the number of crimes over time in Chicago, segmented by crime type.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "crime_data",
      "values": [
        {
          "date": "2023-01",
          "crime_type": "Theft",
          "count": 1200
        },
        {
          "date": "2023-01",
          "crime_type": "Assault",
          "count": 800
        },
        {
          "date": "2023-02",
          "crime_type": "Theft",
          "count": 1100
        },
        {
          "date": "2023-02",
          "crime_type": "Assault",
          "count": 850
        },
        {
          "date": "2023-03",
          "crime_type": "Theft",
          "count": 1300
        },
        {
          "date": "2023-03",
          "crime_type": "Assault",
          "count": 900
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "crime_data",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "crime_data",
        "field": "count"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "crime_data",
        "field": "crime_type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Crimes"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Crime Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "crime_data",
          "groupby": "crime_type"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "count"
              },
              "stroke": {
                "scale": "color",
                "field": "crime_type"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}