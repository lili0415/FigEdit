{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing the distribution of tumor radius for malignant and benign cases.",
  "width": 500,
  "padding": 5,
  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "trim",
      "value": true,
      "bind": {
        "input": "checkbox"
      }
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "breast_cancer",
      "values": [
        {
          "Diagnosis": "Malignant",
          "Radius Mean": 17.6
        },
        {
          "Diagnosis": "Malignant",
          "Radius Mean": 20.3
        },
        {
          "Diagnosis": "Malignant",
          "Radius Mean": 19.2
        },
        {
          "Diagnosis": "Malignant",
          "Radius Mean": 22.1
        },
        {
          "Diagnosis": "Malignant",
          "Radius Mean": 18.9
        },
        {
          "Diagnosis": "Benign",
          "Radius Mean": 12.3
        },
        {
          "Diagnosis": "Benign",
          "Radius Mean": 13.5
        },
        {
          "Diagnosis": "Benign",
          "Radius Mean": 14.1
        },
        {
          "Diagnosis": "Benign",
          "Radius Mean": 11.8
        },
        {
          "Diagnosis": "Benign",
          "Radius Mean": 10.9
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Diagnosis != null && datum['Radius Mean'] != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "breast_cancer",
      "transform": [
        {
          "type": "kde",
          "field": "Radius Mean",
          "groupby": [
            "Diagnosis"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          },
          "extent": {
            "signal": "trim ? null : [10, 25]"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "breast_cancer",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Diagnosis"
          ],
          "fields": [
            "Radius Mean",
            "Radius Mean",
            "Radius Mean"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "breast_cancer",
        "field": "Diagnosis"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "breast_cancer",
        "field": "Radius Mean"
      },
      "domainMin": 10,
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "breast_cancer",
        "field": "Diagnosis"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Diagnosis"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Diagnosis",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Diagnosis === parent.Diagnosis"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Diagnosis"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}