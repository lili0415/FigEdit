{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing NYC Airbnb average prices over time for different boroughs.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01",
          "price": 150,
          "borough": "Manhattan"
        },
        {
          "date": "2023-02",
          "price": 155,
          "borough": "Manhattan"
        },
        {
          "date": "2023-03",
          "price": 160,
          "borough": "Manhattan"
        },
        {
          "date": "2023-01",
          "price": 90,
          "borough": "Brooklyn"
        },
        {
          "date": "2023-02",
          "price": 95,
          "borough": "Brooklyn"
        },
        {
          "date": "2023-03",
          "price": 100,
          "borough": "Brooklyn"
        },
        {
          "date": "2023-01",
          "price": 70,
          "borough": "Queens"
        },
        {
          "date": "2023-02",
          "price": 75,
          "borough": "Queens"
        },
        {
          "date": "2023-03",
          "price": 80,
          "borough": "Queens"
        },
        {
          "date": "2023-01",
          "price": 120,
          "borough": "Staten Island"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "borough"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Average Price ($)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Borough",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "borough"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "borough"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}