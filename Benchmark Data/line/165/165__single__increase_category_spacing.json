{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing house prices over time for different neighborhoods.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "Year": 2005,
          "Price": 200000,
          "Neighborhood": "A"
        },
        {
          "Year": 2006,
          "Price": 210000,
          "Neighborhood": "A"
        },
        {
          "Year": 2007,
          "Price": 230000,
          "Neighborhood": "A"
        },
        {
          "Year": 2005,
          "Price": 180000,
          "Neighborhood": "B"
        },
        {
          "Year": 2006,
          "Price": 190000,
          "Neighborhood": "B"
        },
        {
          "Year": 2007,
          "Price": 200000,
          "Neighborhood": "B"
        },
        {
          "Year": 2005,
          "Price": 220000,
          "Neighborhood": "C"
        },
        {
          "Year": 2006,
          "Price": 240000,
          "Neighborhood": "C"
        },
        {
          "Year": 2007,
          "Price": 250000,
          "Neighborhood": "C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2005,
        2006,
        2007
      ],
      "padding": 0.9
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "Price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "Neighborhood"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Neighborhood",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "Neighborhood"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "Year"
              },
              "y": {
                "scale": "y",
                "field": "Price"
              },
              "stroke": {
                "scale": "color",
                "field": "Neighborhood"
              },
              "strokeWidth": {
                "value": 2
              }
            }
          }
        }
      ]
    }
  ]
}