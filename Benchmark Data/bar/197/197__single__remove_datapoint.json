{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average happiness scores by country.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "country": "Finland",
          "happiness_score": 7.84
        },
        {
          "country": "Denmark",
          "happiness_score": 7.62
        },
        {
          "country": "Switzerland",
          "happiness_score": 7.57
        },
        {
          "country": "Iceland",
          "happiness_score": 7.55
        },
        {
          "country": "Netherlands",
          "happiness_score": 7.46
        },
        {
          "country": "Norway",
          "happiness_score": 7.39
        },
        {
          "country": "Sweden",
          "happiness_score": 7.36
        },
        {
          "country": "Luxembourg",
          "happiness_score": 7.32
        },
        {
          "country": "New Zealand",
          "happiness_score": 7.27
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "country"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "happiness_score"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Country"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Happiness Score"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "country"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "happiness_score"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.country",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.happiness_score",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.happiness_score"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}