{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing global carbon emissions over years.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "emissions",
      "values": [
        {
          "year": 2000,
          "coal": 25.3,
          "oil": 15.7,
          "gas": 12.4
        },
        {
          "year": 2005,
          "coal": 27.8,
          "oil": 16.2,
          "gas": 13.1
        },
        {
          "year": 2010,
          "coal": 30.1,
          "oil": 17.5,
          "gas": 14.8
        },
        {
          "year": 2015,
          "coal": 32.4,
          "oil": 18.2,
          "gas": 15.9
        },
        {
          "year": 2020,
          "coal": 31.7,
          "oil": 17.8,
          "gas": 15.4
        }
      ],
      "transform": [
        {
          "type": "fold",
          "fields": [
            "coal",
            "gas",
            "oil"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "emissions",
        "field": "value"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Emissions (GtCO2)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "emissions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "coal"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "darkred"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    },
    {
      "type": "area",
      "from": {
        "data": "emissions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "oil"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "orange"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    },
    {
      "type": "area",
      "from": {
        "data": "emissions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "gas"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}