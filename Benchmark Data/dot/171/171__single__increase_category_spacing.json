{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing survey responses for different categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "survey_data",
      "values": [
        {
          "Category": "Support for Policy A",
          "Value": 65
        },
        {
          "Category": "Support for Policy B",
          "Value": 45
        },
        {
          "Category": "Support for Policy C",
          "Value": 55
        },
        {
          "Category": "Support for Policy D",
          "Value": 70
        },
        {
          "Category": "Support for Policy E",
          "Value": 50
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": {
        "data": "survey_data",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.6
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "survey_data",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "bottom",
      "title": "Survey Categories"
    },
    {
      "scale": "yscale",
      "orient": "left",
      "title": "Support Percentage"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "survey_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "Category"
          },
          "y": {
            "scale": "yscale",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}