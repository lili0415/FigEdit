{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Scatter plot of US Economic Indicators.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "GDP": 21.5,
          "UnemploymentRate": 5.1,
          "Region": "North America"
        },
        {
          "GDP": 15.3,
          "UnemploymentRate": 6.2,
          "Region": "Europe"
        },
        {
          "GDP": 11.4,
          "UnemploymentRate": 4.8,
          "Region": "Asia"
        },
        {
          "GDP": 2.7,
          "UnemploymentRate": 7.5,
          "Region": "Africa"
        },
        {
          "GDP": 3.6,
          "UnemploymentRate": 6.0,
          "Region": "South America"
        },
        {
          "GDP": 1.2,
          "UnemploymentRate": 5.8,
          "Region": "Australia"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        1.2,
        21.5
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "UnemploymentRate"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Region"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd",
        "#8c564b"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "GDP (in trillions USD)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Unemployment Rate (%)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "GDP"
          },
          "y": {
            "scale": "y",
            "field": "UnemploymentRate"
          },
          "fill": {
            "scale": "color",
            "field": "Region"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}