{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature and humidity trends over time in Delhi.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-06-01",
          "temperature": 35,
          "humidity": 60
        },
        {
          "date": "2023-06-02",
          "temperature": 36,
          "humidity": 58
        },
        {
          "date": "2023-06-03",
          "temperature": 34,
          "humidity": 65
        },
        {
          "date": "2023-06-04",
          "temperature": 33,
          "humidity": 67
        },
        {
          "date": "2023-06-05",
          "temperature": 37,
          "humidity": 55
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "y2",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "humidity"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange"
      ],
      "domain": [
        "Temperature",
        "Humidity"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature (Â°C)",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "right",
      "scale": "y2",
      "title": "Humidity (%)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Metrics",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "temperature"
          },
          "stroke": {
            "scale": "color",
            "value": "steelblue"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    },
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y2",
            "field": "humidity"
          },
          "stroke": {
            "scale": "color",
            "value": "orange"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}