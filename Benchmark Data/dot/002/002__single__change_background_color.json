{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing values for categories as individual points along an axis.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Country": "United States",
          "GDP_Per_Capita": 63000
        },
        {
          "Country": "Germany",
          "GDP_Per_Capita": 48000
        },
        {
          "Country": "India",
          "GDP_Per_Capita": 2100
        },
        {
          "Country": "China",
          "GDP_Per_Capita": 12000
        },
        {
          "Country": "Brazil",
          "GDP_Per_Capita": 8700
        },
        {
          "Country": "Japan",
          "GDP_Per_Capita": 41000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Country"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "GDP_Per_Capita"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Country"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "GDP Per Capita (USD)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Country"
          },
          "y": {
            "scale": "y",
            "field": "GDP_Per_Capita"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}