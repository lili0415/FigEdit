{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing review categories and their respective average ratings.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "reviews",
      "values": [
        {
          "category": "Electronics",
          "value": 4.3
        },
        {
          "category": "Books",
          "value": 4.7
        },
        {
          "category": "Clothing",
          "value": 3.8
        },
        {
          "category": "Home & Kitchen",
          "value": 4.5
        },
        {
          "category": "Toys",
          "value": 4.1
        },
        {
          "category": "Beauty",
          "value": 4.6
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": {
        "data": "reviews",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "reviews",
        "field": "value"
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "bottom",
      "title": "Category",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "yscale",
      "orient": "left",
      "title": "Average Rating",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "reviews"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}