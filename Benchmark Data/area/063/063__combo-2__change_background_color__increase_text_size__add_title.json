{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing COVID-19 cases over time for multiple regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-03-01",
          "region": "North America",
          "cases": 500
        },
        {
          "date": "2020-03-01",
          "region": "Europe",
          "cases": 300
        },
        {
          "date": "2020-03-01",
          "region": "Asia",
          "cases": 800
        },
        {
          "date": "2020-03-15",
          "region": "North America",
          "cases": 1500
        },
        {
          "date": "2020-03-15",
          "region": "Europe",
          "cases": 1200
        },
        {
          "date": "2020-03-15",
          "region": "Asia",
          "cases": 2000
        },
        {
          "date": "2020-03-30",
          "region": "North America",
          "cases": 5000
        },
        {
          "date": "2020-03-30",
          "region": "Europe",
          "cases": 4000
        },
        {
          "date": "2020-03-30",
          "region": "Asia",
          "cases": 6000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "filter",
          "expr": "datum['region']=='North America' || datum['region']=='Europe'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": {
        "scheme": "category10"
      },
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "COVID-19 Cases",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "cases"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "region"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}