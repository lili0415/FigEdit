{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing climate data trends.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "1960s",
          "series": "Temperature",
          "value": 15
        },
        {
          "category": "1960s",
          "series": "Precipitation",
          "value": 20
        },
        {
          "category": "1970s",
          "series": "Temperature",
          "value": 16
        },
        {
          "category": "1970s",
          "series": "Precipitation",
          "value": 18
        },
        {
          "category": "1980s",
          "series": "Temperature",
          "value": 17
        },
        {
          "category": "1980s",
          "series": "Precipitation",
          "value": 22
        },
        {
          "category": "1990s",
          "series": "Temperature",
          "value": 18
        },
        {
          "category": "1990s",
          "series": "Precipitation",
          "value": 24
        },
        {
          "category": "2000s",
          "series": "Temperature",
          "value": 19
        },
        {
          "category": "2000s",
          "series": "Precipitation",
          "value": 26
        },
        {
          "category": "2010s",
          "series": "Temperature",
          "value": 20
        },
        {
          "category": "2010s",
          "series": "Precipitation",
          "value": 28
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Decade"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Climate Metrics",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}