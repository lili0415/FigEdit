{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing mortality rate distributions by age group.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 20,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "mortality_data",
      "values": [
        {
          "Age Group": "0-4",
          "Mortality Rate": 120
        },
        {
          "Age Group": "0-4",
          "Mortality Rate": 130
        },
        {
          "Age Group": "0-4",
          "Mortality Rate": 110
        },
        {
          "Age Group": "5-14",
          "Mortality Rate": 50
        },
        {
          "Age Group": "5-14",
          "Mortality Rate": 60
        },
        {
          "Age Group": "5-14",
          "Mortality Rate": 55
        },
        {
          "Age Group": "15-24",
          "Mortality Rate": 90
        },
        {
          "Age Group": "15-24",
          "Mortality Rate": 85
        },
        {
          "Age Group": "15-24",
          "Mortality Rate": 95
        },
        {
          "Age Group": "25-34",
          "Mortality Rate": 70
        },
        {
          "Age Group": "25-34",
          "Mortality Rate": 75
        },
        {
          "Age Group": "25-34",
          "Mortality Rate": 65
        }
      ]
    },
    {
      "name": "density",
      "source": "mortality_data",
      "transform": [
        {
          "type": "kde",
          "field": "Mortality Rate",
          "groupby": [
            "Age Group"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "mortality_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Age Group"
          ],
          "fields": [
            "Mortality Rate",
            "Mortality Rate",
            "Mortality Rate"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "mortality_data",
        "field": "Age Group"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "mortality_data",
        "field": "Mortality Rate"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "mortality_data",
        "field": "Age Group"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1,
      "title": "Mortality Rate"
    },
    {
      "orient": "left",
      "scale": "layout",
      "zindex": 1,
      "title": "Age Group"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Age Group"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Age Group",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Age Group'] === parent['Age Group']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Age Group"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}