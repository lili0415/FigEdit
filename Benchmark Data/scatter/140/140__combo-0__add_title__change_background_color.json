{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing age vs hours worked per week, colored by education level.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "age": 25,
          "hours_per_week": 40,
          "education": "Bachelors"
        },
        {
          "age": 30,
          "hours_per_week": 50,
          "education": "Masters"
        },
        {
          "age": 45,
          "hours_per_week": 35,
          "education": "High School"
        },
        {
          "age": 50,
          "hours_per_week": 60,
          "education": "Doctorate"
        },
        {
          "age": 28,
          "hours_per_week": 45,
          "education": "Bachelors"
        },
        {
          "age": 35,
          "hours_per_week": 55,
          "education": "Masters"
        },
        {
          "age": 40,
          "hours_per_week": 30,
          "education": "High School"
        },
        {
          "age": 60,
          "hours_per_week": 25,
          "education": "Doctorate"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        25,
        28,
        30,
        35,
        40,
        45,
        50,
        60
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "hours_per_week"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "education"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Age",
      "grid": true
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Hours Worked per Week",
      "grid": true
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Education Level",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "age"
          },
          "y": {
            "scale": "y",
            "field": "hours_per_week"
          },
          "fill": {
            "scale": "color",
            "field": "education"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "tooltip": {
            "signal": "datum"
          }
        }
      }
    }
  ]
}