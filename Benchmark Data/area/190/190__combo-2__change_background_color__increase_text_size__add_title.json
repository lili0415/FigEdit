{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing Bitcoin closing prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01-01",
          "close": 47000
        },
        {
          "date": "2022-01-02",
          "close": 48000
        },
        {
          "date": "2022-01-03",
          "close": 46000
        },
        {
          "date": "2022-01-04",
          "close": 47000
        },
        {
          "date": "2022-01-05",
          "close": 45000
        },
        {
          "date": "2022-01-06",
          "close": 44000
        },
        {
          "date": "2022-01-07",
          "close": 43000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "close"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Closing Price (USD)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "close"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}