{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions for UCI: Iris dataset.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "species": "Iris-setosa",
          "count": 50
        },
        {
          "species": "Iris-versicolor",
          "count": 45
        },
        {
          "species": "Iris-virginica",
          "count": 55
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "count"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "species"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Species",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "species"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0.02
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}