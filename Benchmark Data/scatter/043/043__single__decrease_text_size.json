{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing age vs balance with job as a categorical series.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "age": 25,
          "balance": 1200,
          "job": "admin"
        },
        {
          "age": 35,
          "balance": 2500,
          "job": "technician"
        },
        {
          "age": 45,
          "balance": 800,
          "job": "blue-collar"
        },
        {
          "age": 50,
          "balance": 3000,
          "job": "management"
        },
        {
          "age": 28,
          "balance": 1500,
          "job": "services"
        },
        {
          "age": 40,
          "balance": 2200,
          "job": "retired"
        },
        {
          "age": 33,
          "balance": 1800,
          "job": "self-employed"
        },
        {
          "age": 60,
          "balance": 4000,
          "job": "entrepreneur"
        },
        {
          "age": 22,
          "balance": 1000,
          "job": "student"
        },
        {
          "age": 55,
          "balance": 3200,
          "job": "housemaid"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        22,
        25,
        28,
        33,
        35,
        40,
        45,
        50,
        55,
        60
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "balance"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "job"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Age",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Balance (â‚¬)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Job Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "age"
          },
          "y": {
            "scale": "y",
            "field": "balance"
          },
          "fill": {
            "scale": "color",
            "field": "job"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}