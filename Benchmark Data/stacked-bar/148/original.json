{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing sales by store and department.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "store": "Store 1",
          "department": "Electronics",
          "sales": 1200
        },
        {
          "store": "Store 1",
          "department": "Clothing",
          "sales": 800
        },
        {
          "store": "Store 1",
          "department": "Groceries",
          "sales": 1500
        },
        {
          "store": "Store 2",
          "department": "Electronics",
          "sales": 1000
        },
        {
          "store": "Store 2",
          "department": "Clothing",
          "sales": 700
        },
        {
          "store": "Store 2",
          "department": "Groceries",
          "sales": 1300
        },
        {
          "store": "Store 3",
          "department": "Electronics",
          "sales": 1100
        },
        {
          "store": "Store 3",
          "department": "Clothing",
          "sales": 900
        },
        {
          "store": "Store 3",
          "department": "Groceries",
          "sales": 1400
        },
        {
          "store": "Store 4",
          "department": "Electronics",
          "sales": 950
        },
        {
          "store": "Store 4",
          "department": "Clothing",
          "sales": 850
        },
        {
          "store": "Store 4",
          "department": "Groceries",
          "sales": 1250
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "store"
          ],
          "sort": {
            "field": "department"
          },
          "field": "sales"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "store"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "department"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Store"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Sales (in USD)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Department",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "store"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "department"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}