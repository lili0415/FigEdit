{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing survey response trends over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2015,
          "positive": 45,
          "negative": 30
        },
        {
          "year": 2016,
          "positive": 50,
          "negative": 28
        },
        {
          "year": 2017,
          "positive": 55,
          "negative": 25
        },
        {
          "year": 2018,
          "positive": 60,
          "negative": 22
        },
        {
          "year": 2019,
          "positive": 62,
          "negative": 20
        },
        {
          "year": 2020,
          "positive": 58,
          "negative": 25
        },
        {
          "year": 2021,
          "positive": 65,
          "negative": 18
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018,
        2019,
        2020,
        2021
      ],
      "padding": 0.9
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "fields": [
          {
            "data": "table",
            "field": "positive"
          },
          {
            "data": "table",
            "field": "negative"
          }
        ]
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "salmon"
      ],
      "domain": [
        "positive",
        "negative"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Percentage"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      },
      "sort": {
        "field": "year",
        "order": "ascending"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Legend",
      "orient": "right"
    }
  ]
}