{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions for item demand.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "cornerRadius",
      "value": 5
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Beverages",
          "value": 1500
        },
        {
          "category": "Snacks",
          "value": 1200
        },
        {
          "category": "Frozen Foods",
          "value": 800
        },
        {
          "category": "Canned Goods",
          "value": 600
        },
        {
          "category": "Household Items",
          "value": 400
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c",
        "#d62728",
        "#9467bd"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  }
}