{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing trade values for different product categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "title": {
    "text": "Edited Chart",
    "anchor": "middle",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "category": "Electronics",
          "value": 1200000
        },
        {
          "category": "Textiles",
          "value": 800000
        },
        {
          "category": "Machinery",
          "value": 950000
        },
        {
          "category": "Automobiles",
          "value": 1500000
        },
        {
          "category": "Pharmaceuticals",
          "value": 700000
        },
        {
          "category": "Agricultural Products",
          "value": 600000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Product Category",
      "labelAngle": -45
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Trade Value (in USD)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#4682b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}