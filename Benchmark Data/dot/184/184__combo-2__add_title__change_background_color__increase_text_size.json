{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing toxicity scores for different comment categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Toxic",
          "Score": 0.85
        },
        {
          "Category": "Severe Toxic",
          "Score": 0.65
        },
        {
          "Category": "Obscene",
          "Score": 0.78
        },
        {
          "Category": "Threat",
          "Score": 0.32
        },
        {
          "Category": "Insult",
          "Score": 0.7
        },
        {
          "Category": "Identity Hate",
          "Score": 0.45
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Score"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "bottom",
      "title": "Comment Categories",
      "labelFontSize": 16
    },
    {
      "scale": "yscale",
      "orient": "left",
      "title": "Toxicity Score",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "Category"
          },
          "y": {
            "scale": "yscale",
            "field": "Score"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}