{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing GDP contributions by industry.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "industry": "Agriculture",
          "gdp_contribution": 120
        },
        {
          "industry": "Manufacturing",
          "gdp_contribution": 450
        },
        {
          "industry": "Construction",
          "gdp_contribution": 300
        },
        {
          "industry": "Retail",
          "gdp_contribution": 280
        },
        {
          "industry": "Transportation",
          "gdp_contribution": 200
        },
        {
          "industry": "Healthcare",
          "gdp_contribution": 350
        },
        {
          "industry": "Technology",
          "gdp_contribution": 400
        },
        {
          "industry": "Finance",
          "gdp_contribution": 500
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "industry"
      },
      "range": "width",
      "padding": 0.1,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "gdp_contribution"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Industry"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "GDP Contribution (in billions)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "industry"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "gdp_contribution"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.industry",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.gdp_contribution",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.gdp_contribution"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}