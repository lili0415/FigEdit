{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing energy consumption trends.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "region": "Europe",
          "energy_consumption": 1500
        },
        {
          "year": 2001,
          "region": "Europe",
          "energy_consumption": 1520
        },
        {
          "year": 2002,
          "region": "Europe",
          "energy_consumption": 1535
        },
        {
          "year": 2000,
          "region": "Asia",
          "energy_consumption": 1800
        },
        {
          "year": 2001,
          "region": "Asia",
          "energy_consumption": 1850
        },
        {
          "year": 2002,
          "region": "Asia",
          "energy_consumption": 1900
        },
        {
          "year": 2000,
          "region": "Africa",
          "energy_consumption": 900
        },
        {
          "year": 2001,
          "region": "Africa",
          "energy_consumption": 950
        },
        {
          "year": 2002,
          "region": "Africa",
          "energy_consumption": 980
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['region']=='Europe' || datum['region']=='Asia'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "energy_consumption"
      },
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange",
        "green"
      ],
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Energy Consumption (TWh)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "faceted"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "energy_consumption"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "region"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.7
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}