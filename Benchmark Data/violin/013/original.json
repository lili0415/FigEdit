{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Violin plot showing distribution of cholesterol levels for heart disease categories.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 2"
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "heart_data",
      "values": [
        {
          "Category": "No Heart Disease",
          "Cholesterol": 180
        },
        {
          "Category": "No Heart Disease",
          "Cholesterol": 190
        },
        {
          "Category": "No Heart Disease",
          "Cholesterol": 200
        },
        {
          "Category": "No Heart Disease",
          "Cholesterol": 210
        },
        {
          "Category": "No Heart Disease",
          "Cholesterol": 220
        },
        {
          "Category": "Heart Disease",
          "Cholesterol": 230
        },
        {
          "Category": "Heart Disease",
          "Cholesterol": 240
        },
        {
          "Category": "Heart Disease",
          "Cholesterol": 250
        },
        {
          "Category": "Heart Disease",
          "Cholesterol": 260
        },
        {
          "Category": "Heart Disease",
          "Cholesterol": 270
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Category != null && datum.Cholesterol != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "heart_data",
      "transform": [
        {
          "type": "kde",
          "field": "Cholesterol",
          "groupby": [
            "Category"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "heart_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Category"
          ],
          "fields": [
            "Cholesterol",
            "Cholesterol",
            "Cholesterol"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "heart_data",
        "field": "Category"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "heart_data",
        "field": "Cholesterol"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "heart_data",
        "field": "Category"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Category"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Category",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Category === parent.Category"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Category"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}