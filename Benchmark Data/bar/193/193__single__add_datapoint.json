{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the frequency of vehicle claims by category.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Sedan",
          "claims": 1200
        },
        {
          "category": "SUV",
          "claims": 950
        },
        {
          "category": "Truck",
          "claims": 600
        },
        {
          "category": "Motorcycle",
          "claims": 350
        },
        {
          "category": "Van",
          "claims": 450
        },
        {
          "category": "Convertible",
          "claims": 200
        },
        {
          "category": "Hatchback",
          "claims": 800
        },
        {
          "category": "Electric",
          "claims": 700
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "claims"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Vehicle Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Claims"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "claims"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.claims",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.claims"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}