{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing Netflix stock prices for different dates.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "title": {
    "text": "Edited Chart",
    "anchor": "middle",
    "fontSize": 16,
    "dy": -10
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Date": "2023-01-01",
          "Stock Price": 315.25
        },
        {
          "Date": "2023-02-01",
          "Stock Price": 330.5
        },
        {
          "Date": "2023-03-01",
          "Stock Price": 305.75
        },
        {
          "Date": "2023-04-01",
          "Stock Price": 345.1
        },
        {
          "Date": "2023-05-01",
          "Stock Price": 360.85
        },
        {
          "Date": "2023-06-01",
          "Stock Price": 375.0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Date"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Stock Price"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Date",
      "labelAngle": -45
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Stock Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Date"
          },
          "y": {
            "scale": "y",
            "field": "Stock Price"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        },
        "update": {
          "opacity": {
            "value": 1
          }
        },
        "hover": {
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}