{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing CO2 emissions by sector.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "title": {
    "text": "Edited Chart"
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "sector": "Transportation",
          "emissions": 7.2
        },
        {
          "sector": "Electricity",
          "emissions": 10.5
        },
        {
          "sector": "Industry",
          "emissions": 5.8
        },
        {
          "sector": "Residential",
          "emissions": 3.4
        },
        {
          "sector": "Agriculture",
          "emissions": 2.1
        },
        {
          "sector": "Waste",
          "emissions": 1.3
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "sector"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "emissions"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Sector"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "CO2 Emissions (Gt)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "sector"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "emissions"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.sector",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.emissions",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.emissions"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}