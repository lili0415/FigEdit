{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing points per game for various NBA players.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "player": "LeBron James",
          "points_per_game": 27.2
        },
        {
          "player": "Kevin Durant",
          "points_per_game": 27.1
        },
        {
          "player": "Stephen Curry",
          "points_per_game": 24.6
        },
        {
          "player": "Giannis Antetokounmpo",
          "points_per_game": 29.5
        },
        {
          "player": "James Harden",
          "points_per_game": 25.0
        },
        {
          "player": "Luka Doncic",
          "points_per_game": 28.4
        },
        {
          "player": "Joel Embiid",
          "points_per_game": 30.6
        },
        {
          "player": "Damian Lillard",
          "points_per_game": 25.7
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "player"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "points_per_game"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Player"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Points Per Game"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "player"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "points_per_game"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.player",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.points_per_game",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.points_per_game"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}