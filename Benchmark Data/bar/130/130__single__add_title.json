{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing loan types and their approval counts.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "anchor": "start"
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "loan_type": "Personal Loan",
          "approval_count": 120
        },
        {
          "loan_type": "Home Loan",
          "approval_count": 200
        },
        {
          "loan_type": "Education Loan",
          "approval_count": 85
        },
        {
          "loan_type": "Vehicle Loan",
          "approval_count": 150
        },
        {
          "loan_type": "Business Loan",
          "approval_count": 95
        },
        {
          "loan_type": "Gold Loan",
          "approval_count": 60
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "loan_type"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "approval_count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Loan Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Approval Count"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "loan_type"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "approval_count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.loan_type",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.approval_count",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.approval_count"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}