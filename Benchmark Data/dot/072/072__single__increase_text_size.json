{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing individual values for categories from NHANES Survey Data.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Underweight",
          "Value": 16.5
        },
        {
          "Category": "Normal weight",
          "Value": 22.3
        },
        {
          "Category": "Overweight",
          "Value": 27.8
        },
        {
          "Category": "Obesity Class I",
          "Value": 31.4
        },
        {
          "Category": "Obesity Class II",
          "Value": 36.7
        },
        {
          "Category": "Obesity Class III",
          "Value": 42.1
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "BMI Categories",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "BMI Value",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}