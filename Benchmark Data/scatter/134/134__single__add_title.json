{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing customer tenure vs monthly charges, colored by churn status.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Tenure": 5,
          "MonthlyCharges": 70.35,
          "Churn": "Yes"
        },
        {
          "Tenure": 12,
          "MonthlyCharges": 56.95,
          "Churn": "No"
        },
        {
          "Tenure": 24,
          "MonthlyCharges": 89.1,
          "Churn": "No"
        },
        {
          "Tenure": 3,
          "MonthlyCharges": 75.75,
          "Churn": "Yes"
        },
        {
          "Tenure": 18,
          "MonthlyCharges": 65.2,
          "Churn": "No"
        },
        {
          "Tenure": 8,
          "MonthlyCharges": 99.65,
          "Churn": "Yes"
        },
        {
          "Tenure": 36,
          "MonthlyCharges": 45.5,
          "Churn": "No"
        },
        {
          "Tenure": 2,
          "MonthlyCharges": 85.3,
          "Churn": "Yes"
        },
        {
          "Tenure": 15,
          "MonthlyCharges": 60.0,
          "Churn": "No"
        },
        {
          "Tenure": 6,
          "MonthlyCharges": 80.25,
          "Churn": "Yes"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": [
        2,
        3,
        5,
        6,
        8,
        12,
        15,
        18,
        24,
        36
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "MonthlyCharges"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Churn"
      },
      "range": [
        "#e41a1c",
        "#377eb8"
      ]
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "bottom",
      "title": "Tenure (Months)"
    },
    {
      "scale": "yscale",
      "orient": "left",
      "title": "Monthly Charges ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Churn Status",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "Tenure"
          },
          "y": {
            "scale": "yscale",
            "field": "MonthlyCharges"
          },
          "fill": {
            "scale": "color",
            "field": "Churn"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}