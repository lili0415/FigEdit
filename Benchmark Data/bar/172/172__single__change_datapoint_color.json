{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A basic bar chart showing export values by product category.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Machinery",
          "value": 150
        },
        {
          "category": "Vehicles",
          "value": 200
        },
        {
          "category": "Minerals",
          "value": 120
        },
        {
          "category": "Chemicals",
          "value": 180
        },
        {
          "category": "Textiles",
          "value": 90
        },
        {
          "category": "Metals",
          "value": 160
        },
        {
          "category": "Food Products",
          "value": 140
        },
        {
          "category": "Plastics",
          "value": 100
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Product Categories"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Export Values (in million USD)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "forestgreen"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['category']==='Metals'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "value",
            "offset": -5
          },
          "text": {
            "field": "value"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "black"
          }
        }
      }
    }
  ]
}