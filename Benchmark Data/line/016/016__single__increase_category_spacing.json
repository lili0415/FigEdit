{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing global temperature anomalies over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "temperature_data",
      "values": [
        {
          "year": 1880,
          "anomaly": -0.12,
          "region": "Global"
        },
        {
          "year": 1881,
          "anomaly": -0.07,
          "region": "Global"
        },
        {
          "year": 1882,
          "anomaly": -0.1,
          "region": "Global"
        },
        {
          "year": 1880,
          "anomaly": -0.25,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1881,
          "anomaly": -0.18,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1882,
          "anomaly": -0.22,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1880,
          "anomaly": 0.01,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1881,
          "anomaly": 0.02,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1882,
          "anomaly": -0.01,
          "region": "Southern Hemisphere"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        1880,
        1881,
        1882
      ],
      "padding": 0.9
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "temperature_data",
        "field": "anomaly"
      },
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "temperature_data",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "temperature_data",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "anomaly"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}