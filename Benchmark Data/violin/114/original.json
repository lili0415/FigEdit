{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing the distribution of income for various education levels.",
  "width": 500,
  "padding": 5,
  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "trim",
      "value": true,
      "bind": {
        "input": "checkbox"
      }
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "income_data",
      "values": [
        {
          "Education Level": "High School",
          "Annual Income (USD)": 20000
        },
        {
          "Education Level": "High School",
          "Annual Income (USD)": 25000
        },
        {
          "Education Level": "High School",
          "Annual Income (USD)": 30000
        },
        {
          "Education Level": "High School",
          "Annual Income (USD)": 32000
        },
        {
          "Education Level": "High School",
          "Annual Income (USD)": 35000
        },
        {
          "Education Level": "Bachelor's",
          "Annual Income (USD)": 40000
        },
        {
          "Education Level": "Bachelor's",
          "Annual Income (USD)": 45000
        },
        {
          "Education Level": "Bachelor's",
          "Annual Income (USD)": 50000
        },
        {
          "Education Level": "Bachelor's",
          "Annual Income (USD)": 55000
        },
        {
          "Education Level": "Master's",
          "Annual Income (USD)": 60000
        },
        {
          "Education Level": "Master's",
          "Annual Income (USD)": 65000
        },
        {
          "Education Level": "Master's",
          "Annual Income (USD)": 70000
        },
        {
          "Education Level": "Master's",
          "Annual Income (USD)": 75000
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['Education Level'] != null && datum['Annual Income (USD)'] != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "income_data",
      "transform": [
        {
          "type": "kde",
          "field": "Annual Income (USD)",
          "groupby": [
            "Education Level"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          },
          "extent": {
            "signal": "trim ? null : [10000, 80000]"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "income_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Education Level"
          ],
          "fields": [
            "Annual Income (USD)",
            "Annual Income (USD)",
            "Annual Income (USD)"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "income_data",
        "field": "Education Level"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "income_data",
        "field": "Annual Income (USD)"
      },
      "domainMin": 10000,
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "income_data",
        "field": "Education Level"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Education Level"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Education Level",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Education Level'] === parent['Education Level']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Education Level"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}