{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot of wine characteristics.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Alcohol": 13.2,
          "Malic_Acid": 1.78,
          "Class": "A"
        },
        {
          "Alcohol": 12.8,
          "Malic_Acid": 2.36,
          "Class": "B"
        },
        {
          "Alcohol": 13.5,
          "Malic_Acid": 1.95,
          "Class": "A"
        },
        {
          "Alcohol": 12.7,
          "Malic_Acid": 2.5,
          "Class": "B"
        },
        {
          "Alcohol": 13.1,
          "Malic_Acid": 1.65,
          "Class": "C"
        },
        {
          "Alcohol": 12.9,
          "Malic_Acid": 2.1,
          "Class": "C"
        },
        {
          "Alcohol": 13.3,
          "Malic_Acid": 1.85,
          "Class": "A"
        },
        {
          "Alcohol": 12.6,
          "Malic_Acid": 2.45,
          "Class": "B"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        12.6,
        13.5
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Malic_Acid"
      },
      "range": "height",
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Class"
      },
      "range": [
        "#e41a1c",
        "#377eb8",
        "#4daf4a"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Alcohol Content"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Malic Acid"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Wine Class",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Alcohol"
          },
          "y": {
            "scale": "y",
            "field": "Malic_Acid"
          },
          "fill": {
            "scale": "color",
            "field": "Class"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "tooltip": {
            "signal": "{'Alcohol': datum.Alcohol, 'Malic Acid': datum.Malic_Acid, 'Class': datum.Class}"
          }
        }
      }
    }
  ]
}