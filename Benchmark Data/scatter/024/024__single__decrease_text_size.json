{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot depicting US Economic Indicators.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "GDP": 21.43,
          "UnemploymentRate": 3.5,
          "Region": "Northeast"
        },
        {
          "GDP": 19.39,
          "UnemploymentRate": 4.0,
          "Region": "Midwest"
        },
        {
          "GDP": 22.87,
          "UnemploymentRate": 3.8,
          "Region": "South"
        },
        {
          "GDP": 24.12,
          "UnemploymentRate": 4.3,
          "Region": "West"
        },
        {
          "GDP": 20.31,
          "UnemploymentRate": 3.6,
          "Region": "Northeast"
        },
        {
          "GDP": 18.74,
          "UnemploymentRate": 4.1,
          "Region": "Midwest"
        },
        {
          "GDP": 23.45,
          "UnemploymentRate": 3.7,
          "Region": "South"
        },
        {
          "GDP": 25.67,
          "UnemploymentRate": 4.2,
          "Region": "West"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": false,
      "domain": [
        18.74,
        25.67
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "UnemploymentRate"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Region"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": true,
      "orient": "bottom",
      "title": "GDP (in Trillions)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "grid": true,
      "domain": true,
      "orient": "left",
      "title": "Unemployment Rate (%)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "scale": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "GDP"
          },
          "y": {
            "scale": "y",
            "field": "UnemploymentRate"
          },
          "fill": {
            "scale": "color",
            "field": "Region"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}