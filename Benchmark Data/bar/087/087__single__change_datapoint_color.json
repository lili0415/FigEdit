{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average weekly wages by industry.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "industry": "Healthcare",
          "average_wage": 1200
        },
        {
          "industry": "Education",
          "average_wage": 950
        },
        {
          "industry": "Manufacturing",
          "average_wage": 1400
        },
        {
          "industry": "Retail Trade",
          "average_wage": 700
        },
        {
          "industry": "Construction",
          "average_wage": 1300
        },
        {
          "industry": "Finance",
          "average_wage": 1600
        },
        {
          "industry": "Information",
          "average_wage": 1500
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "industry"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "average_wage"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Industry"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Weekly Wage ($)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "industry"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "average_wage"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "forestgreen"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['industry']==='Healthcare'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ]
}