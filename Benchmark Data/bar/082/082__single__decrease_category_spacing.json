{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing home run totals by players.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "player": "Babe Ruth",
          "home_runs": 714
        },
        {
          "player": "Hank Aaron",
          "home_runs": 755
        },
        {
          "player": "Barry Bonds",
          "home_runs": 762
        },
        {
          "player": "Alex Rodriguez",
          "home_runs": 696
        },
        {
          "player": "Willie Mays",
          "home_runs": 660
        },
        {
          "player": "Albert Pujols",
          "home_runs": 703
        },
        {
          "player": "Ken Griffey Jr.",
          "home_runs": 630
        },
        {
          "player": "Jim Thome",
          "home_runs": 612
        },
        {
          "player": "Sammy Sosa",
          "home_runs": 609
        },
        {
          "player": "Frank Robinson",
          "home_runs": 586
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "player"
      },
      "range": "width",
      "padding": 0.0,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "home_runs"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Player"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Home Runs"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "player"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "home_runs"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.player",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.home_runs",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.home_runs"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}