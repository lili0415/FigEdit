{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing temperature and humidity over time in Delhi.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "temperature": 15,
          "humidity": 60
        },
        {
          "date": "2023-01-02",
          "temperature": 16,
          "humidity": 65
        },
        {
          "date": "2023-01-03",
          "temperature": 17,
          "humidity": 55
        },
        {
          "date": "2023-01-04",
          "temperature": 18,
          "humidity": 50
        },
        {
          "date": "2023-01-05",
          "temperature": 14,
          "humidity": 70
        },
        {
          "date": "2023-01-06",
          "temperature": 13,
          "humidity": 75
        },
        {
          "date": "2023-01-07",
          "temperature": 12,
          "humidity": 80
        },
        {
          "date": "2023-01-08",
          "temperature": 11,
          "humidity": 85
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "fold",
          "fields": [
            "humidity",
            "temperature"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale_temperature",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "yscale_humidity",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "humidity"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale_temperature",
      "title": "Temperature (Â°C)"
    },
    {
      "orient": "right",
      "scale": "yscale_humidity",
      "title": "Humidity (%)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale_temperature",
            "field": "temperature"
          },
          "y2": {
            "scale": "yscale_temperature",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.6
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.9
          }
        }
      }
    },
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale_humidity",
            "field": "humidity"
          },
          "y2": {
            "scale": "yscale_humidity",
            "value": 0
          },
          "fill": {
            "value": "lightgreen"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.6
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.9
          }
        }
      }
    }
  ]
}