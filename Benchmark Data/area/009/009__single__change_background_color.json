{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing house prices over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2005,
          "average_price": 200000
        },
        {
          "year": 2006,
          "average_price": 220000
        },
        {
          "year": 2007,
          "average_price": 240000
        },
        {
          "year": 2008,
          "average_price": 230000
        },
        {
          "year": 2009,
          "average_price": 210000
        },
        {
          "year": 2010,
          "average_price": 215000
        },
        {
          "year": 2011,
          "average_price": 225000
        },
        {
          "year": 2012,
          "average_price": 235000
        },
        {
          "year": 2013,
          "average_price": 250000
        },
        {
          "year": 2014,
          "average_price": 270000
        },
        {
          "year": 2015,
          "average_price": 290000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2005,
        2006,
        2007,
        2008,
        2009,
        2010,
        2011,
        2012,
        2013,
        2014,
        2015
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "average_price"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "tickCount": 10
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "average_price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}