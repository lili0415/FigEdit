{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average cholesterol levels by age group from NHANES Survey Data.",
  "width": 400,
  "height": 250,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "age_group": "20-29",
          "avg_cholesterol": 180
        },
        {
          "age_group": "30-39",
          "avg_cholesterol": 190
        },
        {
          "age_group": "40-49",
          "avg_cholesterol": 200
        },
        {
          "age_group": "50-59",
          "avg_cholesterol": 210
        },
        {
          "age_group": "60-69",
          "avg_cholesterol": 220
        },
        {
          "age_group": "70-79",
          "avg_cholesterol": 230
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "age_group"
      },
      "range": "width",
      "padding": 0.2,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "avg_cholesterol"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Age Group"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Cholesterol Level (mg/dL)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "age_group"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_cholesterol"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.age_group",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.avg_cholesterol",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.avg_cholesterol"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}