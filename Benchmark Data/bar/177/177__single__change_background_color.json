{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing video game sales by platform.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "platform": "PS4",
          "sales": 115
        },
        {
          "platform": "Xbox One",
          "sales": 85
        },
        {
          "platform": "Switch",
          "sales": 90
        },
        {
          "platform": "PC",
          "sales": 60
        },
        {
          "platform": "PS3",
          "sales": 50
        },
        {
          "platform": "Xbox 360",
          "sales": 45
        },
        {
          "platform": "Wii U",
          "sales": 25
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "platform"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "sales"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Platform"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Sales (millions)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "platform"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "sales"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.platform",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.sales",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.sales"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}