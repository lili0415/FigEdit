{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing Loan Amount vs Applicant Income, colored by Loan Status.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "LoanAmount": 120,
          "ApplicantIncome": 5000,
          "LoanStatus": "Approved"
        },
        {
          "LoanAmount": 150,
          "ApplicantIncome": 6000,
          "LoanStatus": "Rejected"
        },
        {
          "LoanAmount": 100,
          "ApplicantIncome": 4000,
          "LoanStatus": "Approved"
        },
        {
          "LoanAmount": 200,
          "ApplicantIncome": 8000,
          "LoanStatus": "Rejected"
        },
        {
          "LoanAmount": 130,
          "ApplicantIncome": 5500,
          "LoanStatus": "Approved"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": [
        4000.0,
        8000.0
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "LoanAmount"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "LoanStatus"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Applicant Income"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Loan Amount"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Loan Status"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "ApplicantIncome"
          },
          "y": {
            "scale": "y",
            "field": "LoanAmount"
          },
          "fill": {
            "scale": "color",
            "field": "LoanStatus"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ]
}