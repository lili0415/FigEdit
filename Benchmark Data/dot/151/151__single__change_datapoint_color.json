{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing values for economic categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "GDP Growth",
          "Value": 3.2
        },
        {
          "Category": "Inflation Rate",
          "Value": 2.1
        },
        {
          "Category": "Unemployment Rate",
          "Value": 4.5
        },
        {
          "Category": "Consumer Spending",
          "Value": 1.8
        },
        {
          "Category": "Business Investment",
          "Value": 2.7
        },
        {
          "Category": "Exports",
          "Value": 5.3
        },
        {
          "Category": "Imports",
          "Value": 4.8
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Economic Indicators"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value (%)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "#ff6347"
          },
          "shape": {
            "value": "circle"
          }
        },
        "update": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          }
        }
      }
    }
  ]
}