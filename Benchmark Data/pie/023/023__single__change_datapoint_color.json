{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing the proportions of attack types in the Global Terrorism Database.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.283185307179586
    },
    {
      "name": "padAngle",
      "value": 0
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "cornerRadius",
      "value": 0
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Bombing/Explosion",
          "value": 45
        },
        {
          "category": "Armed Assault",
          "value": 25
        },
        {
          "category": "Assassination",
          "value": 15
        },
        {
          "category": "Hostage Taking",
          "value": 10
        },
        {
          "category": "Other",
          "value": 5
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": true
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#FF5733",
        "#1f77b4",
        "#aec7e8",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Attack Type",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}