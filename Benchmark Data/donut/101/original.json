{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing sales distribution by department.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "sales",
      "values": [
        {
          "department": "Produce",
          "sales": 120000
        },
        {
          "department": "Bakery",
          "sales": 80000
        },
        {
          "department": "Deli",
          "sales": 60000
        },
        {
          "department": "Meat",
          "sales": 100000
        },
        {
          "department": "Dairy",
          "sales": 90000
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    },
    {
      "name": "table",
      "values": [
        {
          "category": "A",
          "value": 30
        },
        {
          "category": "B",
          "value": 45
        },
        {
          "category": "C",
          "value": 25
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "sales",
        "field": "department"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "sales"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "department"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Department",
      "orient": "right",
      "symbolType": "circle"
    }
  ]
}