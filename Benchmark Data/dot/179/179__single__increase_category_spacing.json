{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing review ratings for product categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "category": "Electronics",
          "value": 4.5
        },
        {
          "category": "Books",
          "value": 4.7
        },
        {
          "category": "Clothing",
          "value": 4.2
        },
        {
          "category": "Home & Kitchen",
          "value": 4.6
        },
        {
          "category": "Toys",
          "value": 4.3
        },
        {
          "category": "Beauty",
          "value": 4.8
        },
        {
          "category": "Sports",
          "value": 4.4
        },
        {
          "category": "Automotive",
          "value": 4.1
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "category"
      },
      "range": "width",
      "padding": 0.6
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "value"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Product Categories"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Average Rating",
      "grid": true
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        },
        "update": {
          "opacity": {
            "value": 1
          }
        },
        "hover": {
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}