{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions in store sales.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.29
    },
    {
      "name": "padAngle",
      "value": 0.01
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "sales",
      "values": [
        {
          "category": "Grocery",
          "value": 50000
        },
        {
          "category": "Clothing",
          "value": 30000
        },
        {
          "category": "Electronics",
          "value": 20000
        },
        {
          "category": "Home Goods",
          "value": 15000
        },
        {
          "category": "Pharmacy",
          "value": 10000
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    },
    {
      "name": "table",
      "values": [
        {
          "category": "A",
          "value": 30
        },
        {
          "category": "B",
          "value": 45
        },
        {
          "category": "C",
          "value": 25
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "sales",
        "field": "category"
      },
      "range": [
        "#FF5733",
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "sales"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ]
}