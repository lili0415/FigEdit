{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing the distribution of player points per game for different positions in the NBA.",
  "width": 500,
  "padding": 5,
  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 4"
    },
    {
      "name": "trim",
      "value": true,
      "bind": {
        "input": "checkbox"
      }
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "nba_stats",
      "values": [
        {
          "Position": "Guard",
          "PointsPerGame": 12.3
        },
        {
          "Position": "Guard",
          "PointsPerGame": 15.8
        },
        {
          "Position": "Guard",
          "PointsPerGame": 20.1
        },
        {
          "Position": "Guard",
          "PointsPerGame": 18.7
        },
        {
          "Position": "Guard",
          "PointsPerGame": 22.5
        },
        {
          "Position": "Forward",
          "PointsPerGame": 10.4
        },
        {
          "Position": "Forward",
          "PointsPerGame": 14.2
        },
        {
          "Position": "Forward",
          "PointsPerGame": 19.3
        },
        {
          "Position": "Forward",
          "PointsPerGame": 16.8
        },
        {
          "Position": "Forward",
          "PointsPerGame": 21.7
        },
        {
          "Position": "Center",
          "PointsPerGame": 8.9
        },
        {
          "Position": "Center",
          "PointsPerGame": 12.1
        },
        {
          "Position": "Center",
          "PointsPerGame": 15.6
        },
        {
          "Position": "Center",
          "PointsPerGame": 13.4
        },
        {
          "Position": "Center",
          "PointsPerGame": 17.8
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Position != null && datum.PointsPerGame != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "nba_stats",
      "transform": [
        {
          "type": "kde",
          "field": "PointsPerGame",
          "groupby": [
            "Position"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          },
          "extent": {
            "signal": "trim ? null : [0, 30]"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "nba_stats",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Position"
          ],
          "fields": [
            "PointsPerGame",
            "PointsPerGame",
            "PointsPerGame"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "nba_stats",
        "field": "Position"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "nba_stats",
        "field": "PointsPerGame"
      },
      "domainMin": 0,
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "nba_stats",
        "field": "Position"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Position"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Position",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Position === parent.Position"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Position"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}