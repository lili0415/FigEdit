{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing accident counts by severity level.",
  "width": 400,
  "height": 300,
  "padding": 10,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Severity": "Low",
          "Count": 1200
        },
        {
          "Severity": "Moderate",
          "Count": 4500
        },
        {
          "Severity": "High",
          "Count": 3200
        },
        {
          "Severity": "Severe",
          "Count": 2100
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Severity"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Severity Level",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Accident Count",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Severity"
          },
          "y": {
            "scale": "y",
            "field": "Count"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "tooltip": {
            "signal": "datum.Severity + ': ' + datum.Count"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}