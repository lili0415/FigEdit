{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing Yelp reviews with ratings and review lengths.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Rating": 5,
          "Review_Length": 1200,
          "Category": "Restaurant"
        },
        {
          "Rating": 4,
          "Review_Length": 850,
          "Category": "Salon"
        },
        {
          "Rating": 3,
          "Review_Length": 600,
          "Category": "Gym"
        },
        {
          "Rating": 5,
          "Review_Length": 1500,
          "Category": "Cafe"
        },
        {
          "Rating": 2,
          "Review_Length": 400,
          "Category": "Hotel"
        },
        {
          "Rating": 1,
          "Review_Length": 300,
          "Category": "Restaurant"
        },
        {
          "Rating": 4,
          "Review_Length": 900,
          "Category": "Cafe"
        },
        {
          "Rating": 3,
          "Review_Length": 700,
          "Category": "Gym"
        },
        {
          "Rating": 5,
          "Review_Length": 1100,
          "Category": "Salon"
        },
        {
          "Rating": 2,
          "Review_Length": 500,
          "Category": "Hotel"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": [
        300.0,
        1500.0
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Rating"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Review Length (characters)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Rating"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Review_Length"
          },
          "y": {
            "scale": "y",
            "field": "Rating"
          },
          "fill": {
            "scale": "color",
            "field": "Category"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}