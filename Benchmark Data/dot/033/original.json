{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing item demand across categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Item A",
          "value": 120
        },
        {
          "category": "Item B",
          "value": 150
        },
        {
          "category": "Item C",
          "value": 90
        },
        {
          "category": "Item D",
          "value": 200
        },
        {
          "category": "Item E",
          "value": 170
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Category"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Demand Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#4682b4"
          }
        },
        "update": {
          "tooltip": {
            "signal": "datum"
          }
        }
      }
    }
  ]
}