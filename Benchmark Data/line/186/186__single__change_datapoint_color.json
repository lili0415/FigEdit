        },
        {
          "month": "2022-01",
          "index": 120.5,
          "category": "Dairy"
        },
        {
          "month": "2022-02",
          "index": 123.4,
          "category": "Dairy"
        },
        {
          "month": "2022-03",
          "index": 128.6,
          "category": "Dairy"
        },
        {
          "month": "2022-01",
          "index": 115.2,
          "category": "Meat"
        },
        {
          "month": "2022-02",
          "index": 117.8,
