{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Area chart showing daily new COVID-19 cases over time for different regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-06-01",
          "region": "North America",
          "cases": 50000
        },
        {
          "date": "2021-06-02",
          "region": "North America",
          "cases": 52000
        },
        {
          "date": "2021-06-03",
          "region": "North America",
          "cases": 48000
        },
        {
          "date": "2021-06-01",
          "region": "Europe",
          "cases": 30000
        },
        {
          "date": "2021-06-02",
          "region": "Europe",
          "cases": 31000
        },
        {
          "date": "2021-06-03",
          "region": "Europe",
          "cases": 29000
        },
        {
          "date": "2021-06-01",
          "region": "Asia",
          "cases": 70000
        },
        {
          "date": "2021-06-02",
          "region": "Asia",
          "cases": 72000
        },
        {
          "date": "2021-06-03",
          "region": "Asia",
          "cases": 68000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "filter",
          "expr": "datum['region']=='North America' || datum['region']=='Europe'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange",
        "green"
      ],
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Daily New Cases"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "cases"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "region"
              }
            },
            "update": {
              "interpolate": {
                "value": "monotone"
              },
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ]
}