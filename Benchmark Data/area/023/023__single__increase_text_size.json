{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "Bitcoin": 16500,
          "Ethereum": 1200
        },
        {
          "date": "2023-01-02",
          "Bitcoin": 16700,
          "Ethereum": 1250
        },
        {
          "date": "2023-01-03",
          "Bitcoin": 17000,
          "Ethereum": 1300
        },
        {
          "date": "2023-01-04",
          "Bitcoin": 16800,
          "Ethereum": 1280
        },
        {
          "date": "2023-01-05",
          "Bitcoin": 17200,
          "Ethereum": 1350
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "fold",
          "fields": [
            "Bitcoin",
            "Ethereum"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Price (USD)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "Bitcoin"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "orange"
          },
          "interpolate": {
            "value": "monotone"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.7
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    },
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "Ethereum"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "blue"
          },
          "interpolate": {
            "value": "monotone"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.7
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}