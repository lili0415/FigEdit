{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions from the World Happiness Report.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Happiness Score",
          "value": 7.8
        },
        {
          "category": "Dystopia Residual",
          "value": 2.3
        },
        {
          "category": "Social Support",
          "value": 1.2
        },
        {
          "category": "Freedom",
          "value": 0.6
        },
        {
          "category": "Generosity",
          "value": 0.5
        },
        {
          "category": "Perceptions of Corruption",
          "value": 0.3
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": 0.01,
          "innerRadius": 0,
          "outerRadius": {
            "signal": "width / 2"
          },
          "fill": [
            {
              "test": "datum.category === 'Freedom'",
              "value": "#FF5733"
            },
            {
              "scale": "color",
              "field": "category"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "axes": [
    {
      "labelFontSize": 16
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}