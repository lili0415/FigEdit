{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing player attributes from the FIFA 19 dataset.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Overall": 91,
          "Potential": 95,
          "Position": "Forward"
        },
        {
          "Overall": 89,
          "Potential": 90,
          "Position": "Midfielder"
        },
        {
          "Overall": 85,
          "Potential": 88,
          "Position": "Defender"
        },
        {
          "Overall": 88,
          "Potential": 89,
          "Position": "Forward"
        },
        {
          "Overall": 84,
          "Potential": 86,
          "Position": "Goalkeeper"
        },
        {
          "Overall": 92,
          "Potential": 94,
          "Position": "Forward"
        },
        {
          "Overall": 86,
          "Potential": 87,
          "Position": "Midfielder"
        },
        {
          "Overall": 87,
          "Potential": 89,
          "Position": "Defender"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        84,
        85,
        86,
        87,
        88,
        89,
        91,
        92
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Potential"
      },
      "range": "height",
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Overall Rating",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Potential Rating",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Overall"
          },
          "y": {
            "scale": "y",
            "field": "Potential"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}