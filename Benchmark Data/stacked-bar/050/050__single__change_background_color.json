{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing cryptocurrency market capitalization by category and series.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Bitcoin",
          "series": "Market Cap (USD)",
          "value": 600000000000
        },
        {
          "category": "Bitcoin",
          "series": "Volume (USD)",
          "value": 30000000000
        },
        {
          "category": "Ethereum",
          "series": "Market Cap (USD)",
          "value": 250000000000
        },
        {
          "category": "Ethereum",
          "series": "Volume (USD)",
          "value": 20000000000
        },
        {
          "category": "Binance Coin",
          "series": "Market Cap (USD)",
          "value": 50000000000
        },
        {
          "category": "Binance Coin",
          "series": "Volume (USD)",
          "value": 5000000000
        },
        {
          "category": "Cardano",
          "series": "Market Cap (USD)",
          "value": 40000000000
        },
        {
          "category": "Cardano",
          "series": "Volume (USD)",
          "value": 3000000000
        },
        {
          "category": "Solana",
          "series": "Market Cap (USD)",
          "value": 30000000000
        },
        {
          "category": "Solana",
          "series": "Volume (USD)",
          "value": 2000000000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Cryptocurrency"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value (USD)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Series",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}