{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "signals": [
    {
      "name": "interpolate",
      "value": "linear",
      "bind": {
        "input": "select",
        "options": [
          "basis",
          "cardinal",
          "catmull-rom",
          "linear",
          "monotone",
          "natural",
          "step",
          "step-after",
          "step-before"
        ]
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 16500,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-02",
          "price": 16750,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-03",
          "price": 17000,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-04",
          "price": 17250,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-01",
          "price": 1200,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-02",
          "price": 1250,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-03",
          "price": 1300,
          "currency": "Ethereum"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "currency"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Cryptocurrency",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "currency"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "currency"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "interpolate": {
                "signal": "interpolate"
              },
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}