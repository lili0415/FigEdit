{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing student performance metrics.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Math_Score": 78,
          "Reading_Score": 85,
          "Gender": "Male"
        },
        {
          "Math_Score": 92,
          "Reading_Score": 88,
          "Gender": "Female"
        },
        {
          "Math_Score": 65,
          "Reading_Score": 72,
          "Gender": "Male"
        },
        {
          "Math_Score": 88,
          "Reading_Score": 91,
          "Gender": "Female"
        },
        {
          "Math_Score": 74,
          "Reading_Score": 78,
          "Gender": "Male"
        },
        {
          "Math_Score": 95,
          "Reading_Score": 94,
          "Gender": "Female"
        },
        {
          "Math_Score": 81,
          "Reading_Score": 79,
          "Gender": "Male"
        },
        {
          "Math_Score": 89,
          "Reading_Score": 92,
          "Gender": "Female"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        65,
        74,
        78,
        81,
        88,
        89,
        92,
        95
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Reading_Score"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Gender"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Math Score"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Reading Score"
    }
  ],
  "legends": [
    {
      "scale": "color",
      "title": "Gender",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Math_Score"
          },
          "y": {
            "scale": "y",
            "field": "Reading_Score"
          },
          "fill": {
            "scale": "color",
            "field": "Gender"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}