{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing temperature and humidity over time in Delhi.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "temperature": 12.3,
          "humidity": 65
        },
        {
          "date": "2023-01-02",
          "temperature": 13.8,
          "humidity": 70
        },
        {
          "date": "2023-01-03",
          "temperature": 14.5,
          "humidity": 68
        },
        {
          "date": "2023-01-04",
          "temperature": 15.2,
          "humidity": 72
        },
        {
          "date": "2023-01-05",
          "temperature": 16.4,
          "humidity": 75
        },
        {
          "date": "2023-01-06",
          "temperature": 17.1,
          "humidity": 74
        },
        {
          "date": "2023-01-07",
          "temperature": 18.0,
          "humidity": 78
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "fold",
          "fields": [
            "humidity",
            "temperature"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale_temp",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "yscale_humidity",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "humidity"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale_temp",
      "title": "Temperature (Â°C)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "right",
      "scale": "yscale_humidity",
      "title": "Humidity (%)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale_temp",
            "field": "temperature"
          },
          "y2": {
            "scale": "yscale_temp",
            "value": 0
          },
          "fill": {
            "value": "orange"
          },
          "interpolate": {
            "value": "monotone"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.7
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.9
          }
        }
      }
    },
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale_humidity",
            "field": "humidity"
          },
          "y2": {
            "scale": "yscale_humidity",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          },
          "interpolate": {
            "value": "monotone"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.5
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}