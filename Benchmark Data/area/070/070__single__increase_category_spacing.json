{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing demand trends for different items over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01",
          "item": "A",
          "demand": 120
        },
        {
          "date": "2022-01",
          "item": "B",
          "demand": 150
        },
        {
          "date": "2022-02",
          "item": "A",
          "demand": 130
        },
        {
          "date": "2022-02",
          "item": "B",
          "demand": 160
        },
        {
          "date": "2022-03",
          "item": "A",
          "demand": 140
        },
        {
          "date": "2022-03",
          "item": "B",
          "demand": 170
        },
        {
          "date": "2022-04",
          "item": "A",
          "demand": 135
        },
        {
          "date": "2022-04",
          "item": "B",
          "demand": 155
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": {
        "step": 20
      },
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.2
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange"
      ],
      "domain": {
        "data": "table",
        "field": "item"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Demand"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "item"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "demand"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "item"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Item",
      "orient": "right"
    }
  ]
}