{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing COVID-19 cases over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-01-01",
          "cases": 100
        },
        {
          "date": "2020-02-01",
          "cases": 500
        },
        {
          "date": "2020-03-01",
          "cases": 1500
        },
        {
          "date": "2020-04-01",
          "cases": 5000
        },
        {
          "date": "2020-05-01",
          "cases": 12000
        },
        {
          "date": "2020-06-01",
          "cases": 25000
        },
        {
          "date": "2020-07-01",
          "cases": 40000
        },
        {
          "date": "2020-08-01",
          "cases": 60000
        },
        {
          "date": "2020-09-01",
          "cases": 80000
        },
        {
          "date": "2020-10-01",
          "cases": 100000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "COVID-19 Cases",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "cases"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}