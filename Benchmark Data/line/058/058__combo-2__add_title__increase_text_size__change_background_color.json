{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing average Airbnb prices over months for different boroughs in NYC.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "2023-01",
          "borough": "Manhattan",
          "average_price": 150
        },
        {
          "month": "2023-01",
          "borough": "Brooklyn",
          "average_price": 120
        },
        {
          "month": "2023-02",
          "borough": "Manhattan",
          "average_price": 155
        },
        {
          "month": "2023-02",
          "borough": "Brooklyn",
          "average_price": 125
        },
        {
          "month": "2023-03",
          "borough": "Manhattan",
          "average_price": 160
        },
        {
          "month": "2023-03",
          "borough": "Brooklyn",
          "average_price": 130
        },
        {
          "month": "2023-04",
          "borough": "Manhattan",
          "average_price": 165
        },
        {
          "month": "2023-04",
          "borough": "Brooklyn",
          "average_price": 135
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "average_price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "borough"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month",
      "labelFontSize": 14,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Average Price (USD)",
      "labelFontSize": 14,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Borough",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "borough"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "month"
              },
              "y": {
                "scale": "y",
                "field": "average_price"
              },
              "stroke": {
                "scale": "color",
                "field": "borough"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}