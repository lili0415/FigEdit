        },
        {
          "category": "Healthcare",
          "series": "Q4",
          "value": 160
        },
        {
          "category": "Finance",
          "series": "Q1",
          "value": 140
        },
        {
          "category": "Finance",
          "series": "Q2",
          "value": 160
        },
        {
          "category": "Finance",
          "series": "Q3",
          "value": 180
        },
        {
          "category": "Finance",
          "series": "Q4",
          "value": 220
        },
        {
          "category": "Energy",
          "series": "Q1",
          "value": 70
        },
        {
          "category": "Energy",
          "series": "Q2",
          "value": 90
        },
        {
          "category": "Energy",
          "series": "Q3",
          "value": 110
        },
        {
          "category": "Energy",
          "series": "Q4",
          "value": 130
        },
        {
          "category": "Consumer Goods",
          "series": "Q1",
          "value": 100
        },
        {
          "category": "Consumer Goods",
          "series": "Q2",
          "value": 120
        },
        {
          "category": "Consumer Goods",
          "series": "Q3",
          "value": 140
        },
        {
          "category": "Consumer Goods",
          "series": "Q4",
          "value": 160
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#4A90E2",
        "#50E3C2",
        "#B8E986",
        "#7B92E2"
      ],
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Sector"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Performance"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Quarter",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='Consumer Goods'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}