{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy consumption trends over time for different energy sources.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "energy_data",
      "values": [
        {
          "year": 2010,
          "energy_source": "Coal",
          "consumption": 1500
        },
        {
          "year": 2010,
          "energy_source": "Natural Gas",
          "consumption": 1200
        },
        {
          "year": 2010,
          "energy_source": "Renewables",
          "consumption": 800
        },
        {
          "year": 2015,
          "energy_source": "Coal",
          "consumption": 1400
        },
        {
          "year": 2015,
          "energy_source": "Natural Gas",
          "consumption": 1300
        },
        {
          "year": 2015,
          "energy_source": "Renewables",
          "consumption": 1000
        },
        {
          "year": 2020,
          "energy_source": "Coal",
          "consumption": 1200
        },
        {
          "year": 2020,
          "energy_source": "Natural Gas",
          "consumption": 1400
        },
        {
          "year": 2020,
          "energy_source": "Renewables",
          "consumption": 1300
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "energy_data",
        "field": "consumption"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733"
      ],
      "domain": {
        "data": "energy_data",
        "field": "energy_source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Consumption (TWh)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Energy Source",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "energy_data",
          "groupby": "energy_source"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "consumption"
              },
              "stroke": {
                "scale": "color",
                "field": "energy_source"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}