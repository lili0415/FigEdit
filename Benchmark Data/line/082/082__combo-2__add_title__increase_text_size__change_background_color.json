{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing CO2 emissions and methane emissions over years.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "emissions",
      "values": [
        {
          "year": 2000,
          "value": 25.4,
          "series": "CO2 Emissions"
        },
        {
          "year": 2000,
          "value": 5.8,
          "series": "Methane Emissions"
        },
        {
          "year": 2005,
          "value": 27.8,
          "series": "CO2 Emissions"
        },
        {
          "year": 2005,
          "value": 6.3,
          "series": "Methane Emissions"
        },
        {
          "year": 2010,
          "value": 30.1,
          "series": "CO2 Emissions"
        },
        {
          "year": 2010,
          "value": 6.7,
          "series": "Methane Emissions"
        },
        {
          "year": 2015,
          "value": 32.5,
          "series": "CO2 Emissions"
        },
        {
          "year": 2015,
          "value": 7.1,
          "series": "Methane Emissions"
        },
        {
          "year": 2020,
          "value": 34.8,
          "series": "CO2 Emissions"
        },
        {
          "year": 2020,
          "value": 7.5,
          "series": "Methane Emissions"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "emissions",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "emissions",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 14,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Emissions (GtCO2e)",
      "labelFontSize": 14,
      "tickSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Emission Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "emissions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "stroke": {
            "scale": "color",
            "field": "series"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}