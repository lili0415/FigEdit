{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing individual player batting averages.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Player": "Babe Ruth",
          "BattingAverage": 0.342
        },
        {
          "Player": "Ted Williams",
          "BattingAverage": 0.344
        },
        {
          "Player": "Hank Aaron",
          "BattingAverage": 0.305
        },
        {
          "Player": "Willie Mays",
          "BattingAverage": 0.302
        },
        {
          "Player": "Lou Gehrig",
          "BattingAverage": 0.34
        },
        {
          "Player": "Ty Cobb",
          "BattingAverage": 0.366
        },
        {
          "Player": "Joe DiMaggio",
          "BattingAverage": 0.325
        },
        {
          "Player": "Mickey Mantle",
          "BattingAverage": 0.298
        },
        {
          "Player": "Stan Musial",
          "BattingAverage": 0.331
        },
        {
          "Player": "Derek Jeter",
          "BattingAverage": 0.31
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Player"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "BattingAverage"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Player",
      "labelAngle": -45,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Batting Average",
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Player"
          },
          "y": {
            "scale": "y",
            "field": "BattingAverage"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}