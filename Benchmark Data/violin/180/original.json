{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing the distribution of transaction amounts for different transaction types in credit card fraud detection.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 2"
    },
    {
      "name": "bandwidth",
      "value": 30,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "transactions",
      "values": [
        {
          "TransactionType": "Normal",
          "Amount": 12.34
        },
        {
          "TransactionType": "Normal",
          "Amount": 45.67
        },
        {
          "TransactionType": "Normal",
          "Amount": 78.9
        },
        {
          "TransactionType": "Normal",
          "Amount": 23.45
        },
        {
          "TransactionType": "Normal",
          "Amount": 56.78
        },
        {
          "TransactionType": "Fraud",
          "Amount": 120.34
        },
        {
          "TransactionType": "Fraud",
          "Amount": 150.67
        },
        {
          "TransactionType": "Fraud",
          "Amount": 180.9
        },
        {
          "TransactionType": "Fraud",
          "Amount": 200.45
        },
        {
          "TransactionType": "Fraud",
          "Amount": 250.78
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.TransactionType != null && datum.Amount != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "transactions",
      "transform": [
        {
          "type": "kde",
          "field": "Amount",
          "groupby": [
            "TransactionType"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "transactions",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "TransactionType"
          ],
          "fields": [
            "Amount",
            "Amount",
            "Amount"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "transactions",
        "field": "TransactionType"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "transactions",
        "field": "Amount"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "transactions",
        "field": "TransactionType"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "TransactionType"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "TransactionType",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.TransactionType === parent.TransactionType"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "TransactionType"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}