{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing video game sales proportions by genre.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "middle",
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Platform",
          "sales": 20
        },
        {
          "genre": "Shooter",
          "sales": 35
        },
        {
          "genre": "Puzzle",
          "sales": 15
        },
        {
          "genre": "Racing",
          "sales": 30
        },
        {
          "genre": "Simulation",
          "sales": 10
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": 0,
          "endAngle": 6.28318530718
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "genre"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}