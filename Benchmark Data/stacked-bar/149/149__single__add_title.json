{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing house prices by neighborhood and house style.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 16,
    "anchor": "start",
    "offset": 10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "OldTown",
          "series": "1Story",
          "value": 150000
        },
        {
          "category": "OldTown",
          "series": "2Story",
          "value": 200000
        },
        {
          "category": "OldTown",
          "series": "1.5Fin",
          "value": 180000
        },
        {
          "category": "Somerst",
          "series": "1Story",
          "value": 250000
        },
        {
          "category": "Somerst",
          "series": "2Story",
          "value": 300000
        },
        {
          "category": "Somerst",
          "series": "1.5Fin",
          "value": 270000
        },
        {
          "category": "NridgHt",
          "series": "1Story",
          "value": 320000
        },
        {
          "category": "NridgHt",
          "series": "2Story",
          "value": 400000
        },
        {
          "category": "NridgHt",
          "series": "1.5Fin",
          "value": 350000
        },
        {
          "category": "CollgCr",
          "series": "1Story",
          "value": 220000
        },
        {
          "category": "CollgCr",
          "series": "2Story",
          "value": 280000
        },
        {
          "category": "CollgCr",
          "series": "1.5Fin",
          "value": 240000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Neighborhood"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "House Price ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "House Style",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}