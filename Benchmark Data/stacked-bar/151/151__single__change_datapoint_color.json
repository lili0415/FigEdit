{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing global temperature anomalies by region.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "1900",
          "series": "Northern Hemisphere",
          "value": -0.2
        },
        {
          "category": "1900",
          "series": "Southern Hemisphere",
          "value": -0.1
        },
        {
          "category": "1950",
          "series": "Northern Hemisphere",
          "value": 0.1
        },
        {
          "category": "1950",
          "series": "Southern Hemisphere",
          "value": 0.05
        },
        {
          "category": "2000",
          "series": "Northern Hemisphere",
          "value": 0.5
        },
        {
          "category": "2000",
          "series": "Southern Hemisphere",
          "value": 0.3
        },
        {
          "category": "2010",
          "series": "Northern Hemisphere",
          "value": 0.7
        },
        {
          "category": "2010",
          "series": "Southern Hemisphere",
          "value": 0.4
        },
        {
          "category": "2020",
          "series": "Northern Hemisphere",
          "value": 0.9
        },
        {
          "category": "2020",
          "series": "Southern Hemisphere",
          "value": 0.6
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733",
        "#33FF57"
      ],
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='1950'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}