{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Stacked bar chart showing metrics from Times Higher Education World University Rankings.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Harvard University",
          "series": "Teaching",
          "value": 95
        },
        {
          "category": "Harvard University",
          "series": "Research",
          "value": 98
        },
        {
          "category": "Harvard University",
          "series": "Citations",
          "value": 99
        },
        {
          "category": "Stanford University",
          "series": "Teaching",
          "value": 92
        },
        {
          "category": "Stanford University",
          "series": "Research",
          "value": 97
        },
        {
          "category": "Stanford University",
          "series": "Citations",
          "value": 96
        },
        {
          "category": "MIT",
          "series": "Teaching",
          "value": 90
        },
        {
          "category": "MIT",
          "series": "Research",
          "value": 95
        },
        {
          "category": "MIT",
          "series": "Citations",
          "value": 94
        },
        {
          "category": "University of Oxford",
          "series": "Teaching",
          "value": 93
        },
        {
          "category": "University of Oxford",
          "series": "Research",
          "value": 96
        },
        {
          "category": "University of Oxford",
          "series": "Citations",
          "value": 97
        },
        {
          "category": "University of Cambridge",
          "series": "Teaching",
          "value": 91
        },
        {
          "category": "University of Cambridge",
          "series": "Research",
          "value": 94
        },
        {
          "category": "University of Cambridge",
          "series": "Citations",
          "value": 95
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "University",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Score",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Metrics",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}