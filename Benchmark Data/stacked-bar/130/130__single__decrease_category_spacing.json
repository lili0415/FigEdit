{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing airline on-time performance by carrier and flight status.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Delta",
          "series": "On-Time",
          "value": 120
        },
        {
          "category": "Delta",
          "series": "Delayed",
          "value": 30
        },
        {
          "category": "Delta",
          "series": "Cancelled",
          "value": 10
        },
        {
          "category": "United",
          "series": "On-Time",
          "value": 100
        },
        {
          "category": "United",
          "series": "Delayed",
          "value": 50
        },
        {
          "category": "United",
          "series": "Cancelled",
          "value": 20
        },
        {
          "category": "Southwest",
          "series": "On-Time",
          "value": 140
        },
        {
          "category": "Southwest",
          "series": "Delayed",
          "value": 40
        },
        {
          "category": "Southwest",
          "series": "Cancelled",
          "value": 15
        },
        {
          "category": "American",
          "series": "On-Time",
          "value": 110
        },
        {
          "category": "American",
          "series": "Delayed",
          "value": 60
        },
        {
          "category": "American",
          "series": "Cancelled",
          "value": 25
        },
        {
          "category": "JetBlue",
          "series": "On-Time",
          "value": 90
        },
        {
          "category": "JetBlue",
          "series": "Delayed",
          "value": 20
        },
        {
          "category": "JetBlue",
          "series": "Cancelled",
          "value": 5
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "paddingInner": 0.2,
      "padding": 0.0
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Airline Carrier"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Flights"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Flight Status",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}