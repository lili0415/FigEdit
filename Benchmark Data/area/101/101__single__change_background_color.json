{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing temperature and humidity over time in Delhi.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "temperature": 15,
          "humidity": 82
        },
        {
          "date": "2023-01-02",
          "temperature": 16,
          "humidity": 78
        },
        {
          "date": "2023-01-03",
          "temperature": 14,
          "humidity": 85
        },
        {
          "date": "2023-01-04",
          "temperature": 17,
          "humidity": 80
        },
        {
          "date": "2023-01-05",
          "temperature": 18,
          "humidity": 76
        },
        {
          "date": "2023-01-06",
          "temperature": 19,
          "humidity": 74
        },
        {
          "date": "2023-01-07",
          "temperature": 20,
          "humidity": 70
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "fold",
          "fields": [
            "humidity",
            "temperature"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "temperature"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "orange"
          },
          "tooltip": {
            "signal": "datum.temperature + 'Â°C'"
          }
        },
        "update": {}
      }
    },
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "humidity"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "blue"
          },
          "tooltip": {
            "signal": "datum.humidity + '%'"
          }
        },
        "update": {}
      }
    }
  ]
}