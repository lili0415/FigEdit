{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing sales across departments in different stores.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Store 1",
          "series": "Electronics",
          "value": 32000
        },
        {
          "category": "Store 1",
          "series": "Clothing",
          "value": 27000
        },
        {
          "category": "Store 1",
          "series": "Groceries",
          "value": 45000
        },
        {
          "category": "Store 2",
          "series": "Electronics",
          "value": 28000
        },
        {
          "category": "Store 2",
          "series": "Clothing",
          "value": 31000
        },
        {
          "category": "Store 2",
          "series": "Groceries",
          "value": 40000
        },
        {
          "category": "Store 3",
          "series": "Electronics",
          "value": 35000
        },
        {
          "category": "Store 3",
          "series": "Clothing",
          "value": 29000
        },
        {
          "category": "Store 3",
          "series": "Groceries",
          "value": 48000
        },
        {
          "category": "Store 4",
          "series": "Electronics",
          "value": 26000
        },
        {
          "category": "Store 4",
          "series": "Clothing",
          "value": 25000
        },
        {
          "category": "Store 4",
          "series": "Groceries",
          "value": 42000
        },
        {
          "category": "Store 5",
          "series": "Electronics",
          "value": 30000
        },
        {
          "category": "Store 5",
          "series": "Clothing",
          "value": 28000
        },
        {
          "category": "Store 5",
          "series": "Groceries",
          "value": 47000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733",
        "#1f77b4",
        "#ff7f0e"
      ],
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Stores"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Sales ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Departments",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='Store 1'",
              "value": "#2ca02c"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}