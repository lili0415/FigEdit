{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing medal counts by sport in the Olympic dataset.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Sport": "Athletics",
          "Medals": 35
        },
        {
          "Sport": "Swimming",
          "Medals": 42
        },
        {
          "Sport": "Gymnastics",
          "Medals": 28
        },
        {
          "Sport": "Rowing",
          "Medals": 18
        },
        {
          "Sport": "Wrestling",
          "Medals": 22
        },
        {
          "Sport": "Boxing",
          "Medals": 15
        },
        {
          "Sport": "Fencing",
          "Medals": 20
        },
        {
          "Sport": "Cycling",
          "Medals": 25
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "source",
        "field": "Sport"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Medals"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Sport"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Medals"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Sport",
            "band": 0.5
          },
          "y": {
            "scale": "y",
            "field": "Medals"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#ff6347"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}