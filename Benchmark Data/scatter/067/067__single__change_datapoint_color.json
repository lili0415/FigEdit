{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing the relationship between claim severity and policy age, with point colors representing vehicle age group.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Claim_Severity": 2500,
          "Policy_Age": 5,
          "Vehicle_Age_Group": "0-2 years"
        },
        {
          "Claim_Severity": 1800,
          "Policy_Age": 3,
          "Vehicle_Age_Group": "3-5 years"
        },
        {
          "Claim_Severity": 3000,
          "Policy_Age": 8,
          "Vehicle_Age_Group": "0-2 years"
        },
        {
          "Claim_Severity": 2200,
          "Policy_Age": 4,
          "Vehicle_Age_Group": "6+ years"
        },
        {
          "Claim_Severity": 2700,
          "Policy_Age": 6,
          "Vehicle_Age_Group": "3-5 years"
        },
        {
          "Claim_Severity": 1500,
          "Policy_Age": 2,
          "Vehicle_Age_Group": "6+ years"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        2,
        3,
        4,
        5,
        6,
        8
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Claim_Severity"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Vehicle_Age_Group"
      },
      "range": [
        "#e41a1c",
        "#377eb8",
        "#4daf4a"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Policy Age (years)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Claim Severity ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Vehicle Age Group",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Policy_Age"
          },
          "y": {
            "scale": "y",
            "field": "Claim_Severity"
          },
          "fill": {
            "scale": "color",
            "field": "Vehicle_Age_Group"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ]
}