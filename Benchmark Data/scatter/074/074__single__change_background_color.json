{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing trip duration vs. distance, categorized by user type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Trip_Duration": 15,
          "Trip_Distance": 2.5,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 8,
          "Trip_Distance": 1.2,
          "User_Type": "Customer"
        },
        {
          "Trip_Duration": 20,
          "Trip_Distance": 3.0,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 12,
          "Trip_Distance": 1.8,
          "User_Type": "Customer"
        },
        {
          "Trip_Duration": 25,
          "Trip_Distance": 4.5,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 10,
          "Trip_Distance": 1.5,
          "User_Type": "Customer"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        8,
        10,
        12,
        15,
        20,
        25
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Trip_Distance"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "User_Type"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Trip Duration (minutes)",
      "grid": true
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Trip Distance (miles)",
      "grid": true
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "User Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Trip_Duration"
          },
          "y": {
            "scale": "y",
            "field": "Trip_Distance"
          },
          "fill": {
            "scale": "color",
            "field": "User_Type"
          },
          "size": {
            "value": 100
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}