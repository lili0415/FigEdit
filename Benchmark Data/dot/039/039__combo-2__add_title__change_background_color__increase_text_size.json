{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing economic indicators by category.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "GDP Growth",
          "Value": 3.1
        },
        {
          "Category": "Unemployment Rate",
          "Value": 4.2
        },
        {
          "Category": "Inflation Rate",
          "Value": 2.3
        },
        {
          "Category": "Consumer Confidence",
          "Value": 98.4
        },
        {
          "Category": "Retail Sales",
          "Value": 5.6
        },
        {
          "Category": "Industrial Production",
          "Value": 1.9
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Economic Indicator",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#4682b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}