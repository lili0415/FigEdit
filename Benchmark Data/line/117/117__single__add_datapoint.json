{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy production trends over time.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2010,
          "value": 450,
          "type": "Coal"
        },
        {
          "year": 2010,
          "value": 320,
          "type": "Natural Gas"
        },
        {
          "year": 2010,
          "value": 200,
          "type": "Renewables"
        },
        {
          "year": 2011,
          "value": 460,
          "type": "Coal"
        },
        {
          "year": 2011,
          "value": 330,
          "type": "Natural Gas"
        },
        {
          "year": 2011,
          "value": 220,
          "type": "Renewables"
        },
        {
          "year": 2012,
          "value": 430,
          "type": "Coal"
        },
        {
          "year": 2012,
          "value": 350,
          "type": "Natural Gas"
        },
        {
          "year": 2012,
          "value": 250,
          "type": "Renewables"
        },
        {
          "year": 2013,
          "value": 410,
          "type": "Coal"
        },
        {
          "year": 2013,
          "value": 370,
          "type": "Natural Gas"
        },
        {
          "year": 2013,
          "value": 280,
          "type": "Renewables"
        },
        {
          "year": 2014,
          "value": 390,
          "type": "Coal"
        },
        {
