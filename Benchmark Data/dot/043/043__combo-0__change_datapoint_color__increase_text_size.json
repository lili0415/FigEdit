{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing transaction categories and their respective values.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "TransactionCategory": "Online Purchase",
          "TransactionValue": 250
        },
        {
          "TransactionCategory": "ATM Withdrawal",
          "TransactionValue": 100
        },
        {
          "TransactionCategory": "Bill Payment",
          "TransactionValue": 300
        },
        {
          "TransactionCategory": "POS Purchase",
          "TransactionValue": 150
        },
        {
          "TransactionCategory": "Wire Transfer",
          "TransactionValue": 500
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Wire Transfer"
      ],
      "range": [
        "red"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Transaction Category",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Transaction Value",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "TransactionCategory"
          },
          "y": {
            "scale": "y",
            "field": "TransactionValue"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "field": "TransactionCategory",
            "scale": "color"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}