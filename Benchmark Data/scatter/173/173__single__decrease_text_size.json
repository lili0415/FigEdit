{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing Air Quality data with NO2 concentration and CO levels.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "NO2": 20.5,
          "CO": 0.5,
          "Station": "Urban"
        },
        {
          "NO2": 35.2,
          "CO": 1.2,
          "Station": "Suburban"
        },
        {
          "NO2": 50.1,
          "CO": 2.3,
          "Station": "Industrial"
        },
        {
          "NO2": 15.8,
          "CO": 0.4,
          "Station": "Rural"
        },
        {
          "NO2": 42.0,
          "CO": 1.8,
          "Station": "Urban"
        },
        {
          "NO2": 30.5,
          "CO": 1.0,
          "Station": "Suburban"
        },
        {
          "NO2": 25.3,
          "CO": 0.8,
          "Station": "Rural"
        },
        {
          "NO2": 48.7,
          "CO": 2.0,
          "Station": "Industrial"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": false,
      "domain": [
        15.8,
        50.1
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "CO"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Station"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "NO2 Concentration (ppm)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "CO Levels (ppm)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Station Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "NO2"
          },
          "y": {
            "scale": "y",
            "field": "CO"
          },
          "fill": {
            "scale": "color",
            "field": "Station"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}