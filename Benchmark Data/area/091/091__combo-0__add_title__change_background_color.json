{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing COVID-19 cases over time for multiple regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-01-01",
          "region": "Region A",
          "cases": 0
        },
        {
          "date": "2020-01-01",
          "region": "Region B",
          "cases": 0
        },
        {
          "date": "2020-02-01",
          "region": "Region A",
          "cases": 10
        },
        {
          "date": "2020-02-01",
          "region": "Region B",
          "cases": 5
        },
        {
          "date": "2020-03-01",
          "region": "Region A",
          "cases": 50
        },
        {
          "date": "2020-03-01",
          "region": "Region B",
          "cases": 30
        },
        {
          "date": "2020-04-01",
          "region": "Region A",
          "cases": 200
        },
        {
          "date": "2020-04-01",
          "region": "Region B",
          "cases": 150
        },
        {
          "date": "2020-05-01",
          "region": "Region A",
          "cases": 500
        },
        {
          "date": "2020-05-01",
          "region": "Region B",
          "cases": 400
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange"
      ],
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Cases"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "cases"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "region"
              },
              "interpolate": {
                "value": "monotone"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ]
}