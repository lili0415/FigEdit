{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing stock prices of selected S&P 500 companies over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 150,
          "company": "Apple"
        },
        {
          "date": "2023-01-01",
          "price": 3200,
          "company": "Amazon"
        },
        {
          "date": "2023-01-01",
          "price": 250,
          "company": "Microsoft"
        },
        {
          "date": "2023-02-01",
          "price": 155,
          "company": "Apple"
        },
        {
          "date": "2023-02-01",
          "price": 3150,
          "company": "Amazon"
        },
        {
          "date": "2023-02-01",
          "price": 260,
          "company": "Microsoft"
        },
        {
          "date": "2023-03-01",
          "price": 160,
          "company": "Apple"
        },
        {
          "date": "2023-03-01",
          "price": 3100,
          "company": "Amazon"
        },
        {
          "date": "2023-03-01",
          "price": 270,
          "company": "Microsoft"
        },
        {
          "date": "2023-04-01",
          "price": 165,
          "company": "Apple"
        },
        {
          "date": "2023-04-01",
          "price": 3050,
          "company": "Amazon"
        },
        {
          "date": "2023-04-01",
          "price": 280,
          "company": "Microsoft"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "company"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Stock Price (USD)",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Company",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "company"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "company"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}