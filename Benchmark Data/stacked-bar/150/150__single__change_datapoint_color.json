{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing price distribution across item categories and condition types.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "series": "New",
          "value": 1200
        },
        {
          "category": "Electronics",
          "series": "Used",
          "value": 800
        },
        {
          "category": "Fashion",
          "series": "New",
          "value": 700
        },
        {
          "category": "Fashion",
          "series": "Used",
          "value": 500
        },
        {
          "category": "Home Goods",
          "series": "New",
          "value": 900
        },
        {
          "category": "Home Goods",
          "series": "Used",
          "value": 600
        },
        {
          "category": "Books",
          "series": "New",
          "value": 300
        },
        {
          "category": "Books",
          "series": "Used",
          "value": 200
        },
        {
          "category": "Toys",
          "series": "New",
          "value": 500
        },
        {
          "category": "Toys",
          "series": "Used",
          "value": 400
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "orange",
        "#1f77b4"
      ],
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Item Categories"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Condition",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='Home Goods'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}