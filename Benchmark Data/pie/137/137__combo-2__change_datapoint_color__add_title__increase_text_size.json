{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing proportions of sales by store type.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Supermarket Type A",
          "value": 450000
        },
        {
          "category": "Supermarket Type B",
          "value": 300000
        },
        {
          "category": "Supermarket Type C",
          "value": 150000
        },
        {
          "category": "Supermarket Type D",
          "value": 100000
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#ff5733",
        "#1f77b4",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Store Type",
      "titleFontSize": 14,
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}