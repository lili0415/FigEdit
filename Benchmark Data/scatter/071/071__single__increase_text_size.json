{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing price vs. minimum nights for Airbnb listings in NYC, colored by room type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "price": 150,
          "minimum_nights": 3,
          "room_type": "Entire home/apt"
        },
        {
          "price": 75,
          "minimum_nights": 2,
          "room_type": "Private room"
        },
        {
          "price": 200,
          "minimum_nights": 5,
          "room_type": "Entire home/apt"
        },
        {
          "price": 50,
          "minimum_nights": 1,
          "room_type": "Shared room"
        },
        {
          "price": 120,
          "minimum_nights": 4,
          "room_type": "Private room"
        },
        {
          "price": 300,
          "minimum_nights": 7,
          "room_type": "Entire home/apt"
        },
        {
          "price": 90,
          "minimum_nights": 3,
          "room_type": "Private room"
        },
        {
          "price": 40,
          "minimum_nights": 1,
          "room_type": "Shared room"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        40.0,
        300.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "minimum_nights"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "room_type"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Price (USD)",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Minimum Nights",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Room Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "price"
          },
          "y": {
            "scale": "y",
            "field": "minimum_nights"
          },
          "fill": {
            "scale": "color",
            "field": "room_type"
          },
          "size": {
            "value": 100
          },
          "tooltip": {
            "signal": "datum"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}