{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing revenue distribution across sectors for S&P 500 companies.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Technology",
          "series": "Revenue 2021",
          "value": 120
        },
        {
          "category": "Technology",
          "series": "Revenue 2022",
          "value": 150
        },
        {
          "category": "Healthcare",
          "series": "Revenue 2021",
          "value": 90
        },
        {
          "category": "Healthcare",
          "series": "Revenue 2022",
          "value": 110
        },
        {
          "category": "Financials",
          "series": "Revenue 2021",
          "value": 140
        },
        {
          "category": "Financials",
          "series": "Revenue 2022",
          "value": 160
        },
        {
          "category": "Retail",
          "series": "Revenue 2021",
          "value": 80
        },
        {
          "category": "Retail",
          "series": "Revenue 2022",
          "value": 100
        },
        {
          "category": "Energy",
          "series": "Revenue 2021",
          "value": 70
        },
        {
          "category": "Energy",
          "series": "Revenue 2022",
          "value": 90
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Sector"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Revenue (in millions)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Year",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}