{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot depicting Yelp reviews' ratings and review lengths.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Rating": 5,
          "Review_Length": 120,
          "Category": "Restaurant"
        },
        {
          "Rating": 4,
          "Review_Length": 85,
          "Category": "Salon"
        },
        {
          "Rating": 3,
          "Review_Length": 150,
          "Category": "Gym"
        },
        {
          "Rating": 2,
          "Review_Length": 200,
          "Category": "Restaurant"
        },
        {
          "Rating": 1,
          "Review_Length": 50,
          "Category": "Cafe"
        },
        {
          "Rating": 4,
          "Review_Length": 110,
          "Category": "Hotel"
        },
        {
          "Rating": 5,
          "Review_Length": 95,
          "Category": "Restaurant"
        },
        {
          "Rating": 3,
          "Review_Length": 130,
          "Category": "Cafe"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        50,
        85,
        95,
        110,
        120,
        130,
        150,
        200
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Rating"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Review Length (words)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Rating",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Review_Length"
          },
          "y": {
            "scale": "y",
            "field": "Rating"
          },
          "fill": {
            "scale": "color",
            "field": "Category"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}