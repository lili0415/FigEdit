{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing trends over time for different series.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "interpolate",
      "value": "linear",
      "bind": {
        "input": "select",
        "options": [
          "basis",
          "cardinal",
          "catmull-rom",
          "linear",
          "monotone",
          "natural",
          "step",
          "step-after",
          "step-before"
        ]
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "value": 50,
          "series": "A"
        },
        {
          "date": "2023-02-01",
          "value": 55,
          "series": "A"
        },
        {
          "date": "2023-03-01",
          "value": 60,
          "series": "A"
        },
        {
          "date": "2023-01-01",
          "value": 40,
          "series": "B"
        },
        {
          "date": "2023-02-01",
          "value": 45,
          "series": "B"
        },
        {
          "date": "2023-03-01",
          "value": 50,
          "series": "B"
        },
        {
          "date": "2023-01-01",
          "value": 70,
          "series": "C"
        },
        {
          "date": "2023-02-01",
          "value": 75,
          "series": "C"
        },
        {
          "date": "2023-03-01",
          "value": 80,
          "series": "C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "value"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "interpolate": {
                "signal": "interpolate"
              },
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}