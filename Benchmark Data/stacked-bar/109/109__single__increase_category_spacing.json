{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing temperature anomalies across different years and regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": "1950s",
          "region": "North America",
          "anomaly": 0.2
        },
        {
          "year": "1950s",
          "region": "Europe",
          "anomaly": 0.15
        },
        {
          "year": "1950s",
          "region": "Asia",
          "anomaly": 0.1
        },
        {
          "year": "1960s",
          "region": "North America",
          "anomaly": 0.3
        },
        {
          "year": "1960s",
          "region": "Europe",
          "anomaly": 0.25
        },
        {
          "year": "1960s",
          "region": "Asia",
          "anomaly": 0.2
        },
        {
          "year": "1970s",
          "region": "North America",
          "anomaly": 0.4
        },
        {
          "year": "1970s",
          "region": "Europe",
          "anomaly": 0.35
        },
        {
          "year": "1970s",
          "region": "Asia",
          "anomaly": 0.3
        },
        {
          "year": "1980s",
          "region": "North America",
          "anomaly": 0.5
        },
        {
          "year": "1980s",
          "region": "Europe",
          "anomaly": 0.45
        },
        {
          "year": "1980s",
          "region": "Asia",
          "anomaly": 0.4
        },
        {
          "year": "1990s",
          "region": "North America",
          "anomaly": 0.6
        },
        {
          "year": "1990s",
          "region": "Europe",
          "anomaly": 0.55
        },
        {
          "year": "1990s",
          "region": "Asia",
          "anomaly": 0.5
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "year"
          ],
          "sort": {
            "field": "region"
          },
          "field": "anomaly"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "year"
      },
      "paddingInner": 0.2,
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Decade"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "region"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}