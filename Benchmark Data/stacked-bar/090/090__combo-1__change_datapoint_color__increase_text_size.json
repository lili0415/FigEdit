{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing COVID-19 cases by region and case type.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "North America",
          "series": "Confirmed",
          "value": 500000
        },
        {
          "category": "North America",
          "series": "Deaths",
          "value": 25000
        },
        {
          "category": "North America",
          "series": "Recovered",
          "value": 400000
        },
        {
          "category": "Europe",
          "series": "Confirmed",
          "value": 700000
        },
        {
          "category": "Europe",
          "series": "Deaths",
          "value": 50000
        },
        {
          "category": "Europe",
          "series": "Recovered",
          "value": 600000
        },
        {
          "category": "Asia",
          "series": "Confirmed",
          "value": 900000
        },
        {
          "category": "Asia",
          "series": "Deaths",
          "value": 30000
        },
        {
          "category": "Asia",
          "series": "Recovered",
          "value": 800000
        },
        {
          "category": "South America",
          "series": "Confirmed",
          "value": 400000
        },
        {
          "category": "South America",
          "series": "Deaths",
          "value": 20000
        },
        {
          "category": "South America",
          "series": "Recovered",
          "value": 350000
        },
        {
          "category": "Africa",
          "series": "Confirmed",
          "value": 200000
        },
        {
          "category": "Africa",
          "series": "Deaths",
          "value": 10000
        },
        {
          "category": "Africa",
          "series": "Recovered",
          "value": 150000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c"
      ],
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Cases",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Case Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='South America'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}