{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average hours worked per week by education level from the UCI: Adult dataset.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "education_level": "Bachelors",
          "avg_hours_worked": 40
        },
        {
          "education_level": "Masters",
          "avg_hours_worked": 42
        },
        {
          "education_level": "Doctorate",
          "avg_hours_worked": 45
        },
        {
          "education_level": "High School",
          "avg_hours_worked": 38
        },
        {
          "education_level": "Some College",
          "avg_hours_worked": 39
        },
        {
          "education_level": "Associate",
          "avg_hours_worked": 37
        },
        {
          "education_level": "Prof-School",
          "avg_hours_worked": 46
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "education_level"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "avg_hours_worked"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Education Level",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Hours Worked per Week",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "education_level"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_hours_worked"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}