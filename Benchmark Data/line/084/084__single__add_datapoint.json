{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing Bitcoin closing prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-05-01",
          "price": 57895,
          "series": "Closing Price"
        },
        {
          "date": "2021-05-02",
          "price": 56683,
          "series": "Closing Price"
        },
        {
          "date": "2021-05-03",
          "price": 57345,
          "series": "Closing Price"
        },
        {
          "date": "2021-05-04",
          "price": 53245,
          "series": "Closing Price"
        },
        {
          "date": "2021-05-05",
          "price": 57468,
          "series": "Closing Price"
        },
        {
          "date": "2021-05-06",
          "price": 58895,
          "series": "Closing Price"
        },
        {
          "date": "2021-05-07",
          "price": 60000,
          "series": "Closing Price"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "price"
          },
          "stroke": {
            "scale": "color",
            "field": "series"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          },
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ]
}