{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Dot plot showing values for categories in Santander Value Prediction dataset.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Group A",
          "value": 120
        },
        {
          "category": "Group B",
          "value": 150
        },
        {
          "category": "Group C",
          "value": 170
        },
        {
          "category": "Group D",
          "value": 200
        },
        {
          "category": "Group E",
          "value": 190
        },
        {
          "category": "Group F",
          "value": 180
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category",
            "band": 0.5
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}