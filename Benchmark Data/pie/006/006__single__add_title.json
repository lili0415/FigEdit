{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing survival proportions on the Titanic.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "title": {
    "text": "Edited Chart"
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Survived",
          "value": 342
        },
        {
          "category": "Did Not Survive",
          "value": 549
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Survival Status",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}