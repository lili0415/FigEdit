{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing sales values for different store categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "StoreType": "A",
          "Sales": 2500
        },
        {
          "StoreType": "B",
          "Sales": 3000
        },
        {
          "StoreType": "C",
          "Sales": 2800
        },
        {
          "StoreType": "D",
          "Sales": 3200
        },
        {
          "StoreType": "A",
          "Sales": 2600
        },
        {
          "StoreType": "B",
          "Sales": 3100
        },
        {
          "StoreType": "C",
          "Sales": 2700
        },
        {
          "StoreType": "D",
          "Sales": 3300
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "table",
        "field": "StoreType"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "Sales"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Store Type",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Sales",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "StoreType"
          },
          "y": {
            "scale": "y",
            "field": "Sales"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        },
        "update": {
          "opacity": {
            "value": 0.8
          }
        },
        "hover": {
          "opacity": {
            "value": 1
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}