{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing two numeric fields with an optional categorical series for color.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Transaction_Value": 12000,
          "Customer_Age": 34,
          "Region": "North"
        },
        {
          "Transaction_Value": 15000,
          "Customer_Age": 29,
          "Region": "South"
        },
        {
          "Transaction_Value": 8000,
          "Customer_Age": 45,
          "Region": "East"
        },
        {
          "Transaction_Value": 20000,
          "Customer_Age": 38,
          "Region": "West"
        },
        {
          "Transaction_Value": 17000,
          "Customer_Age": 50,
          "Region": "North"
        },
        {
          "Transaction_Value": 9000,
          "Customer_Age": 27,
          "Region": "South"
        },
        {
          "Transaction_Value": 11000,
          "Customer_Age": 31,
          "Region": "East"
        },
        {
          "Transaction_Value": 14000,
          "Customer_Age": 40,
          "Region": "West"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        8000.0,
        20000.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Customer_Age"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Region"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Transaction Value",
      "grid": true
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Customer Age",
      "grid": true
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Transaction_Value"
          },
          "y": {
            "scale": "y",
            "field": "Customer_Age"
          },
          "fill": {
            "scale": "color",
            "field": "Region"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}