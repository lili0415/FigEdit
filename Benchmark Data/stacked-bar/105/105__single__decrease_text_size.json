{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing Bitcoin price components over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "January",
          "series": "Open Price",
          "value": 43000
        },
        {
          "category": "January",
          "series": "Close Price",
          "value": 45000
        },
        {
          "category": "January",
          "series": "High Price",
          "value": 47000
        },
        {
          "category": "January",
          "series": "Low Price",
          "value": 42000
        },
        {
          "category": "February",
          "series": "Open Price",
          "value": 46000
        },
        {
          "category": "February",
          "series": "Close Price",
          "value": 47000
        },
        {
          "category": "February",
          "series": "High Price",
          "value": 48000
        },
        {
          "category": "February",
          "series": "Low Price",
          "value": 45000
        },
        {
          "category": "March",
          "series": "Open Price",
          "value": 47000
        },
        {
          "category": "March",
          "series": "Close Price",
          "value": 46000
        },
        {
          "category": "March",
          "series": "High Price",
          "value": 49000
        },
        {
          "category": "March",
          "series": "Low Price",
          "value": 44000
        },
        {
          "category": "April",
          "series": "Open Price",
          "value": 45000
        },
        {
          "category": "April",
          "series": "Close Price",
          "value": 44000
        },
        {
          "category": "April",
          "series": "High Price",
          "value": 46000
        },
        {
          "category": "April",
          "series": "Low Price",
          "value": 43000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Price Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}