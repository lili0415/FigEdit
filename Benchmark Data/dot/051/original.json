{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing stroke prediction values for different categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Hypertension",
          "Value": 1
        },
        {
          "Category": "Heart Disease",
          "Value": 0
        },
        {
          "Category": "Smoking Status",
          "Value": 1
        },
        {
          "Category": "Hypertension",
          "Value": 0
        },
        {
          "Category": "Heart Disease",
          "Value": 1
        },
        {
          "Category": "Smoking Status",
          "Value": 0
        },
        {
          "Category": "Hypertension",
          "Value": 1
        },
        {
          "Category": "Heart Disease",
          "Value": 0
        },
        {
          "Category": "Smoking Status",
          "Value": 1
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "stroke": {
            "value": "black"
          },
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}