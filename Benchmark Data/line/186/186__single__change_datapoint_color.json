{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart of FAO Food Price Index trends over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "2022-01",
          "index": 135.7,
