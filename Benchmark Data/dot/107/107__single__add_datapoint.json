{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing air quality measurements for different categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "CO (mg/m^3)",
          "Value": 2.5
        },
        {
          "Category": "CO (mg/m^3)",
          "Value": 3.0
        },
        {
          "Category": "CO (mg/m^3)",
          "Value": 2.8
        },
        {
          "Category": "NOx (ppb)",
          "Value": 15
        },
        {
          "Category": "NOx (ppb)",
          "Value": 18
        },
        {
          "Category": "NOx (ppb)",
          "Value": 16
        },
        {
          "Category": "O3 (µg/m^3)",
          "Value": 55
        },
        {
          "Category": "O3 (µg/m^3)",
          "Value": 60
        },
        {
          "Category": "O3 (µg/m^3)",
          "Value": 58
        },
        {
          "Category": "PM2.5 (µg/m^3)",
          "Value": 35
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#4682b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}