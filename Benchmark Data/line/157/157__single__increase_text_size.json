{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature anomalies over time for different regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "temperature_data",
      "values": [
        {
          "year": 1880,
          "temperature_anomaly": -0.12,
          "region": "Global"
        },
        {
          "year": 1881,
          "temperature_anomaly": -0.08,
          "region": "Global"
        },
        {
          "year": 1882,
          "temperature_anomaly": -0.1,
          "region": "Global"
        },
        {
          "year": 1880,
          "temperature_anomaly": -0.22,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1881,
          "temperature_anomaly": -0.18,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1882,
          "temperature_anomaly": -0.2,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1880,
          "temperature_anomaly": -0.02,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1881,
          "temperature_anomaly": 0.02,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1882,
          "temperature_anomaly": 0.0,
          "region": "Southern Hemisphere"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        1880,
        1881,
        1882
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "temperature_data",
        "field": "temperature_anomaly"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "temperature_data",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Temperature Anomaly (Â°C)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "temperature_data",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "temperature_anomaly"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}