{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing Happiness Scores over years for different countries.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2015,
          "score": 7.5,
          "country": "Norway"
        },
        {
          "year": 2016,
          "score": 7.6,
          "country": "Norway"
        },
        {
          "year": 2017,
          "score": 7.7,
          "country": "Norway"
        },
        {
          "year": 2015,
          "score": 7.2,
          "country": "Denmark"
        },
        {
          "year": 2016,
          "score": 7.3,
          "country": "Denmark"
        },
        {
          "year": 2017,
          "score": 7.4,
          "country": "Denmark"
        },
        {
          "year": 2016,
          "score": 6.9,
          "country": "Sweden"
        },
        {
          "year": 2017,
          "score": 7.0,
          "country": "Sweden"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "score"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "country"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Happiness Score"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Country",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "country"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "score"
              },
              "stroke": {
                "scale": "color",
                "field": "country"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}