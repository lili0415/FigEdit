{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot of Amazon reviews showing helpfulness and review length.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Helpfulness": 0.85,
          "ReviewLength": 120,
          "Category": "Books"
        },
        {
          "Helpfulness": 0.7,
          "ReviewLength": 250,
          "Category": "Electronics"
        },
        {
          "Helpfulness": 0.9,
          "ReviewLength": 300,
          "Category": "Clothing"
        },
        {
          "Helpfulness": 0.65,
          "ReviewLength": 180,
          "Category": "Home"
        },
        {
          "Helpfulness": 0.75,
          "ReviewLength": 220,
          "Category": "Toys"
        },
        {
          "Helpfulness": 0.95,
          "ReviewLength": 400,
          "Category": "Books"
        },
        {
          "Helpfulness": 0.5,
          "ReviewLength": 100,
          "Category": "Electronics"
        },
        {
          "Helpfulness": 0.8,
          "ReviewLength": 270,
          "Category": "Clothing"
        },
        {
          "Helpfulness": 0.6,
          "ReviewLength": 150,
          "Category": "Home"
        },
        {
          "Helpfulness": 0.88,
          "ReviewLength": 320,
          "Category": "Toys"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": [
        100.0,
        400.0
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Helpfulness"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Review Length (words)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Helpfulness Score",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "ReviewLength"
          },
          "y": {
            "scale": "y",
            "field": "Helpfulness"
          },
          "fill": {
            "scale": "color",
            "field": "Category"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}