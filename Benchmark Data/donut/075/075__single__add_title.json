{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing the proportion of happiness factors.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "GDP per Capita",
          "value": 35
        },
        {
          "category": "Social Support",
          "value": 25
        },
        {
          "category": "Healthy Life Expectancy",
          "value": 20
        },
        {
          "category": "Freedom to Make Choices",
          "value": 10
        },
        {
          "category": "Generosity",
          "value": 5
        },
        {
          "category": "Perceptions of Corruption",
          "value": 5
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Happiness Factors",
      "orient": "right"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "anchor": "middle",
    "fontSize": 16,
    "dy": -10
  }
}