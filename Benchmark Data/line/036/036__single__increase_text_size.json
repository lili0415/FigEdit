{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing the number of routes over different years for two airlines.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2015,
          "routes": 120,
          "airline": "Airline X"
        },
        {
          "year": 2016,
          "routes": 150,
          "airline": "Airline X"
        },
        {
          "year": 2017,
          "routes": 170,
          "airline": "Airline X"
        },
        {
          "year": 2018,
          "routes": 200,
          "airline": "Airline X"
        },
        {
          "year": 2015,
          "routes": 100,
          "airline": "Airline Y"
        },
        {
          "year": 2016,
          "routes": 130,
          "airline": "Airline Y"
        },
        {
          "year": 2017,
          "routes": 160,
          "airline": "Airline Y"
        },
        {
          "year": 2018,
          "routes": 190,
          "airline": "Airline Y"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "routes"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "airline"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Routes",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Airline",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "airline"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "routes"
              },
              "stroke": {
                "scale": "color",
                "field": "airline"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}