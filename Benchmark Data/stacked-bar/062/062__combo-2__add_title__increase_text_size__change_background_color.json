{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing COVID-19 cases by region and month.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "North America",
          "series": "January",
          "value": 120000
        },
        {
          "category": "North America",
          "series": "February",
          "value": 150000
        },
        {
          "category": "North America",
          "series": "March",
          "value": 200000
        },
        {
          "category": "Europe",
          "series": "January",
          "value": 100000
        },
        {
          "category": "Europe",
          "series": "February",
          "value": 140000
        },
        {
          "category": "Europe",
          "series": "March",
          "value": 180000
        },
        {
          "category": "Asia",
          "series": "January",
          "value": 90000
        },
        {
          "category": "Asia",
          "series": "February",
          "value": 120000
        },
        {
          "category": "Asia",
          "series": "March",
          "value": 160000
        },
        {
          "category": "South America",
          "series": "January",
          "value": 70000
        },
        {
          "category": "South America",
          "series": "February",
          "value": 90000
        },
        {
          "category": "South America",
          "series": "March",
          "value": 110000
        },
        {
          "category": "Africa",
          "series": "January",
          "value": 50000
        },
        {
          "category": "Africa",
          "series": "February",
          "value": 70000
        },
        {
          "category": "Africa",
          "series": "March",
          "value": 90000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "COVID-19 Cases",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Month",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}