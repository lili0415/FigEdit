{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing player attributes from the European Soccer Database.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart"
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Overall_Rating": 85,
          "Potential": 92,
          "Position": "Forward"
        },
        {
          "Overall_Rating": 78,
          "Potential": 81,
          "Position": "Midfielder"
        },
        {
          "Overall_Rating": 88,
          "Potential": 90,
          "Position": "Defender"
        },
        {
          "Overall_Rating": 75,
          "Potential": 80,
          "Position": "Goalkeeper"
        },
        {
          "Overall_Rating": 82,
          "Potential": 85,
          "Position": "Midfielder"
        },
        {
          "Overall_Rating": 90,
          "Potential": 94,
          "Position": "Forward"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        75,
        78,
        82,
        85,
        88,
        90
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Potential"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Overall Rating"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Potential"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Overall_Rating"
          },
          "y": {
            "scale": "y",
            "field": "Potential"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ]
}