{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions for UCI: Iris dataset.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "startAngle",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.29,
        "step": 0.01
      }
    },
    {
      "name": "endAngle",
      "value": 6.29,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.29,
        "step": 0.01
      }
    },
    {
      "name": "innerRadius",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 90,
        "step": 1
      }
    },
    {
      "name": "padAngle",
      "value": 0.02,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 0.1,
        "step": 0.01
      }
    },
    {
      "name": "cornerRadius",
      "value": 5,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10,
        "step": 0.5
      }
    },
    {
      "name": "sort",
      "value": false,
      "bind": {
        "input": "checkbox"
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "species": "Iris-setosa",
          "count": 50
        },
        {
          "species": "Iris-versicolor",
          "count": 50
        },
        {
          "species": "Iris-virginica",
          "count": 50
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "count",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "species"
      },
      "range": [
        "#FF5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Species",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "species"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}