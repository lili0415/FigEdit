{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing flight delays over months for different airlines.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "2023-01",
          "delay": 15,
          "airline": "Airline A"
        },
        {
          "month": "2023-02",
          "delay": 20,
          "airline": "Airline A"
        },
        {
          "month": "2023-03",
          "delay": 18,
          "airline": "Airline A"
        },
        {
          "month": "2023-01",
          "delay": 12,
          "airline": "Airline B"
        },
        {
          "month": "2023-02",
          "delay": 25,
          "airline": "Airline B"
        },
        {
          "month": "2023-03",
          "delay": 22,
          "airline": "Airline B"
        },
        {
          "month": "2023-01",
          "delay": 10,
          "airline": "Airline C"
        },
        {
          "month": "2023-02",
          "delay": 15,
          "airline": "Airline C"
        },
        {
          "month": "2023-03",
          "delay": 14,
          "airline": "Airline C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "delay"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "airline"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Average Delay (minutes)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Airline",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "airline"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "month"
              },
              "y": {
                "scale": "y",
                "field": "delay"
              },
              "stroke": {
                "scale": "color",
                "field": "airline"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}