{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Stacked bar chart showing COVID-19 cases by region and case type.",
  "width": 600,
  "height": 400,
  "padding": 10,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "North America",
          "series": "Confirmed",
          "value": 120000
        },
        {
          "category": "North America",
          "series": "Deaths",
          "value": 5000
        },
        {
          "category": "North America",
          "series": "Recovered",
          "value": 80000
        },
        {
          "category": "Europe",
          "series": "Confirmed",
          "value": 150000
        },
        {
          "category": "Europe",
          "series": "Deaths",
          "value": 7000
        },
        {
          "category": "Europe",
          "series": "Recovered",
          "value": 90000
        },
        {
          "category": "Asia",
          "series": "Confirmed",
          "value": 300000
        },
        {
          "category": "Asia",
          "series": "Deaths",
          "value": 10000
        },
        {
          "category": "Asia",
          "series": "Recovered",
          "value": 200000
        },
        {
          "category": "South America",
          "series": "Confirmed",
          "value": 100000
        },
        {
          "category": "South America",
          "series": "Deaths",
          "value": 4000
        },
        {
          "category": "South America",
          "series": "Recovered",
          "value": 60000
        },
        {
          "category": "Africa",
          "series": "Confirmed",
          "value": 50000
        },
        {
          "category": "Africa",
          "series": "Deaths",
          "value": 2000
        },
        {
          "category": "Africa",
          "series": "Recovered",
          "value": 30000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Cases"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Case Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}