{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing the distribution of diabetes pedigree function scores.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "0.0-0.2",
          "value": 45
        },
        {
          "category": "0.2-0.4",
          "value": 78
        },
        {
          "category": "0.4-0.6",
          "value": 120
        },
        {
          "category": "0.6-0.8",
          "value": 95
        },
        {
          "category": "0.8-1.0",
          "value": 60
        },
        {
          "category": "1.0-1.2",
          "value": 30
        },
        {
          "category": "1.2-1.4",
          "value": 15
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Diabetes Pedigree Function Range",
      "labelFontSize": 12,
      "tickSize": 10,
      "titleFontSize": 14
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count of Individuals",
      "labelFontSize": 12,
      "tickSize": 10,
      "titleFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.value",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.value"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}