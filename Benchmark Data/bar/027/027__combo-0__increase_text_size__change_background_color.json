{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the distribution of vehicle insurance claim frequencies by vehicle age group.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "vehicle_age_group": "0-2 years",
          "claim_frequency": 120
        },
        {
          "vehicle_age_group": "2-5 years",
          "claim_frequency": 200
        },
        {
          "vehicle_age_group": "5-10 years",
          "claim_frequency": 180
        },
        {
          "vehicle_age_group": "10-15 years",
          "claim_frequency": 150
        },
        {
          "vehicle_age_group": "15+ years",
          "claim_frequency": 90
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "vehicle_age_group"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "claim_frequency"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Vehicle Age Group",
      "labelFontSize": 14,
      "tickSize": 10,
      "titleFontSize": 14
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Claim Frequency",
      "labelFontSize": 14,
      "tickSize": 10,
      "titleFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "vehicle_age_group"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "claim_frequency"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.vehicle_age_group",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.claim_frequency",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.claim_frequency"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 14
    }
  }
}