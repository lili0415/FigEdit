{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Scatter plot of IMDB reviews data.",
  "width": 300,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Review_Length": 120,
          "Sentiment_Score": 0.8,
          "Genre": "Drama"
        },
        {
          "Review_Length": 200,
          "Sentiment_Score": 0.6,
          "Genre": "Comedy"
        },
        {
          "Review_Length": 150,
          "Sentiment_Score": 0.9,
          "Genre": "Action"
        },
        {
          "Review_Length": 180,
          "Sentiment_Score": 0.7,
          "Genre": "Romance"
        },
        {
          "Review_Length": 90,
          "Sentiment_Score": 0.5,
          "Genre": "Horror"
        },
        {
          "Review_Length": 160,
          "Sentiment_Score": 0.85,
          "Genre": "Thriller"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        90,
        120,
        150,
        180,
        200
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Sentiment_Score"
      },
      "range": "height",
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Genre"
      },
      "range": [
        "#e41a1c",
        "#377eb8",
        "#4daf4a",
        "#984ea3",
        "#ff7f00"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Review Length"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Sentiment Score"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Review_Length"
          },
          "y": {
            "scale": "y",
            "field": "Sentiment_Score"
          },
          "fill": {
            "scale": "color",
            "field": "Genre"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ]
}