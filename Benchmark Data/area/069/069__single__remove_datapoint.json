{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing bike rentals over time with two series for casual and registered users.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-01",
          "casual": 500,
          "registered": 1500
        },
        {
          "date": "2021-02",
          "casual": 600,
          "registered": 1600
        },
        {
          "date": "2021-03",
          "casual": 700,
          "registered": 1700
        },
        {
          "date": "2021-04",
          "casual": 800,
          "registered": 1800
        },
        {
          "date": "2021-05",
          "casual": 900,
          "registered": 1900
        },
        {
          "date": "2021-06",
          "casual": 1000,
          "registered": 2000
        },
        {
          "date": "2021-07",
          "casual": 1100,
          "registered": 2100
        }
      ],
      "transform": [
        {
          "type": "fold",
          "fields": [
            "casual",
            "registered"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Rentals"
    }
  ],
  "marks": [
    {
      "type": "group",
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "table"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "casual"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "value": "lightblue"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        },
        {
          "type": "area",
          "from": {
            "data": "table"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "registered"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "value": "steelblue"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}