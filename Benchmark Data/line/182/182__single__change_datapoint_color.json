{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing OECD PISA Scores over years for different subjects.",
  "width": 600,
  "height": 400,
  "padding": 10,
  "data": [
    {
      "name": "scores",
      "values": [
        {
          "year": 2012,
          "subject": "Math",
          "score": 494
        },
        {
          "year": 2012,
          "subject": "Science",
          "score": 501
        },
        {
          "year": 2012,
          "subject": "Reading",
          "score": 496
        },
        {
          "year": 2015,
          "subject": "Math",
          "score": 490
        },
        {
          "year": 2015,
          "subject": "Science",
          "score": 493
        },
        {
          "year": 2015,
          "subject": "Reading",
          "score": 493
        },
        {
          "year": 2018,
          "subject": "Math",
          "score": 489
        },
        {
          "year": 2018,
          "subject": "Science",
          "score": 490
        },
        {
          "year": 2018,
          "subject": "Reading",
          "score": 487
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2012,
        2015,
        2018
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "scores",
        "field": "score"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "green"
      ],
      "domain": {
        "data": "scores",
        "field": "subject"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "PISA Score"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Subject",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "scores",
          "groupby": "subject"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "score"
              },
              "stroke": {
                "scale": "color",
                "field": "subject"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}