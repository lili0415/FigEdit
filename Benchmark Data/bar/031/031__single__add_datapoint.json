{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average concentrations of pollutants.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "pollutant": "CO",
          "concentration": 2.3
        },
        {
          "pollutant": "NO2",
          "concentration": 18.5
        },
        {
          "pollutant": "O3",
          "concentration": 32.1
        },
        {
          "pollutant": "PM10",
          "concentration": 45.2
        },
        {
          "pollutant": "PM2.5",
          "concentration": 25.7
        },
        {
          "pollutant": "SO2",
          "concentration": 10.8
        },
        {
          "pollutant": "NH3",
          "concentration": 15.3
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "pollutant"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "concentration"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Pollutant"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Concentration (µg/m³)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "pollutant"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "concentration"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    }
  ]
}