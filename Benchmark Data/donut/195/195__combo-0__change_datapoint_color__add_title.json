{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing sales contributions by store type.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.29
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "cornerRadius",
      "value": 5
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "store_type": "Grocery Store",
          "sales": 45000
        },
        {
          "store_type": "Pharmacy",
          "sales": 30000
        },
        {
          "store_type": "Electronics",
          "sales": 20000
        },
        {
          "store_type": "Clothing",
          "sales": 15000
        },
        {
          "store_type": "Furniture",
          "sales": 10000
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "store_type"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#FF5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Store Type",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "store_type"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}