{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing home run totals for different MLB players.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "player": "Babe Ruth",
          "home_runs": 714
        },
        {
          "player": "Hank Aaron",
          "home_runs": 755
        },
        {
          "player": "Barry Bonds",
          "home_runs": 762
        },
        {
          "player": "Willie Mays",
          "home_runs": 660
        },
        {
          "player": "Ken Griffey Jr.",
          "home_runs": 630
        },
        {
          "player": "Alex Rodriguez",
          "home_runs": 696
        },
        {
          "player": "Albert Pujols",
          "home_runs": 703
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "player"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "home_runs"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Player"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Home Runs"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "player"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "home_runs"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    }
  ]
}