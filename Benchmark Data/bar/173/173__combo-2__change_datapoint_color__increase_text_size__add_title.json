{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing FAO Food Price Index categories and their values.",
  "width": 400,
  "height": 250,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Cereals",
          "value": 140
        },
        {
          "category": "Dairy",
          "value": 120
        },
        {
          "category": "Meat",
          "value": 135
        },
        {
          "category": "Sugar",
          "value": 90
        },
        {
          "category": "Vegetable Oils",
          "value": 150
        },
        {
          "category": "Fruits",
          "value": 100
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Food Category",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Index Value",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "field": "category",
            "scale": {
              "type": "ordinal",
              "domain": [
                "Sugar"
              ],
              "range": [
                "#FF5733"
              ]
            }
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['category']==='Vegetable Oils'",
              "value": "#ff7f0e"
            },
            {
              "value": "#4CAF50"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}