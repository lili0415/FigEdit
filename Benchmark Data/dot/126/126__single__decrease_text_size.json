{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing individual points for categories and their values.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "Category": "Low Income",
          "Value": 12000
        },
        {
          "Category": "Middle Income",
          "Value": 25000
        },
        {
          "Category": "High Income",
          "Value": 40000
        },
        {
          "Category": "Very High Income",
          "Value": 60000
        },
        {
          "Category": "Low Income",
          "Value": 15000
        },
        {
          "Category": "Middle Income",
          "Value": 27000
        },
        {
          "Category": "High Income",
          "Value": 45000
        },
        {
          "Category": "Very High Income",
          "Value": 70000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "table",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "stroke": {
            "value": "black"
          },
          "fill": {
            "value": "steelblue"
          },
          "fillOpacity": {
            "value": 0.7
          }
        },
        "update": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}