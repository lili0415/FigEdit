{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing price trends over time for different product categories.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-01",
          "category": "Electronics",
          "price": 120
        },
        {
          "date": "2021-02",
          "category": "Electronics",
          "price": 140
        },
        {
          "date": "2021-03",
          "category": "Electronics",
          "price": 135
        },
        {
          "date": "2021-01",
          "category": "Furniture",
          "price": 80
        },
        {
          "date": "2021-02",
          "category": "Furniture",
          "price": 95
        },
        {
          "date": "2021-03",
          "category": "Furniture",
          "price": 90
        },
        {
          "date": "2021-01",
          "category": "Clothing",
          "price": 60
        },
        {
          "date": "2021-02",
          "category": "Clothing",
          "price": 70
        },
        {
          "date": "2021-03",
          "category": "Clothing",
          "price": 65
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['category']=='Electronics' || datum['category']=='Furniture'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Price"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "price"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "category"
              },
              "interpolate": {
                "value": "monotone"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ]
}