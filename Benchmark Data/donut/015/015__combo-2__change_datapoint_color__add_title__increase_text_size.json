{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing proportions of different household income ranges.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "padAngle",
      "value": 0.01
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "cornerRadius",
      "value": 5
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Less than $25,000",
          "value": 15
        },
        {
          "category": "$25,000 - $49,999",
          "value": 25
        },
        {
          "category": "$50,000 - $74,999",
          "value": 30
        },
        {
          "category": "$75,000 - $99,999",
          "value": 20
        },
        {
          "category": "$100,000 and above",
          "value": 10
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#FF5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Household Income",
      "orient": "right",
      "symbolType": "circle",
      "titleFontSize": 14
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}