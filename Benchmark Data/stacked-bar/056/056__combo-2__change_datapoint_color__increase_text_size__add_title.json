{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing survey responses by category and series.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Technology Usage",
          "series": "Agree",
          "value": 45,
          "fill": "#FF5733"
        },
        {
          "category": "Technology Usage",
          "series": "Neutral",
          "value": 25
        },
        {
          "category": "Technology Usage",
          "series": "Disagree",
          "value": 30
        },
        {
          "category": "Social Media Impact",
          "series": "Agree",
          "value": 60
        },
        {
          "category": "Social Media Impact",
          "series": "Neutral",
          "value": 20
        },
        {
          "category": "Social Media Impact",
          "series": "Disagree",
          "value": 20
        },
        {
          "category": "Online Privacy Concerns",
          "series": "Agree",
          "value": 50
        },
        {
          "category": "Online Privacy Concerns",
          "series": "Neutral",
          "value": 30
        },
        {
          "category": "Online Privacy Concerns",
          "series": "Disagree",
          "value": 20
        },
        {
          "category": "News Trustworthiness",
          "series": "Agree",
          "value": 40
        },
        {
          "category": "News Trustworthiness",
          "series": "Neutral",
          "value": 35
        },
        {
          "category": "News Trustworthiness",
          "series": "Disagree",
          "value": 25
        },
        {
          "category": "Climate Change Awareness",
          "series": "Agree",
          "value": 70
        },
        {
          "category": "Climate Change Awareness",
          "series": "Neutral",
          "value": 15
        },
        {
          "category": "Climate Change Awareness",
          "series": "Disagree",
          "value": 15
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Survey Categories",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Responses",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Response Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}