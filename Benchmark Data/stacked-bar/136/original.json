{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing average monthly precipitation by region.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "January",
          "region": "Northwest",
          "precipitation": 5.2
        },
        {
          "month": "January",
          "region": "Southwest",
          "precipitation": 3.1
        },
        {
          "month": "January",
          "region": "Northeast",
          "precipitation": 4.8
        },
        {
          "month": "January",
          "region": "Southeast",
          "precipitation": 6.0
        },
        {
          "month": "February",
          "region": "Northwest",
          "precipitation": 4.9
        },
        {
          "month": "February",
          "region": "Southwest",
          "precipitation": 2.8
        },
        {
          "month": "February",
          "region": "Northeast",
          "precipitation": 4.5
        },
        {
          "month": "February",
          "region": "Southeast",
          "precipitation": 5.7
        },
        {
          "month": "March",
          "region": "Northwest",
          "precipitation": 5.6
        },
        {
          "month": "March",
          "region": "Southwest",
          "precipitation": 3.3
        },
        {
          "month": "March",
          "region": "Northeast",
          "precipitation": 5.0
        },
        {
          "month": "March",
          "region": "Southeast",
          "precipitation": 6.3
        },
        {
          "month": "April",
          "region": "Northwest",
          "precipitation": 4.8
        },
        {
          "month": "April",
          "region": "Southwest",
          "precipitation": 2.9
        },
        {
          "month": "April",
          "region": "Northeast",
          "precipitation": 4.4
        },
        {
          "month": "April",
          "region": "Southeast",
          "precipitation": 5.5
        },
        {
          "month": "May",
          "region": "Northwest",
          "precipitation": 4.3
        },
        {
          "month": "May",
          "region": "Southwest",
          "precipitation": 2.6
        },
        {
          "month": "May",
          "region": "Northeast",
          "precipitation": 4.1
        },
        {
          "month": "May",
          "region": "Southeast",
          "precipitation": 5.2
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "month"
          ],
          "sort": {
            "field": "region"
          },
          "field": "precipitation"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "padding": 0.1,
      "domain": {
        "data": "table",
        "field": "month"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Precipitation (inches)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "month"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "region"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}