{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing house prices by region and type.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "region": "North",
          "type": "Detached",
          "price": 320000
        },
        {
          "region": "North",
          "type": "Semi-Detached",
          "price": 220000
        },
        {
          "region": "North",
          "type": "Terraced",
          "price": 180000
        },
        {
          "region": "South",
          "type": "Detached",
          "price": 450000
        },
        {
          "region": "South",
          "type": "Semi-Detached",
          "price": 300000
        },
        {
          "region": "South",
          "type": "Terraced",
          "price": 250000,
          "color": "#FF5733"
        },
        {
          "region": "East",
          "type": "Detached",
          "price": 400000
        },
        {
          "region": "East",
          "type": "Semi-Detached",
          "price": 280000
        },
        {
          "region": "East",
          "type": "Terraced",
          "price": 240000
        },
        {
          "region": "West",
          "type": "Detached",
          "price": 370000
        },
        {
          "region": "West",
          "type": "Semi-Detached",
          "price": 260000
        },
        {
          "region": "West",
          "type": "Terraced",
          "price": 210000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "region"
          ],
          "sort": {
            "field": "type"
          },
          "field": "price"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "region"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price ($)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "region"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "type"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['region']==='North'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}