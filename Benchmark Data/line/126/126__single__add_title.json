{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing house prices over time for different regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-01",
          "price": 250000,
          "region": "Region A"
        },
        {
          "date": "2020-02",
          "price": 260000,
          "region": "Region A"
        },
        {
          "date": "2020-03",
          "price": 270000,
          "region": "Region A"
        },
        {
          "date": "2020-01",
          "price": 300000,
          "region": "Region B"
        },
        {
          "date": "2020-02",
          "price": 310000,
          "region": "Region B"
        },
        {
          "date": "2020-03",
          "price": 320000,
          "region": "Region B"
        },
        {
          "date": "2020-01",
          "price": 200000,
          "region": "Region C"
        },
        {
          "date": "2020-02",
          "price": 210000,
          "region": "Region C"
        },
        {
          "date": "2020-03",
          "price": 220000,
          "region": "Region C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "House Price ($)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}