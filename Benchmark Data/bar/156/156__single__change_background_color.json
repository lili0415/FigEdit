{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing mortality rates by cause.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "cause": "Cardiovascular Diseases",
          "mortality_rate": 230
        },
        {
          "cause": "Respiratory Diseases",
          "mortality_rate": 150
        },
        {
          "cause": "Neoplasms",
          "mortality_rate": 180
        },
        {
          "cause": "Infectious Diseases",
          "mortality_rate": 120
        },
        {
          "cause": "Digestive Diseases",
          "mortality_rate": 90
        },
        {
          "cause": "Diabetes Mellitus",
          "mortality_rate": 70
        },
        {
          "cause": "Neurological Disorders",
          "mortality_rate": 50
        },
        {
          "cause": "Mental Disorders",
          "mortality_rate": 40
        },
        {
          "cause": "Musculoskeletal Disorders",
          "mortality_rate": 30
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "cause"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "mortality_rate"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Cause of Death"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Mortality Rate (per 100,000)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "cause"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "mortality_rate"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.cause",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.mortality_rate",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.mortality_rate"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}