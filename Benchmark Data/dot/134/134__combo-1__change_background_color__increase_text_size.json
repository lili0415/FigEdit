{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing player overall ratings by position.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Position": "ST",
          "Overall": 89
        },
        {
          "Position": "GK",
          "Overall": 91
        },
        {
          "Position": "CM",
          "Overall": 85
        },
        {
          "Position": "CB",
          "Overall": 87
        },
        {
          "Position": "LW",
          "Overall": 90
        },
        {
          "Position": "RW",
          "Overall": 88
        },
        {
          "Position": "LB",
          "Overall": 86
        },
        {
          "Position": "RB",
          "Overall": 85
        },
        {
          "Position": "CDM",
          "Overall": 84
        },
        {
          "Position": "CAM",
          "Overall": 86
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Overall"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Position",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Overall Rating",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Position"
          },
          "y": {
            "scale": "y",
            "field": "Overall"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}