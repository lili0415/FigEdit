        },
        {
          "category": "Meat",
          "series": "2018",
          "value": 140
        },
        {
          "category": "Meat",
          "series": "2019",
          "value": 155
        },
        {
          "category": "Meat",
          "series": "2020",
          "value": 160
        },
        {
          "category": "Cereals",
          "series": "2018",
          "value": 110
        },
        {
          "category": "Cereals",
          "series": "2019",
          "value": 125
        },
        {
          "category": "Cereals",
          "series": "2020",
          "value": 140
        },
        {
          "category": "Sugar",
          "series": "2018",
          "value": 90
        },
        {
          "category": "Sugar",
