{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot of alcohol content vs. malic acid with wine class as color.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Alcohol": 13.2,
          "Malic_Acid": 1.78,
          "Wine_Class": "Class_1"
        },
        {
          "Alcohol": 12.8,
          "Malic_Acid": 2.36,
          "Wine_Class": "Class_2"
        },
        {
          "Alcohol": 13.5,
          "Malic_Acid": 1.73,
          "Wine_Class": "Class_1"
        },
        {
          "Alcohol": 14.2,
          "Malic_Acid": 2.14,
          "Wine_Class": "Class_3"
        },
        {
          "Alcohol": 13.0,
          "Malic_Acid": 1.95,
          "Wine_Class": "Class_2"
        },
        {
          "Alcohol": 12.6,
          "Malic_Acid": 2.46,
          "Wine_Class": "Class_3"
        },
        {
          "Alcohol": 13.7,
          "Malic_Acid": 1.85,
          "Wine_Class": "Class_1"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        12.6,
        14.2
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Malic_Acid"
      },
      "range": "height",
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Wine_Class"
      },
      "range": [
        "#e377c2",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Alcohol Content",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Malic Acid",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Wine Class",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Alcohol"
          },
          "y": {
            "scale": "y",
            "field": "Malic_Acid"
          },
          "fill": {
            "scale": "color",
            "field": "Wine_Class"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "tooltip": {
            "signal": "{'Alcohol': datum.Alcohol, 'Malic Acid': datum.Malic_Acid, 'Wine Class': datum.Wine_Class}"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}