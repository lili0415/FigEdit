{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the distribution of comment types in the Toxic Comment Classification dataset.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "comment_type": "Toxic",
          "count": 15294
        },
        {
          "comment_type": "Severe Toxic",
          "count": 1595
        },
        {
          "comment_type": "Obscene",
          "count": 8449
        },
        {
          "comment_type": "Threat",
          "count": 478
        },
        {
          "comment_type": "Insult",
          "count": 7877
        },
        {
          "comment_type": "Identity Hate",
          "count": 1405
        },
        {
          "comment_type": "Clean",
          "count": 143346
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "comment_type"
      },
      "range": "width",
      "padding": 0.1,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Comment Type",
      "labelFontSize": 14
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count",
      "labelFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "comment_type"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "field": "comment_type",
            "scale": {
              "domain": [
                "Toxic"
              ],
              "range": [
                "green"
              ]
            }
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['comment_type']==='Obscene'",
              "value": "#2ca02c"
            },
            {
              "test": "datum['comment_type']==='Obscene'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "comment_type",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "count",
            "offset": -5
          },
          "text": {
            "field": "count"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "black"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  }
}