{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions for Santander Value Prediction.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "signals": [
    {
      "name": "startAngle",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.29,
        "step": 0.01
      }
    },
    {
      "name": "endAngle",
      "value": 6.29,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.29,
        "step": 0.01
      }
    },
    {
      "name": "padAngle",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 0.1
      }
    },
    {
      "name": "innerRadius",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 90,
        "step": 1
      }
    },
    {
      "name": "cornerRadius",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10,
        "step": 0.5
      }
    },
    {
      "name": "sort",
      "value": false,
      "bind": {
        "input": "checkbox"
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Low Risk",
          "value": 300
        },
        {
          "category": "Moderate Risk",
          "value": 500
        },
        {
          "category": "High Risk",
          "value": 200
        },
        {
          "category": "Very High Risk",
          "value": 100
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#FF5733",
        "#2ca02c"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Risk Levels",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  }
}