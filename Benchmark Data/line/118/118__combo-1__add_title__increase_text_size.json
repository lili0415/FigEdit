{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature trends over years for NOAA Climate Data.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "temperature": 14.5,
          "region": "Global"
        },
        {
          "year": 2001,
          "temperature": 14.6,
          "region": "Global"
        },
        {
          "year": 2002,
          "temperature": 14.8,
          "region": "Global"
        },
        {
          "year": 2003,
          "temperature": 14.9,
          "region": "Global"
        },
        {
          "year": 2004,
          "temperature": 14.7,
          "region": "Global"
        },
        {
          "year": 2000,
          "temperature": 13.2,
          "region": "North America"
        },
        {
          "year": 2001,
          "temperature": 13.4,
          "region": "North America"
        },
        {
          "year": 2002,
          "temperature": 13.6,
          "region": "North America"
        },
        {
          "year": 2003,
          "temperature": 13.8,
          "region": "North America"
        },
        {
          "year": 2004,
          "temperature": 13.5,
          "region": "North America"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002,
        2003,
        2004
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "temperature"
      },
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "format": "d",
      "labelFontSize": 14,
      "tickSize": 10
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature (Â°C)",
      "labelFontSize": 14,
      "tickSize": 10
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "temperature"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 14
    }
  }
}