{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing the relationship between toxicity score and word count, categorized by comment type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Toxicity_Score": 0.85,
          "Word_Count": 120,
          "Comment_Type": "toxic"
        },
        {
          "Toxicity_Score": 0.45,
          "Word_Count": 200,
          "Comment_Type": "severe_toxic"
        },
        {
          "Toxicity_Score": 0.15,
          "Word_Count": 80,
          "Comment_Type": "obscene"
        },
        {
          "Toxicity_Score": 0.95,
          "Word_Count": 150,
          "Comment_Type": "threat"
        },
        {
          "Toxicity_Score": 0.35,
          "Word_Count": 180,
          "Comment_Type": "insult"
        },
        {
          "Toxicity_Score": 0.6,
          "Word_Count": 220,
          "Comment_Type": "identity_hate"
        },
        {
          "Toxicity_Score": 0.1,
          "Word_Count": 90,
          "Comment_Type": "neutral"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        80,
        90,
        120,
        150,
        180,
        200,
        220
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Toxicity_Score"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Comment_Type"
      },
      "range": [
        "#e41a1c",
        "#377eb8",
        "#4daf4a",
        "#984ea3",
        "#ff7f00",
        "#ffff33",
        "#a65628"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Word Count"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Toxicity Score"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Comment Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Word_Count"
          },
          "y": {
            "scale": "y",
            "field": "Toxicity_Score"
          },
          "fill": {
            "scale": "color",
            "field": "Comment_Type"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}