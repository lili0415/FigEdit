{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing crop production values for various categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16,
    "font": "Arial"
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Wheat",
          "Production": 120.5
        },
        {
          "Category": "Corn",
          "Production": 150.2
        },
        {
          "Category": "Soybeans",
          "Production": 95.8
        },
        {
          "Category": "Rice",
          "Production": 80.3
        },
        {
          "Category": "Barley",
          "Production": 60.7
        },
        {
          "Category": "Sorghum",
          "Production": 45.9
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Production"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Crop Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Production (in million tons)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Production"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}