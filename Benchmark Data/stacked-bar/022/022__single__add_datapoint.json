{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing cryptocurrency trading volumes by month and type.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "January",
          "series": "Bitcoin",
          "value": 12000
        },
        {
          "category": "January",
          "series": "Ethereum",
          "value": 8000
        },
        {
          "category": "January",
          "series": "Ripple",
          "value": 3000
        },
        {
          "category": "February",
          "series": "Bitcoin",
          "value": 15000
        },
        {
          "category": "February",
          "series": "Ethereum",
          "value": 7000
        },
        {
          "category": "February",
          "series": "Ripple",
          "value": 4000
        },
        {
          "category": "March",
          "series": "Bitcoin",
          "value": 18000
        },
        {
          "category": "March",
          "series": "Ethereum",
          "value": 6000
        },
        {
          "category": "March",
          "series": "Ripple",
          "value": 5000
        },
        {
          "category": "April",
          "series": "Bitcoin",
          "value": 20000
        },
        {
          "category": "April",
          "series": "Ethereum",
          "value": 9000
        },
        {
          "category": "April",
          "series": "Ripple",
          "value": 6000
        },
        {
          "category": "May",
          "series": "Bitcoin",
          "value": 25000
        },
        {
          "category": "May",
          "series": "Ethereum",
          "value": 11000
        },
        {
          "category": "May",
          "series": "Ripple",
          "value": 7000
        },
        {
          "category": "June",
          "series": "Bitcoin",
          "value": 30000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Trading Volume"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Cryptocurrency",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "value0"
          },
          "y2": {
            "scale": "y",
            "field": "value1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}