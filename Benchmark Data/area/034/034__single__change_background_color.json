{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Area chart showing CO2 emissions from different sources over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "interpolate",
      "value": "monotone",
      "bind": {
        "input": "select",
        "options": [
          "basis",
          "cardinal",
          "catmull-rom",
          "linear",
          "monotone",
          "natural",
          "step",
          "step-after",
          "step-before"
        ]
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "source": "Coal",
          "emissions": 25.8
        },
        {
          "year": 2000,
          "source": "Oil",
          "emissions": 20.3
        },
        {
          "year": 2000,
          "source": "Gas",
          "emissions": 15.1
        },
        {
          "year": 2010,
          "source": "Coal",
          "emissions": 27.2
        },
        {
          "year": 2010,
          "source": "Oil",
          "emissions": 22.5
        },
        {
          "year": 2010,
          "source": "Gas",
          "emissions": 18.0
        },
        {
          "year": 2020,
          "source": "Coal",
          "emissions": 24.7
        },
        {
          "year": 2020,
          "source": "Oil",
          "emissions": 19.8
        },
        {
          "year": 2020,
          "source": "Gas",
          "emissions": 17.3
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['source']=='Coal' || datum['source']=='Oil'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2010,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "emissions"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange",
        "green"
      ],
      "domain": {
        "data": "table",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "CO2 Emissions (Gt)"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "source"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "emissions"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "source"
              }
            },
            "update": {
              "interpolate": {
                "signal": "interpolate"
              },
              "fillOpacity": {
                "value": 1
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Source",
      "orient": "right"
    }
  ],
  "background": "#fff5e6"
}