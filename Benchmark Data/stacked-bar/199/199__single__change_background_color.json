{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing carbon emissions by sector for different years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": "2000",
          "sector": "Transport",
          "emissions": 5.2
        },
        {
          "year": "2000",
          "sector": "Energy",
          "emissions": 8.1
        },
        {
          "year": "2000",
          "sector": "Industry",
          "emissions": 4.3
        },
        {
          "year": "2010",
          "sector": "Transport",
          "emissions": 6.0
        },
        {
          "year": "2010",
          "sector": "Energy",
          "emissions": 9.5
        },
        {
          "year": "2010",
          "sector": "Industry",
          "emissions": 4.8
        },
        {
          "year": "2020",
          "sector": "Transport",
          "emissions": 6.8
        },
        {
          "year": "2020",
          "sector": "Energy",
          "emissions": 10.2
        },
        {
          "year": "2020",
          "sector": "Industry",
          "emissions": 5.1
        },
        {
          "year": "2030",
          "sector": "Transport",
          "emissions": 7.4
        },
        {
          "year": "2030",
          "sector": "Energy",
          "emissions": 11.0
        },
        {
          "year": "2030",
          "sector": "Industry",
          "emissions": 5.5
        }
      ],
      "transform": [
        {
          "type": "stack",
          "field": "emissions",
          "groupby": [
            "year"
          ],
          "sort": {
            "field": "sector"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "year"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "sector"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Carbon Emissions (GtCO2)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Sector",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "sector"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}