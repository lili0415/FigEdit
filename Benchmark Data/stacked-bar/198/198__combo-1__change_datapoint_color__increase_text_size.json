{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing energy consumption by source across various states.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "California",
          "series": "Coal",
          "value": 45
        },
        {
          "category": "California",
          "series": "Natural Gas",
          "value": 120
        },
        {
          "category": "California",
          "series": "Renewables",
          "value": 85
        },
        {
          "category": "Texas",
          "series": "Coal",
          "value": 60,
          "fill": "#FF5733"
        },
        {
          "category": "Texas",
          "series": "Natural Gas",
          "value": 140
        },
        {
          "category": "Texas",
          "series": "Renewables",
          "value": 75
        },
        {
          "category": "New York",
          "series": "Coal",
          "value": 30
        },
        {
          "category": "New York",
          "series": "Natural Gas",
          "value": 80
        },
        {
          "category": "New York",
          "series": "Renewables",
          "value": 90
        },
        {
          "category": "Florida",
          "series": "Coal",
          "value": 50
        },
        {
          "category": "Florida",
          "series": "Natural Gas",
          "value": 110
        },
        {
          "category": "Florida",
          "series": "Renewables",
          "value": 70
        },
        {
          "category": "Illinois",
          "series": "Coal",
          "value": 55
        },
        {
          "category": "Illinois",
          "series": "Natural Gas",
          "value": 100
        },
        {
          "category": "Illinois",
          "series": "Renewables",
          "value": 65
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "State",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Consumption (in TWh)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Energy Source",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['category']==='California'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}