{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing the average teaching and research scores over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2012,
          "teaching": 45,
          "research": 50
        },
        {
          "year": 2013,
          "teaching": 48,
          "research": 53
        },
        {
          "year": 2014,
          "teaching": 50,
          "research": 56
        },
        {
          "year": 2015,
          "teaching": 52,
          "research": 60
        },
        {
          "year": 2016,
          "teaching": 55,
          "research": 63
        },
        {
          "year": 2017,
          "teaching": 58,
          "research": 65
        },
        {
          "year": 2018,
          "teaching": 60,
          "research": 68
        },
        {
          "year": 2019,
          "teaching": 62,
          "research": 70
        },
        {
          "year": 2020,
          "teaching": 65,
          "research": 72
        }
      ],
      "transform": [
        {
          "type": "fold",
          "fields": [
            "research",
            "teaching"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2012,
        2013,
        2014,
        2015,
        2016,
        2017,
        2018,
        2019,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Score",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "teaching"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {}
      }
    },
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "research"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}