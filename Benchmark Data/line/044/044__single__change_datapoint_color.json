{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing CO2 emissions trends over years for different regions.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "emissions",
      "values": [
        {
          "year": 2000,
          "region": "Asia",
          "emissions": 10.5
        },
        {
          "year": 2000,
          "region": "Europe",
          "emissions": 8.3
        },
        {
          "year": 2000,
          "region": "North America",
          "emissions": 9.1
        },
        {
          "year": 2005,
          "region": "Asia",
          "emissions": 12.8
        },
        {
          "year": 2005,
          "region": "Europe",
          "emissions": 8.0
        },
        {
          "year": 2005,
          "region": "North America",
          "emissions": 9.5
        },
        {
          "year": 2010,
          "region": "Asia",
          "emissions": 15.3
        },
        {
          "year": 2010,
          "region": "Europe",
          "emissions": 7.8
        },
        {
          "year": 2010,
          "region": "North America",
          "emissions": 9.0
        },
        {
          "year": 2015,
          "region": "Asia",
          "emissions": 18.0
        },
        {
          "year": 2015,
          "region": "Europe",
          "emissions": 7.5
        },
        {
          "year": 2015,
          "region": "North America",
          "emissions": 8.7
        },
        {
          "year": 2020,
          "region": "Asia",
          "emissions": 20.1
        },
        {
          "year": 2020,
          "region": "Europe",
          "emissions": 7.3
        },
        {
          "year": 2020,
          "region": "North America",
          "emissions": 8.5
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "emissions",
        "field": "emissions"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733"
      ],
      "domain": {
        "data": "emissions",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "CO2 Emissions (Gt)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "emissions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "emissions"
          },
          "stroke": {
            "scale": "color",
            "field": "region"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}