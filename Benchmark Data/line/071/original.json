{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing trends in BMI and Blood Pressure over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2005,
          "value": 27.5,
          "series": "BMI"
        },
        {
          "year": 2006,
          "value": 27.8,
          "series": "BMI"
        },
        {
          "year": 2007,
          "value": 28.0,
          "series": "BMI"
        },
        {
          "year": 2008,
          "value": 28.3,
          "series": "BMI"
        },
        {
          "year": 2005,
          "value": 120,
          "series": "Blood Pressure"
        },
        {
          "year": 2006,
          "value": 122,
          "series": "Blood Pressure"
        },
        {
          "year": 2007,
          "value": 121,
          "series": "Blood Pressure"
        },
        {
          "year": 2008,
          "value": 123,
          "series": "Blood Pressure"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2005,
        2006,
        2007,
        2008
      ]
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "value"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}