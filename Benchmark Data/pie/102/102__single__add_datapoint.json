{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing the proportion of video game sales by genre.",
  "width": 300,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Shooter",
          "sales": 250
        },
        {
          "genre": "Sports",
          "sales": 200
        },
        {
          "genre": "Platformer",
          "sales": 150
        },
        {
          "genre": "Racing",
          "sales": 100
        },
        {
          "genre": "Simulation",
          "sales": 75
        },
        {
          "genre": "Adventure",
          "sales": 125
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "genre"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0.02
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right"
    }
  ]
}