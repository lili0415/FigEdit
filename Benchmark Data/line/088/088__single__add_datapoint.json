{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing demand trends over time for different items.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "demand": 120,
          "item": "Item A"
        },
        {
          "date": "2023-01-01",
          "demand": 90,
          "item": "Item B"
        },
        {
          "date": "2023-02-01",
          "demand": 150,
          "item": "Item A"
        },
        {
          "date": "2023-02-01",
          "demand": 110,
          "item": "Item B"
        },
        {
          "date": "2023-03-01",
          "demand": 170,
          "item": "Item A"
        },
        {
          "date": "2023-03-01",
          "demand": 130,
          "item": "Item B"
        },
        {
          "date": "2023-04-01",
          "demand": 200,
          "item": "Item A"
        },
        {
          "date": "2023-04-01",
          "demand": 160,
          "item": "Item B"
        },
        {
          "date": "2023-05-01",
          "demand": 220,
          "item": "Item A"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "item"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Demand"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Item",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "item"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "demand"
              },
              "stroke": {
                "scale": "color",
                "field": "item"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ]
}