{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot for transaction amount vs. transaction time with fraud status as color.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "TransactionAmt": 50.0,
          "TransactionTime": 120,
          "Fraud": "Yes"
        },
        {
          "TransactionAmt": 20.5,
          "TransactionTime": 45,
          "Fraud": "No"
        },
        {
          "TransactionAmt": 75.3,
          "TransactionTime": 90,
          "Fraud": "Yes"
        },
        {
          "TransactionAmt": 35.7,
          "TransactionTime": 30,
          "Fraud": "No"
        },
        {
          "TransactionAmt": 100.1,
          "TransactionTime": 150,
          "Fraud": "Yes"
        },
        {
          "TransactionAmt": 10.0,
          "TransactionTime": 20,
          "Fraud": "No"
        },
        {
          "TransactionAmt": 60.0,
          "TransactionTime": 110,
          "Fraud": "Yes"
        },
        {
          "TransactionAmt": 25.0,
          "TransactionTime": 50,
          "Fraud": "No"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        20,
        30,
        45,
        50,
        90,
        110,
        120,
        150
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "TransactionAmt"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Fraud"
      },
      "range": [
        "#e41a1c",
        "#377eb8"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Transaction Time (seconds)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Transaction Amount (USD)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Fraud Status",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "TransactionTime"
          },
          "y": {
            "scale": "y",
            "field": "TransactionAmt"
          },
          "fill": {
            "scale": "color",
            "field": "Fraud"
          },
          "size": {
            "value": 100
          },
          "tooltip": {
            "signal": "{'Transaction Amount': datum.TransactionAmt, 'Transaction Time': datum.TransactionTime, 'Fraud': datum.Fraud}"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}