{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing survival status for different passenger classes on the Titanic.",
  "width": 300,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Class": "First",
          "Survived": 1
        },
        {
          "Class": "First",
          "Survived": 0
        },
        {
          "Class": "Second",
          "Survived": 1
        },
        {
          "Class": "Second",
          "Survived": 0
        },
        {
          "Class": "Third",
          "Survived": 1
        },
        {
          "Class": "Third",
          "Survived": 0
        },
        {
          "Class": "Third",
          "Survived": 1
        },
        {
          "Class": "Second",
          "Survived": 0
        },
        {
          "Class": "First",
          "Survived": 1
        },
        {
          "Class": "Third",
          "Survived": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "First",
        "Second",
        "Third"
      ],
      "range": [
        "red",
        "steelblue",
        "steelblue"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Passenger Class",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Survived (1 = Yes, 0 = No)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Class"
          },
          "y": {
            "scale": "y",
            "field": "Survived"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "field": "Class",
            "scale": "color"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}