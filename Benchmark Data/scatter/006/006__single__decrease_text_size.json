{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing NBA player statistics.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Points": 25.4,
          "Assists": 8.1,
          "Position": "Guard"
        },
        {
          "Points": 18.2,
          "Assists": 10.5,
          "Position": "Guard"
        },
        {
          "Points": 15.3,
          "Assists": 5.6,
          "Position": "Forward"
        },
        {
          "Points": 20.1,
          "Assists": 6.8,
          "Position": "Forward"
        },
        {
          "Points": 12.7,
          "Assists": 7.3,
          "Position": "Center"
        },
        {
          "Points": 22.9,
          "Assists": 4.4,
          "Position": "Guard"
        },
        {
          "Points": 17.8,
          "Assists": 9.1,
          "Position": "Forward"
        },
        {
          "Points": 14.5,
          "Assists": 3.2,
          "Position": "Center"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": [
        12.7,
        25.4
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Assists"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Points Per Game",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Assists Per Game",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Points"
          },
          "y": {
            "scale": "y",
            "field": "Assists"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}