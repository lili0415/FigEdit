{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "description": "Dot plot showing app categories and their corresponding ratings.",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "Category": "Games",
          "Rating": 4.5
        },
        {
          "Category": "Productivity",
          "Rating": 4.2
        },
        {
          "Category": "Social",
          "Rating": 4.0
        },
        {
          "Category": "Health & Fitness",
          "Rating": 4.3
        },
        {
          "Category": "Education",
          "Rating": 4.6
        },
        {
          "Category": "Finance",
          "Rating": 4.1
        },
        {
          "Category": "Entertainment",
          "Rating": 4.4
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "table",
        "field": "Category"
      },
      "range": {
        "step": 0.8
      },
      "padding": 0.0
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "Rating"
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "App Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Rating"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Rating"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}