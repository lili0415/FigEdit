{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions from the Retailrocket dataset.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "innerRadius",
      "value": 80,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 120,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "value": 450
        },
        {
          "category": "Clothing",
          "value": 300
        },
        {
          "category": "Home Decor",
          "value": 200
        },
        {
          "category": "Books",
          "value": 150
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318,
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ]
}