{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart displaying sector-wise performance for S&P 500 companies.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Technology",
          "series": "Q1",
          "value": 120
        },
        {
          "category": "Technology",
