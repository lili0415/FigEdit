{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Violin plot showing the distribution of income by credit group.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "credit_data",
      "values": [
        {
          "Credit Group": "Good",
          "Monthly Income": 5000
        },
        {
          "Credit Group": "Good",
          "Monthly Income": 5200
        },
        {
          "Credit Group": "Good",
          "Monthly Income": 5500
        },
        {
          "Credit Group": "Good",
          "Monthly Income": 5800
        },
        {
          "Credit Group": "Good",
          "Monthly Income": 6000
        },
        {
          "Credit Group": "Fair",
          "Monthly Income": 3000
        },
        {
          "Credit Group": "Fair",
          "Monthly Income": 3200
        },
        {
          "Credit Group": "Fair",
          "Monthly Income": 3500
        },
        {
          "Credit Group": "Fair",
          "Monthly Income": 3700
        },
        {
          "Credit Group": "Fair",
          "Monthly Income": 4000
        },
        {
          "Credit Group": "Poor",
          "Monthly Income": 1500
        },
        {
          "Credit Group": "Poor",
          "Monthly Income": 1800
        },
        {
          "Credit Group": "Poor",
          "Monthly Income": 2000
        },
        {
          "Credit Group": "Poor",
          "Monthly Income": 2200
        },
        {
          "Credit Group": "Poor",
          "Monthly Income": 2500
        }
      ]
    },
    {
      "name": "density",
      "source": "credit_data",
      "transform": [
        {
          "type": "kde",
          "field": "Monthly Income",
          "groupby": [
            "Credit Group"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "credit_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Credit Group"
          ],
          "fields": [
            "Monthly Income",
            "Monthly Income",
            "Monthly Income"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "credit_data",
        "field": "Credit Group"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "credit_data",
        "field": "Monthly Income"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "credit_data",
        "field": "Credit Group"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale"
    },
    {
      "orient": "left",
      "scale": "layout"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Credit Group"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Credit Group",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Credit Group'] === parent['Credit Group']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Credit Group"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}