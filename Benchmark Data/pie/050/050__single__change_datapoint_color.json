{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing proportions of Iris species.",
  "width": 300,
  "height": 300,
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28
    },
    {
      "name": "padAngle",
      "value": 0
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "cornerRadius",
      "value": 0
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Species-A",
          "value": 50
        },
        {
          "category": "Species-B",
          "value": 40
        },
        {
          "category": "Species-C",
          "value": 60
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#FF5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Species",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}