{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing GDP contributions by sector.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "sector": "Agriculture, Forestry, Fishing",
          "gdp": 250
        },
        {
          "sector": "Mining, Quarrying, Oil",
          "gdp": 180
        },
        {
          "sector": "Manufacturing",
          "gdp": 500
        },
        {
          "sector": "Utilities",
          "gdp": 120
        },
        {
          "sector": "Construction",
          "gdp": 300
        },
        {
          "sector": "Wholesale Trade",
          "gdp": 400
        },
        {
          "sector": "Retail Trade",
          "gdp": 350
        },
        {
          "sector": "Transportation and Warehousing",
          "gdp": 220
        },
        {
          "sector": "Information",
          "gdp": 330
        },
        {
          "sector": "Finance and Insurance",
          "gdp": 450
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "sector"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "gdp"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Sector",
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "GDP Contribution (in billions)",
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "sector"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "gdp"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    },
    {
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "sector",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "gdp",
            "offset": -5
          },
          "text": {
            "field": "gdp"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "black"
          },
          "fontSize": {
            "value": 14
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}