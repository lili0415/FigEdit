{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing video game sales by genre.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Action",
          "sales": 125.3
        },
        {
          "genre": "Shooter",
          "sales": 95.2
        },
        {
          "genre": "Sports",
          "sales": 80.5
        },
        {
          "genre": "Role-Playing",
          "sales": 72.8
        },
        {
          "genre": "Adventure",
          "sales": 45.6
        },
        {
          "genre": "Simulation",
          "sales": 38.9
        },
        {
          "genre": "Fighting",
          "sales": 28.1
        },
        {
          "genre": "Puzzle",
          "sales": 22.4
        },
        {
          "genre": "Platform",
          "sales": 20.7
        },
        {
          "genre": "Racing",
          "sales": 18.3
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "sales"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Genre",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Sales (millions)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "genre"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "sales"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.genre",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.sales",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.sales"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}