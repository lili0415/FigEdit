{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing the number of service requests by category in NYC.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Noise - Residential",
          "Count": 120
        },
        {
          "Category": "Illegal Parking",
          "Count": 85
        },
        {
          "Category": "Blocked Driveway",
          "Count": 95
        },
        {
          "Category": "Noise - Street/Sidewalk",
          "Count": 110
        },
        {
          "Category": "Street Condition",
          "Count": 70
        },
        {
          "Category": "Sanitation Condition",
          "Count": 65
        },
        {
          "Category": "Water System",
          "Count": 50
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Count"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Service Request Category",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Number of Requests",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Count"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "tooltip": {
            "signal": "datum.Category + ': ' + datum.Count"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}