{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing COVID-19 cases over time for multiple regions.",
  "width": 600,
  "height": 300,
  "padding": 2,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-01",
          "region": "North America",
          "cases": 5000
        },
        {
          "date": "2020-01",
          "region": "Europe",
          "cases": 3000
        },
        {
          "date": "2020-02",
          "region": "North America",
          "cases": 15000
        },
        {
          "date": "2020-02",
          "region": "Europe",
          "cases": 12000
        },
        {
          "date": "2020-03",
          "region": "North America",
          "cases": 40000
        },
        {
          "date": "2020-03",
          "region": "Europe",
          "cases": 35000
        },
        {
          "date": "2020-04",
          "region": "North America",
          "cases": 70000
        },
        {
          "date": "2020-04",
          "region": "Europe",
          "cases": 60000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.0
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "region"
      },
      "range": [
        "steelblue",
        "orange"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Cases"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "cases"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "region"
              },
              "tooltip": {
                "signal": "{'Region': datum.region, 'Date': datum.date, 'Cases': datum.cases}"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ]
}