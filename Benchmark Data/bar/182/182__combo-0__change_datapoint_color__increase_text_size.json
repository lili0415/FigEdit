{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing average price of Airbnb listings by neighborhood group in NYC.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "neighborhood_group": "Manhattan",
          "average_price": 200
        },
        {
          "neighborhood_group": "Brooklyn",
          "average_price": 150
        },
        {
          "neighborhood_group": "Queens",
          "average_price": 120
        },
        {
          "neighborhood_group": "Bronx",
          "average_price": 90
        },
        {
          "neighborhood_group": "Staten Island",
          "average_price": 80
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "neighborhood_group"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "average_price"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Neighborhood Group",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Price ($)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "neighborhood_group"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "average_price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['neighborhood_group']==='Brooklyn'",
              "value": "#ff7f0e"
            },
            {
              "test": "datum.neighborhood_group === 'Brooklyn'",
              "value": "green"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}