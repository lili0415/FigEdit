{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing cryptocurrency prices over time.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 16500,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-02",
          "price": 16650,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-03",
          "price": 16700,
          "currency": "Bitcoin"
        },
        {
          "date": "2023-01-01",
          "price": 1200,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-02",
          "price": 1250,
          "currency": "Ethereum"
        },
        {
          "date": "2023-01-03",
          "price": 1300,
          "currency": "Ethereum"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "currency"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Cryptocurrency",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "price"
          },
          "stroke": {
            "scale": "color",
            "field": "currency"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          },
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}