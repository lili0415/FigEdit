{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing sepal width for different iris species.",
  "width": 300,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "species": "setosa",
          "sepal_width": 3.5
        },
        {
          "species": "setosa",
          "sepal_width": 3.0
        },
        {
          "species": "setosa",
          "sepal_width": 3.2
        },
        {
          "species": "versicolor",
          "sepal_width": 2.8
        },
        {
          "species": "versicolor",
          "sepal_width": 2.7
        },
        {
          "species": "versicolor",
          "sepal_width": 3.0
        },
        {
          "species": "virginica",
          "sepal_width": 3.1
        },
        {
          "species": "virginica",
          "sepal_width": 2.9
        },
        {
          "species": "virginica",
          "sepal_width": 3.2
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "species"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "sepal_width"
      },
      "range": "height",
      "nice": true,
      "zero": false
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Species",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Sepal Width (cm)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "species"
          },
          "y": {
            "scale": "y",
            "field": "sepal_width"
          },
          "size": {
            "value": 50
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}