{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing passenger traffic over years for different airlines.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2010,
          "passengers": 120,
          "airline": "Airline A"
        },
        {
          "year": 2011,
          "passengers": 135,
          "airline": "Airline A"
        },
        {
          "year": 2012,
          "passengers": 150,
          "airline": "Airline A"
        },
        {
          "year": 2010,
          "passengers": 80,
          "airline": "Airline B"
        },
        {
          "year": 2011,
          "passengers": 95,
          "airline": "Airline B"
        },
        {
          "year": 2012,
          "passengers": 110,
          "airline": "Airline B"
        },
        {
          "year": 2010,
          "passengers": 140,
          "airline": "Airline C"
        },
        {
          "year": 2011,
          "passengers": 160,
          "airline": "Airline C"
        },
        {
          "year": 2012,
          "passengers": 175,
          "airline": "Airline C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2010,
        2011,
        2012
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "passengers"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "airline"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Passengers (in thousands)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Airlines",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "airline"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "passengers"
              },
              "stroke": {
                "scale": "color",
                "field": "airline"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}