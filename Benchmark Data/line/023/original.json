{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing crime counts over time in different categories.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "crime_data",
      "values": [
        {
          "date": "2023-01",
          "count": 120,
          "category": "Theft"
        },
        {
          "date": "2023-02",
          "count": 150,
          "category": "Theft"
        },
        {
          "date": "2023-03",
          "count": 130,
          "category": "Theft"
        },
        {
          "date": "2023-01",
          "count": 90,
          "category": "Assault"
        },
        {
          "date": "2023-02",
          "count": 100,
          "category": "Assault"
        },
        {
          "date": "2023-03",
          "count": 110,
          "category": "Assault"
        },
        {
          "date": "2023-01",
          "count": 60,
          "category": "Burglary"
        },
        {
          "date": "2023-02",
          "count": 80,
          "category": "Burglary"
        },
        {
          "date": "2023-03",
          "count": 70,
          "category": "Burglary"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "crime_data",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "crime_data",
        "field": "count"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "crime_data",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Crime Count"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Crime Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "crime_data",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "count"
              },
              "stroke": {
                "scale": "color",
                "field": "category"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}