{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing bike rentals over time for different user types.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-11",
          "casual": 1200,
          "registered": 3500
        },
        {
          "date": "2021-12",
          "casual": 1500,
          "registered": 4000
        },
        {
          "date": "2022-01",
          "casual": 800,
          "registered": 3000
        },
        {
          "date": "2022-02",
          "casual": 1000,
          "registered": 3200
        },
        {
          "date": "2022-03",
          "casual": 2000,
          "registered": 4500
        },
        {
          "date": "2022-04",
          "casual": 2500,
          "registered": 5000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "fields": [
          {
            "data": "table",
            "field": "casual"
          },
          {
            "data": "table",
            "field": "registered"
          }
        ]
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ],
      "domain": [
        "casual",
        "registered"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Bike Rentals",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": {
              "signal": "datum[datum.series]"
            }
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.7
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Legend",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}