{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing demand trends over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01",
          "demand": 120,
          "category": "Electronics"
        },
        {
          "date": "2022-02",
          "demand": 150,
          "category": "Electronics"
        },
        {
          "date": "2022-03",
          "demand": 170,
          "category": "Electronics"
        },
        {
          "date": "2022-01",
          "demand": 80,
          "category": "Furniture"
        },
        {
          "date": "2022-02",
          "demand": 100,
          "category": "Furniture"
        },
        {
          "date": "2022-03",
          "demand": 130,
          "category": "Furniture"
        },
        {
          "date": "2022-01",
          "demand": 60,
          "category": "Clothing"
        },
        {
          "date": "2022-02",
          "demand": 90,
          "category": "Clothing"
        },
        {
          "date": "2022-03",
          "demand": 110,
          "category": "Clothing"
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['category']=='Electronics' || datum['category']=='Furniture'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange",
        "green"
      ],
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Demand",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "demand"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "category"
              },
              "interpolate": {
                "value": "monotone"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}