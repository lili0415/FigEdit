{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing GDP per capita versus life expectancy with regions as categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "GDP_per_capita": 45000,
          "Life_expectancy": 81.5,
          "Region": "Europe"
        },
        {
          "GDP_per_capita": 12000,
          "Life_expectancy": 72.3,
          "Region": "South America"
        },
        {
          "GDP_per_capita": 32000,
          "Life_expectancy": 78.7,
          "Region": "North America"
        },
        {
          "GDP_per_capita": 8000,
          "Life_expectancy": 65.4,
          "Region": "Sub-Saharan Africa"
        },
        {
          "GDP_per_capita": 15000,
          "Life_expectancy": 73.2,
          "Region": "East Asia"
        },
        {
          "GDP_per_capita": 40000,
          "Life_expectancy": 80.6,
          "Region": "Oceania"
        },
        {
          "GDP_per_capita": 10000,
          "Life_expectancy": 68.9,
          "Region": "Middle East"
        },
        {
          "GDP_per_capita": 25000,
          "Life_expectancy": 76.4,
          "Region": "Central Asia"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        8000.0,
        45000.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Life_expectancy"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Region"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "GDP per Capita (USD)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Life Expectancy (years)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "GDP_per_capita"
          },
          "y": {
            "scale": "y",
            "field": "Life_expectancy"
          },
          "fill": {
            "scale": "color",
            "field": "Region"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}