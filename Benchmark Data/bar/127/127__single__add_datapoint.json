{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing transaction types and their counts from the Kaggle: IEEE-CIS Fraud Detection dataset.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "transaction_type": "Purchase",
          "count": 1500
        },
        {
          "transaction_type": "Transfer",
          "count": 950
        },
        {
          "transaction_type": "Cash Withdrawal",
          "count": 600
        },
        {
          "transaction_type": "Bill Payment",
          "count": 400
        },
        {
          "transaction_type": "Refund",
          "count": 250
        },
        {
          "transaction_type": "Deposit",
          "count": 700
        },
        {
          "transaction_type": "Loan Payment",
          "count": 300
        },
        {
          "transaction_type": "Online Payment",
          "count": 500
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "transaction_type"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Transaction Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "transaction_type"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.transaction_type",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.count",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.count"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}