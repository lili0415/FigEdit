{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average ratings for different product categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "average_rating": 4.2
        },
        {
          "category": "Home & Kitchen",
          "average_rating": 3.8
        },
        {
          "category": "Books",
          "average_rating": 4.5
        },
        {
          "category": "Toys & Games",
          "average_rating": 4.0
        },
        {
          "category": "Clothing",
          "average_rating": 3.6
        },
        {
          "category": "Beauty",
          "average_rating": 4.1
        },
        {
          "category": "Sports",
          "average_rating": 4.3
        },
        {
          "category": "Automotive",
          "average_rating": 3.9
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "average_rating"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Product Categories"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Rating"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "average_rating"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    }
  ]
}