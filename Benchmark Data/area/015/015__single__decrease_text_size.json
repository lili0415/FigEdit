{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing sales trends over time for multiple stores.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "sales",
      "values": [
        {
          "date": "2023-01-01",
          "store": "Store A",
          "sales": 1200
        },
        {
          "date": "2023-01-01",
          "store": "Store B",
          "sales": 950
        },
        {
          "date": "2023-01-02",
          "store": "Store A",
          "sales": 1350
        },
        {
          "date": "2023-01-02",
          "store": "Store B",
          "sales": 1020
        },
        {
          "date": "2023-01-03",
          "store": "Store A",
          "sales": 1420
        },
        {
          "date": "2023-01-03",
          "store": "Store B",
          "sales": 1100
        },
        {
          "date": "2023-01-04",
          "store": "Store A",
          "sales": 1250
        },
        {
          "date": "2023-01-04",
          "store": "Store B",
          "sales": 980
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "sales",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "sales",
        "field": "sales"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "sales",
        "field": "store"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Sales",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "sales",
          "name": "series_facet",
          "groupby": "store"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "sales"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "store"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Store",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}