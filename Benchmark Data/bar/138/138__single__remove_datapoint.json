{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing stroke occurrences by age group.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "age_group": "0-10",
          "stroke_occurrences": 5
        },
        {
          "age_group": "11-20",
          "stroke_occurrences": 12
        },
        {
          "age_group": "21-30",
          "stroke_occurrences": 18
        },
        {
          "age_group": "31-40",
          "stroke_occurrences": 25
        },
        {
          "age_group": "41-50",
          "stroke_occurrences": 40
        },
        {
          "age_group": "51-60",
          "stroke_occurrences": 55
        },
        {
          "age_group": "61-70",
          "stroke_occurrences": 70
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "age_group"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "stroke_occurrences"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Age Group"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stroke Occurrences"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "age_group"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "stroke_occurrences"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.age_group",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.stroke_occurrences",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.stroke_occurrences"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}