{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing stock prices of selected companies over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "company": "Company A",
          "price": 150
        },
        {
          "date": "2023-02-01",
          "company": "Company A",
          "price": 155
        },
        {
          "date": "2023-03-01",
          "company": "Company A",
          "price": 160
        },
        {
          "date": "2023-01-01",
          "company": "Company B",
          "price": 200
        },
        {
          "date": "2023-02-01",
          "company": "Company B",
          "price": 210
        },
        {
          "date": "2023-03-01",
          "company": "Company B",
          "price": 220
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "company"
      },
      "range": [
        "steelblue",
        "orange"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "format": "%b %Y",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stock Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "company"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "price"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "company"
              },
              "interpolate": {
                "value": "monotone"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Company",
      "orient": "right"
    }
  ]
}