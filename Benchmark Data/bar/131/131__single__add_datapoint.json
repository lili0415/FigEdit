{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A basic bar chart showing transaction types and their frequency.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "transaction_type": "Online Purchase",
          "frequency": 120
        },
        {
          "transaction_type": "POS Purchase",
          "frequency": 95
        },
        {
          "transaction_type": "ATM Withdrawal",
          "frequency": 60
        },
        {
          "transaction_type": "Bill Payment",
          "frequency": 80
        },
        {
          "transaction_type": "Fund Transfer",
          "frequency": 50
        },
        {
          "transaction_type": "Mobile Recharge",
          "frequency": 70
        },
        {
          "transaction_type": "Subscription Payment",
          "frequency": 40
        },
        {
          "transaction_type": "Cash Deposit",
          "frequency": 65
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "transaction_type"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "frequency"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Transaction Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Frequency"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "transaction_type"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "frequency"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.transaction_type",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.frequency",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.frequency"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}