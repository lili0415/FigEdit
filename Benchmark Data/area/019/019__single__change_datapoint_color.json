{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing monthly average flight delays for different airlines.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "January",
          "airline": "Airline A",
          "avg_delay": 15
        },
        {
          "month": "January",
          "airline": "Airline B",
          "avg_delay": 20
        },
        {
          "month": "January",
          "airline": "Airline C",
          "avg_delay": 25
        },
        {
          "month": "February",
          "airline": "Airline A",
          "avg_delay": 10
        },
        {
          "month": "February",
          "airline": "Airline B",
          "avg_delay": 18
        },
        {
          "month": "February",
          "airline": "Airline C",
          "avg_delay": 22
        },
        {
          "month": "March",
          "airline": "Airline A",
          "avg_delay": 12
        },
        {
          "month": "March",
          "airline": "Airline B",
          "avg_delay": 16
        },
        {
          "month": "March",
          "airline": "Airline C",
          "avg_delay": 20
        },
        {
          "month": "April",
          "airline": "Airline A",
          "avg_delay": 8
        },
        {
          "month": "April",
          "airline": "Airline B",
          "avg_delay": 14
        },
        {
          "month": "April",
          "airline": "Airline C",
          "avg_delay": 18
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['airline']=='Airline A' || datum['airline']=='Airline B'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "avg_delay"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733",
        "#33FF57"
      ],
      "domain": {
        "data": "table",
        "field": "airline"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Delay (minutes)"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "airline"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "month"
              },
              "y": {
                "scale": "yscale",
                "field": "avg_delay"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "airline"
              },
              "fillOpacity": {
                "value": 0.7
              }
            },
            "update": {}
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Airline",
      "orient": "right"
    }
  ]
}