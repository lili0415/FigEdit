{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing crop production trends over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "middle",
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2015,
          "corn": 345,
          "wheat": 210
        },
        {
          "year": 2016,
          "corn": 400,
          "wheat": 250
        },
        {
          "year": 2017,
          "corn": 380,
          "wheat": 230
        },
        {
          "year": 2018,
          "corn": 420,
          "wheat": 270
        },
        {
          "year": 2019,
          "corn": 460,
          "wheat": 300
        },
        {
          "year": 2020,
          "corn": 430,
          "wheat": 290
        },
        {
          "year": 2021,
          "corn": 470,
          "wheat": 310
        }
      ],
      "transform": [
        {
          "type": "fold",
          "fields": [
            "corn",
            "wheat"
          ],
          "as": [
            "key",
            "value"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018,
        2019,
        2020,
        2021
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Corn",
        "Wheat"
      ],
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Production (in tons)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "scale": "color",
            "field": "key"
          }
        },
        "update": {}
      },
      "sort": {
        "field": "year",
        "order": "ascending"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Legend",
      "orient": "right"
    }
  ]
}