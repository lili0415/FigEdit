{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions from FRED Economic Data.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.283185
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "cornerRadius",
      "value": 5
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Personal Savings",
          "value": 35
        },
        {
          "category": "Consumer Spending",
          "value": 40
        },
        {
          "category": "Government Expenditures",
          "value": 15
        },
        {
          "category": "Net Exports",
          "value": 10
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": true
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#FF5733"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}