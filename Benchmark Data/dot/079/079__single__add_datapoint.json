{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing crop production values for different categories.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Crop": "Corn",
          "Production": 150.2
        },
        {
          "Crop": "Wheat",
          "Production": 120.5
        },
        {
          "Crop": "Soybeans",
          "Production": 95.3
        },
        {
          "Crop": "Rice",
          "Production": 80.1
        },
        {
          "Crop": "Barley",
          "Production": 60.7
        },
        {
          "Crop": "Oats",
          "Production": 40.8
        },
        {
          "Crop": "Sorghum",
          "Production": 50.4
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Crop"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Production"
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Crop Type"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Production (in millions)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Crop"
          },
          "y": {
            "scale": "y",
            "field": "Production"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 80
          },
          "fill": {
            "value": "#4682b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}