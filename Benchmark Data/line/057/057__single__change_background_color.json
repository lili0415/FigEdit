{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing accident counts over time by severity.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "accidents",
      "values": [
        {
          "date": "2021-01",
          "severity": "Low",
          "count": 120
        },
        {
          "date": "2021-01",
          "severity": "Medium",
          "count": 80
        },
        {
          "date": "2021-01",
          "severity": "High",
          "count": 50
        },
        {
          "date": "2021-02",
          "severity": "Low",
          "count": 150
        },
        {
          "date": "2021-02",
          "severity": "Medium",
          "count": 90
        },
        {
          "date": "2021-02",
          "severity": "High",
          "count": 60
        },
        {
          "date": "2021-03",
          "severity": "Low",
          "count": 130
        },
        {
          "date": "2021-03",
          "severity": "Medium",
          "count": 100
        },
        {
          "date": "2021-03",
          "severity": "High",
          "count": 70
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "accidents",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "accidents",
        "field": "count"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "accidents",
        "field": "severity"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Accident Count"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Severity",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "accidents",
          "groupby": "severity"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "count"
              },
              "stroke": {
                "scale": "color",
                "field": "severity"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}