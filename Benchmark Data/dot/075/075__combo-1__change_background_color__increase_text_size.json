{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing energy consumption by sector.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Sector": "Residential",
          "Energy_Consumption": 15.2
        },
        {
          "Sector": "Commercial",
          "Energy_Consumption": 18.7
        },
        {
          "Sector": "Industrial",
          "Energy_Consumption": 22.5
        },
        {
          "Sector": "Transportation",
          "Energy_Consumption": 27.3
        },
        {
          "Sector": "Electric Power",
          "Energy_Consumption": 40.1
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Sector"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Energy_Consumption"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Sector",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Energy Consumption (Quadrillion BTU)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Sector"
          },
          "y": {
            "scale": "y",
            "field": "Energy_Consumption"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}