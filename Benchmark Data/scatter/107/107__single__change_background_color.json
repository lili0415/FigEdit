{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing the relationship between petal length and petal width in the Iris dataset.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "PetalLength": 1.4,
          "PetalWidth": 0.2,
          "Species": "setosa"
        },
        {
          "PetalLength": 1.3,
          "PetalWidth": 0.2,
          "Species": "setosa"
        },
        {
          "PetalLength": 4.7,
          "PetalWidth": 1.4,
          "Species": "versicolor"
        },
        {
          "PetalLength": 4.5,
          "PetalWidth": 1.5,
          "Species": "versicolor"
        },
        {
          "PetalLength": 5.5,
          "PetalWidth": 2.1,
          "Species": "virginica"
        },
        {
          "PetalLength": 5.1,
          "PetalWidth": 1.9,
          "Species": "virginica"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        1.3,
        5.5
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "PetalWidth"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Species"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Petal Length (cm)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Petal Width (cm)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Species",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "PetalLength"
          },
          "y": {
            "scale": "y",
            "field": "PetalWidth"
          },
          "fill": {
            "scale": "color",
            "field": "Species"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}