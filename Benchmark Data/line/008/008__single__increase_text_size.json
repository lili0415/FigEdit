{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing Bitcoin Open and Close prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 16700,
          "type": "Open"
        },
        {
          "date": "2023-01-01",
          "price": 16850,
          "type": "Close"
        },
        {
          "date": "2023-01-02",
          "price": 16800,
          "type": "Open"
        },
        {
          "date": "2023-01-02",
          "price": 16930,
          "type": "Close"
        },
        {
          "date": "2023-01-03",
          "price": 16950,
          "type": "Open"
        },
        {
          "date": "2023-01-03",
          "price": 17020,
          "type": "Close"
        },
        {
          "date": "2023-01-04",
          "price": 17000,
          "type": "Open"
        },
        {
          "date": "2023-01-04",
          "price": 17150,
          "type": "Close"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Price Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "price"
          },
          "stroke": {
            "scale": "color",
            "field": "type"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "defined": {
            "signal": "isValid(datum) && isValid(datum['date'])"
          }
        }
      },
      "sort": {
        "field": "date",
        "order": "ascending"
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}