{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing emissions by sector.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Sector": "Energy",
          "Emissions": 35.2
        },
        {
          "Sector": "Transport",
          "Emissions": 21.5
        },
        {
          "Sector": "Agriculture",
          "Emissions": 18.3
        },
        {
          "Sector": "Industry",
          "Emissions": 15.7
        },
        {
          "Sector": "Waste",
          "Emissions": 9.3
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        9.3,
        35.2
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source",
        "field": "Sector"
      },
      "range": "height",
      "padding": 0.3
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Emissions (GtCO2e)",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Sector",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Emissions"
          },
          "y": {
            "scale": "y",
            "field": "Sector"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "#1f77b4"
          },
          "tooltip": {
            "signal": "datum.Sector + ': ' + datum.Emissions + ' GtCO2e'"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}