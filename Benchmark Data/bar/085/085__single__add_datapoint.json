{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average OECD PISA scores by country.",
  "width": 500,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "country": "United States",
          "score": 495
        },
        {
          "country": "Canada",
          "score": 512
        },
        {
          "country": "Germany",
          "score": 508
        },
        {
          "country": "Japan",
          "score": 529
        },
        {
          "country": "Australia",
          "score": 503
        },
        {
          "country": "France",
          "score": 493
        },
        {
          "country": "United Kingdom",
          "score": 500
        },
        {
          "country": "South Korea",
          "score": 542
        },
        {
          "country": "China",
          "score": 555
        },
        {
          "country": "Italy",
          "score": 485
        },
        {
          "country": "India",
          "score": 520
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "country"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "score"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Country"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average PISA Score"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "country"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "score"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "field": "country",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "score",
            "offset": -5
          },
          "text": {
            "field": "score"
          },
          "fillOpacity": {
            "value": 1
          }
        }
      }
    }
  ]
}