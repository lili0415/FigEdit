{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Stacked bar chart showing sales across departments in different regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "series": "Region A",
          "value": 120
        },
        {
          "category": "Electronics",
          "series": "Region B",
          "value": 80
        },
        {
          "category": "Electronics",
          "series": "Region C",
          "value": 60
        },
        {
          "category": "Clothing",
          "series": "Region A",
          "value": 150
        },
        {
          "category": "Clothing",
          "series": "Region B",
          "value": 100
        },
        {
          "category": "Clothing",
          "series": "Region C",
          "value": 50
        },
        {
          "category": "Furniture",
          "series": "Region A",
          "value": 90
        },
        {
          "category": "Furniture",
          "series": "Region B",
          "value": 70
        },
        {
          "category": "Furniture",
          "series": "Region C",
          "value": 40
        },
        {
          "category": "Groceries",
          "series": "Region A",
          "value": 200
        },
        {
          "category": "Groceries",
          "series": "Region B",
          "value": 140
        },
        {
          "category": "Groceries",
          "series": "Region C",
          "value": 100
        },
        {
          "category": "Toys",
          "series": "Region A",
          "value": 80
        },
        {
          "category": "Toys",
          "series": "Region B",
          "value": 60
        },
        {
          "category": "Toys",
          "series": "Region C",
          "value": 40
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Category",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Sales",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}