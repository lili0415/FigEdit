{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing trends from Pew Research Center Surveys.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "survey_data",
      "values": [
        {
          "year": 2015,
          "percentage": 45,
          "topic": "Internet Usage"
        },
        {
          "year": 2016,
          "percentage": 50,
          "topic": "Internet Usage"
        },
        {
          "year": 2017,
          "percentage": 55,
          "topic": "Internet Usage"
        },
        {
          "year": 2018,
          "percentage": 60,
          "topic": "Internet Usage"
        },
        {
          "year": 2019,
          "percentage": 65,
          "topic": "Internet Usage"
        },
        {
          "year": 2020,
          "percentage": 70,
          "topic": "Internet Usage"
        },
        {
          "year": 2015,
          "percentage": 30,
          "topic": "Social Media Usage"
        },
        {
          "year": 2016,
          "percentage": 35,
          "topic": "Social Media Usage"
        },
        {
          "year": 2017,
          "percentage": 40,
          "topic": "Social Media Usage"
        },
        {
          "year": 2018,
          "percentage": 45,
          "topic": "Social Media Usage"
        },
        {
          "year": 2019,
          "percentage": 50,
          "topic": "Social Media Usage"
        },
        {
          "year": 2020,
          "percentage": 55,
          "topic": "Social Media Usage"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018,
        2019,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "survey_data",
        "field": "percentage"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "survey_data",
        "field": "topic"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Percentage (%)",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Topic",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "survey_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "percentage"
          },
          "stroke": {
            "scale": "color",
            "field": "topic"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}