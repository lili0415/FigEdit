{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing GDP growth and inflation over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "value": 3.5,
          "indicator": "GDP Growth"
        },
        {
          "year": 2001,
          "value": 2.1,
          "indicator": "GDP Growth"
        },
        {
          "year": 2002,
          "value": 2.8,
          "indicator": "GDP Growth"
        },
        {
          "year": 2003,
          "value": 3.2,
          "indicator": "GDP Growth"
        },
        {
          "year": 2004,
          "value": 4.0,
          "indicator": "GDP Growth"
        },
        {
          "year": 2000,
          "value": 1.8,
          "indicator": "Inflation"
        },
        {
          "year": 2001,
          "value": 2.3,
          "indicator": "Inflation"
        },
        {
          "year": 2002,
          "value": 1.5,
          "indicator": "Inflation"
        },
        {
          "year": 2003,
          "value": 2.0,
          "indicator": "Inflation"
        },
        {
          "year": 2004,
          "value": 2.7,
          "indicator": "Inflation"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002,
        2003,
        2004
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "indicator"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Indicator",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "indicator"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "value"
              },
              "stroke": {
                "scale": "color",
                "field": "indicator"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}