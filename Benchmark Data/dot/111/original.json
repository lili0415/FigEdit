{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing IMDb ratings for Netflix movies across different genres.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Genre": "Comedy",
          "IMDb_Rating": 7.5
        },
        {
          "Genre": "Drama",
          "IMDb_Rating": 8.0
        },
        {
          "Genre": "Action",
          "IMDb_Rating": 6.8
        },
        {
          "Genre": "Horror",
          "IMDb_Rating": 6.2
        },
        {
          "Genre": "Romance",
          "IMDb_Rating": 7.1
        },
        {
          "Genre": "Sci-Fi",
          "IMDb_Rating": 7.3
        },
        {
          "Genre": "Documentary",
          "IMDb_Rating": 8.5
        },
        {
          "Genre": "Thriller",
          "IMDb_Rating": 7.0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Genre"
      },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "IMDb_Rating"
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Genre"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "IMDb Rating",
      "grid": true
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Genre"
          },
          "y": {
            "scale": "y",
            "field": "IMDb_Rating"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}