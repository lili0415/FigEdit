{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing app category proportions in the Google Play Store.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Games",
          "value": 450
        },
        {
          "category": "Education",
          "value": 300
        },
        {
          "category": "Business",
          "value": 200
        },
        {
          "category": "Health & Fitness",
          "value": 150
        },
        {
          "category": "Lifestyle",
          "value": 100
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#FF5733",
        "#1f77b4",
        "#aec7e8",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "App Categories",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0.01
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}