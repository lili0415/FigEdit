{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing global temperature anomalies over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 1880,
          "temperature_anomaly": -0.12
        },
        {
          "year": 1890,
          "temperature_anomaly": -0.08
        },
        {
          "year": 1900,
          "temperature_anomaly": -0.1
        },
        {
          "year": 1910,
          "temperature_anomaly": -0.35
        },
        {
          "year": 1920,
          "temperature_anomaly": -0.24
        },
        {
          "year": 1930,
          "temperature_anomaly": -0.1
        },
        {
          "year": 1940,
          "temperature_anomaly": 0.06
        },
        {
          "year": 1950,
          "temperature_anomaly": -0.15
        },
        {
          "year": 1960,
          "temperature_anomaly": -0.03
        },
        {
          "year": 1970,
          "temperature_anomaly": -0.09
        },
        {
