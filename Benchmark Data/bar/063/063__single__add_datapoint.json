{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing average hours worked per week by education level.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "education": "Bachelors",
          "avg_hours_worked": 40
        },
        {
          "education": "Masters",
          "avg_hours_worked": 42
        },
        {
          "education": "Doctorate",
          "avg_hours_worked": 45
        },
        {
          "education": "High School",
          "avg_hours_worked": 38
        },
        {
          "education": "Some College",
          "avg_hours_worked": 39
        },
        {
          "education": "Assoc-acdm",
          "avg_hours_worked": 41
        },
        {
          "education": "Assoc-voc",
          "avg_hours_worked": 40
        },
        {
          "education": "No Diploma",
          "avg_hours_worked": 37
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "education"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "avg_hours_worked"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Education Level"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Hours Worked"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "education"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_hours_worked"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.education",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.avg_hours_worked",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.avg_hours_worked"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}