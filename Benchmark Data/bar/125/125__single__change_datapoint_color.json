{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing GDP per capita for different countries.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "country": "United States",
          "gdp_per_capita": 63594
        },
        {
          "country": "China",
          "gdp_per_capita": 10610
        },
        {
          "country": "India",
          "gdp_per_capita": 2277
        },
        {
          "country": "Germany",
          "gdp_per_capita": 47802
        },
        {
          "country": "Brazil",
          "gdp_per_capita": 8797
        },
        {
          "country": "South Africa",
          "gdp_per_capita": 6945
        },
        {
          "country": "Japan",
          "gdp_per_capita": 40864
        },
        {
          "country": "Canada",
          "gdp_per_capita": 52359
        },
        {
          "country": "Australia",
          "gdp_per_capita": 55705
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "country"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "gdp_per_capita"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Country"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "GDP per Capita (USD)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "country"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "gdp_per_capita"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['country']==='China'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}