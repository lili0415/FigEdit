{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions from Pew Research Center Surveys.",
  "width": 250,
  "height": 250,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "cornerRadius",
      "value": 5
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Social Media Usage",
          "value": 35
        },
        {
          "category": "News Consumption",
          "value": 25
        },
        {
          "category": "Online Shopping",
          "value": 20
        },
        {
          "category": "Streaming Services",
          "value": 15
        },
        {
          "category": "Other Activities",
          "value": 5
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          },
          "fill": [
            {
              "test": "datum.category === 'Streaming Services'",
              "value": "#FF5733"
            },
            {
              "scale": "color",
              "field": "category"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "background": "#fff5e6"
}