{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature anomalies over time for different regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 1880,
          "temperature_anomaly": -0.2,
          "region": "Global"
        },
        {
          "year": 1880,
          "temperature_anomaly": -0.3,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1880,
          "temperature_anomaly": -0.1,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1900,
          "temperature_anomaly": -0.1,
          "region": "Global"
        },
        {
          "year": 1900,
          "temperature_anomaly": -0.2,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1900,
          "temperature_anomaly": 0.0,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1950,
          "temperature_anomaly": 0.1,
          "region": "Global"
        },
        {
          "year": 1950,
          "temperature_anomaly": 0.2,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1950,
          "temperature_anomaly": 0.0,
          "region": "Southern Hemisphere"
        },
        {
          "year": 2000,
          "temperature_anomaly": 0.6,
          "region": "Global"
        },
        {
          "year": 2000,
          "temperature_anomaly": 0.8,
          "region": "Northern Hemisphere"
        },
        {
          "year": 2000,
          "temperature_anomaly": 0.4,
          "region": "Southern Hemisphere"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        1880,
        1900,
        1950,
        2000
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "temperature_anomaly"
      },
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "temperature_anomaly"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}