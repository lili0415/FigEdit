{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing the FAO Food Price Index over time, with series for different food categories.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "2023-01",
          "index": 131.2,
          "category": "Cereals"
        },
        {
          "month": "2023-02",
          "index": 130.1,
          "category": "Cereals"
        },
        {
          "month": "2023-03",
          "index": 129.4,
          "category": "Cereals"
        },
        {
          "month": "2023-01",
          "index": 140.5,
          "category": "Dairy"
        },
        {
          "month": "2023-02",
          "index": 138.9,
          "category": "Dairy"
        },
        {
          "month": "2023-03",
          "index": 137.7,
          "category": "Dairy"
        },
        {
          "month": "2023-01",
          "index": 120.4,
          "category": "Meat"
        },
        {
          "month": "2023-02",
          "index": 119.8,
          "category": "Meat"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "index"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "FAO Food Price Index"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Food Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "month"
              },
              "y": {
                "scale": "y",
                "field": "index"
              },
              "stroke": {
                "scale": "color",
                "field": "category"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}