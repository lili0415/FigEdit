{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing review helpfulness vs. review length with rating as color.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Review_Length": 120,
          "Helpfulness_Score": 0.85,
          "Rating": 5
        },
        {
          "Review_Length": 200,
          "Helpfulness_Score": 0.72,
          "Rating": 4
        },
        {
          "Review_Length": 150,
          "Helpfulness_Score": 0.6,
          "Rating": 3
        },
        {
          "Review_Length": 300,
          "Helpfulness_Score": 0.9,
          "Rating": 5
        },
        {
          "Review_Length": 80,
          "Helpfulness_Score": 0.5,
          "Rating": 2
        },
        {
          "Review_Length": 220,
          "Helpfulness_Score": 0.78,
          "Rating": 4
        },
        {
          "Review_Length": 100,
          "Helpfulness_Score": 0.4,
          "Rating": 1
        },
        {
          "Review_Length": 180,
          "Helpfulness_Score": 0.65,
          "Rating": 3
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        80.0,
        300.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Helpfulness_Score"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Rating"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Review Length (characters)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Helpfulness Score",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Rating",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Review_Length"
          },
          "y": {
            "scale": "y",
            "field": "Helpfulness_Score"
          },
          "fill": {
            "scale": "color",
            "field": "Rating"
          },
          "size": {
            "value": 100
          },
          "tooltip": {
            "signal": "datum"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}