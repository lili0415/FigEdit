{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing demand trends over time for different items.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "item": "Item A",
          "demand": 120
        },
        {
          "date": "2023-01-01",
          "item": "Item B",
          "demand": 150
        },
        {
          "date": "2023-01-02",
          "item": "Item A",
          "demand": 130
        },
        {
          "date": "2023-01-02",
          "item": "Item B",
          "demand": 140
        },
        {
          "date": "2023-01-03",
          "item": "Item A",
          "demand": 125
        },
        {
          "date": "2023-01-03",
          "item": "Item B",
          "demand": 155
        },
        {
          "date": "2023-01-04",
          "item": "Item A",
          "demand": 140
        },
        {
          "date": "2023-01-04",
          "item": "Item B",
          "demand": 160
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": {
        "scheme": "category10"
      },
      "domain": {
        "data": "table",
        "field": "item"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Demand"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "item"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "demand"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "item"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Item",
      "orient": "right"
    }
  ]
}