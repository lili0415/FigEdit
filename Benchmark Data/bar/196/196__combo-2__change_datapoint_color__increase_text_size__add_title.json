{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing average concentrations of pollutants by type.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "pollutant": "CO",
          "concentration": 2.5
        },
        {
          "pollutant": "NO2",
          "concentration": 19.8
        },
        {
          "pollutant": "SO2",
          "concentration": 5.6
        },
        {
          "pollutant": "O3",
          "concentration": 23.1
        },
        {
          "pollutant": "PM10",
          "concentration": 42.3
        },
        {
          "pollutant": "PM2.5",
          "concentration": 35.7
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "pollutant"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "concentration"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Pollutant",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Concentration (µg/m³)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "pollutant"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "concentration"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['pollutant']==='CO'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum['pollutant']==='CO'",
              "value": "#ff7f0e"
            },
            {
              "test": "datum.pollutant === 'PM10'",
              "value": "#ff5733"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}