{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Stacked bar chart for global temperature anomalies by region and year.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "2000",
          "series": "North America",
          "value": 0.8
        },
        {
          "category": "2000",
          "series": "Europe",
          "value": 0.9
        },
        {
          "category": "2000",
          "series": "Asia",
          "value": 1.0
        },
        {
          "category": "2005",
          "series": "North America",
          "value": 1.2
        },
        {
          "category": "2005",
          "series": "Europe",
          "value": 1.1
        },
        {
          "category": "2005",
          "series": "Asia",
          "value": 1.3
        },
        {
          "category": "2010",
          "series": "North America",
          "value": 1.5
        },
        {
          "category": "2010",
          "series": "Europe",
          "value": 1.4
        },
        {
          "category": "2010",
          "series": "Asia",
          "value": 1.6
        },
        {
          "category": "2015",
          "series": "North America",
          "value": 1.8
        },
        {
          "category": "2015",
          "series": "Europe",
          "value": 1.7
        },
        {
          "category": "2015",
          "series": "Asia",
          "value": 1.9
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}