{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing proportions of customer job categories in the Bank Marketing dataset.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "admin.",
          "value": 250
        },
        {
          "category": "blue-collar",
          "value": 350
        },
        {
          "category": "technician",
          "value": 200
        },
        {
          "category": "services",
          "value": 150
        },
        {
          "category": "management",
          "value": 300
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Job Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}