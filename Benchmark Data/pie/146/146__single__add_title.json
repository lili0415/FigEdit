{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 16,
    "anchor": "middle"
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Low Value",
          "value": 120
        },
        {
          "category": "Medium Value",
          "value": 300
        },
        {
          "category": "High Value",
          "value": 580
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0.01
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}