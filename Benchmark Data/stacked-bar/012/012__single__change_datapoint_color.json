{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing COVID-19 cases by region and type.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "region": "North America",
          "case_type": "Active",
          "count": 1200000
        },
        {
          "region": "North America",
          "case_type": "Recovered",
          "count": 800000
        },
        {
          "region": "North America",
          "case_type": "Deaths",
          "count": 200000
        },
        {
          "region": "Europe",
          "case_type": "Active",
          "count": 1000000
        },
        {
          "region": "Europe",
          "case_type": "Recovered",
          "count": 700000
        },
        {
          "region": "Europe",
          "case_type": "Deaths",
          "count": 150000
        },
        {
          "region": "Asia",
          "case_type": "Active",
          "count": 2500000
        },
        {
          "region": "Asia",
          "case_type": "Recovered",
          "count": 1800000
        },
        {
          "region": "Asia",
          "case_type": "Deaths",
          "count": 300000
        },
        {
          "region": "Africa",
          "case_type": "Active",
          "count": 500000
        },
        {
          "region": "Africa",
          "case_type": "Recovered",
          "count": 300000
        },
        {
          "region": "Africa",
          "case_type": "Deaths",
          "count": 50000
        },
        {
          "region": "South America",
          "case_type": "Active",
          "count": 900000
        },
        {
          "region": "South America",
          "case_type": "Recovered",
          "count": 600000
        },
        {
          "region": "South America",
          "case_type": "Deaths",
          "count": 100000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "region"
          ],
          "sort": {
            "field": "case_type"
          },
          "field": "count"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "region"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733",
        "#1f77b4",
        "#ff7f0e"
      ],
      "domain": [
        "Active",
        "Recovered",
        "Deaths"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Cases",
      "zindex": 1
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Case Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "region"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "case_type"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['region']==='North America'",
              "value": "#2ca02c"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}