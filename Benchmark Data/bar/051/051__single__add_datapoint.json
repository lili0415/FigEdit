{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing the frequency of chest pain types in the Heart Disease UCI dataset.",
  "width": 400,
  "height": 250,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Typical Angina",
          "value": 120
        },
        {
          "category": "Atypical Angina",
          "value": 90
        },
        {
          "category": "Non-Anginal Pain",
          "value": 150
        },
        {
          "category": "Asymptomatic",
          "value": 200
        },
        {
          "category": "Silent Ischemia",
          "value": 75
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.2
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Chest Pain Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Frequency"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "darkorange"
          }
        },
        "update": {}
      }
    }
  ]
}