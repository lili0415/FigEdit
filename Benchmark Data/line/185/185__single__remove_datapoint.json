{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing trends in NHANES Survey Data.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "value": 23.5,
          "series": "BMI"
        },
        {
          "year": 2001,
          "value": 24.1,
          "series": "BMI"
        },
        {
          "year": 2002,
          "value": 24.8,
          "series": "BMI"
        },
        {
          "year": 2000,
          "value": 120.5,
          "series": "Blood Pressure"
        },
        {
          "year": 2002,
          "value": 123.8,
          "series": "Blood Pressure"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "stroke": {
            "scale": "color",
            "field": "series"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}