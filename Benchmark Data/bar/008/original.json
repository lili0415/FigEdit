{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing crop production in the United States.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "crop": "Corn",
          "production": 375
        },
        {
          "crop": "Soybeans",
          "production": 315
        },
        {
          "crop": "Wheat",
          "production": 240
        },
        {
          "crop": "Cotton",
          "production": 120
        },
        {
          "crop": "Rice",
          "production": 90
        },
        {
          "crop": "Sorghum",
          "production": 75
        },
        {
          "crop": "Barley",
          "production": 50
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "crop"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "production"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Crop Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Production (in millions of tons)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "crop"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "production"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.crop",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.production",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.production"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}