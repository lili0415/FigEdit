{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing sales proportions by store type.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.29
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 70
    },
    {
      "name": "cornerRadius",
      "value": 5
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "store_type": "Supermarket Type 1",
          "sales": 450000
        },
        {
          "store_type": "Supermarket Type 2",
          "sales": 300000
        },
        {
          "store_type": "Grocery Store",
          "sales": 150000
        },
        {
          "store_type": "Supermarket Type 3",
          "sales": 100000
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "store_type"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "store_type"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Store Type",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "anchor": "middle",
    "fontSize": 16
  }
}