{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Stacked bar chart showing carbon emissions by source across regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "North America",
          "series": "Coal",
          "value": 450
        },
        {
          "category": "North America",
          "series": "Oil",
          "value": 300
        },
        {
          "category": "North America",
          "series": "Gas",
          "value": 250
        },
        {
          "category": "Europe",
          "series": "Coal",
          "value": 400
        },
        {
          "category": "Europe",
          "series": "Oil",
          "value": 350
        },
        {
          "category": "Europe",
          "series": "Gas",
          "value": 200
        },
        {
          "category": "Asia",
          "series": "Coal",
          "value": 700
        },
        {
          "category": "Asia",
          "series": "Oil",
          "value": 500
        },
        {
          "category": "Asia",
          "series": "Gas",
          "value": 300
        },
        {
          "category": "Africa",
          "series": "Coal",
          "value": 200
        },
        {
          "category": "Africa",
          "series": "Oil",
          "value": 150
        },
        {
          "category": "Africa",
          "series": "Gas",
          "value": 100
        },
        {
          "category": "South America",
          "series": "Coal",
          "value": 250
        },
        {
          "category": "South America",
          "series": "Oil",
          "value": 200
        },
        {
          "category": "South America",
          "series": "Gas",
          "value": 150
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "paddingInner": 0.2,
      "padding": 0.0
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Emissions (MtCO2)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Source",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}