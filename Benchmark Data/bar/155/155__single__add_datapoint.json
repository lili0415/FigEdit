{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing the distribution of yeast localization sites.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "localization": "Cytoplasm",
          "count": 463
        },
        {
          "localization": "Nucleus",
          "count": 429
        },
        {
          "localization": "Mitochondria",
          "count": 244
        },
        {
          "localization": "Endoplasmic Reticulum",
          "count": 163
        },
        {
          "localization": "Plasma Membrane",
          "count": 125
        },
        {
          "localization": "Golgi Apparatus",
          "count": 101
        },
        {
          "localization": "Peroxisome",
          "count": 44
        },
        {
          "localization": "Vacuole",
          "count": 38
        },
        {
          "localization": "Lysosome",
          "count": 50
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "localization"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Localization Site"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Protein Count"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "localization"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}