{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing campaign outcomes in the Bank Marketing dataset.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "campaign_outcome": "Success",
          "count": 120
        },
        {
          "campaign_outcome": "Failure",
          "count": 80
        },
        {
          "campaign_outcome": "Unknown",
          "count": 50
        },
        {
          "campaign_outcome": "Pending",
          "count": 30
        },
        {
          "campaign_outcome": "Cancelled",
          "count": 20
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "campaign_outcome"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Campaign Outcome"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "campaign_outcome"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.campaign_outcome",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.count",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.count"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}