{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing the proportion of heart disease types.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "No Disease",
          "value": 138
        },
        {
          "category": "Mild Disease",
          "value": 112
        },
        {
          "category": "Moderate Disease",
          "value": 76
        },
        {
          "category": "Severe Disease",
          "value": 54
        },
        {
          "category": "Critical Disease",
          "value": 90
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Heart Disease Type",
      "orient": "right"
    }
  ]
}