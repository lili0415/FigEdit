{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing airline on-time performance metrics.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "delay_minutes": 35,
          "carrier": "Carrier A"
        },
        {
          "date": "2023-01-01",
          "delay_minutes": 25,
          "carrier": "Carrier B"
        },
        {
          "date": "2023-02-01",
          "delay_minutes": 40,
          "carrier": "Carrier A"
        },
        {
          "date": "2023-02-01",
          "delay_minutes": 30,
          "carrier": "Carrier B"
        },
        {
          "date": "2023-03-01",
          "delay_minutes": 50,
          "carrier": "Carrier A"
        },
        {
          "date": "2023-04-01",
          "delay_minutes": 45,
          "carrier": "Carrier A"
        },
        {
          "date": "2023-04-01",
          "delay_minutes": 35,
          "carrier": "Carrier B"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "delay_minutes"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "carrier"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Average Delay (Minutes)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Airline Carrier",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "carrier"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "delay_minutes"
              },
              "stroke": {
                "scale": "color",
                "field": "carrier"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}