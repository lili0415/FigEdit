{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the number of clicks for different product categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "clicks": 1200
        },
        {
          "category": "Clothing",
          "clicks": 950
        },
        {
          "category": "Home & Kitchen",
          "clicks": 800
        },
        {
          "category": "Books",
          "clicks": 650
        },
        {
          "category": "Toys",
          "clicks": 500
        },
        {
          "category": "Health & Beauty",
          "clicks": 700
        },
        {
          "category": "Sports",
          "clicks": 600
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.30000000000000004
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "clicks"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Product Category"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Number of Clicks"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "clicks"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    }
  ]
}