{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing player attributes from the European Soccer Database.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "OverallRating": 85,
          "Potential": 90,
          "Position": "Forward"
        },
        {
          "OverallRating": 78,
          "Potential": 84,
          "Position": "Midfielder"
        },
        {
          "OverallRating": 82,
          "Potential": 88,
          "Position": "Defender"
        },
        {
          "OverallRating": 75,
          "Potential": 80,
          "Position": "Goalkeeper"
        },
        {
          "OverallRating": 88,
          "Potential": 91,
          "Position": "Forward"
        },
        {
          "OverallRating": 70,
          "Potential": 75,
          "Position": "Midfielder"
        },
        {
          "OverallRating": 80,
          "Potential": 85,
          "Position": "Defender"
        },
        {
          "OverallRating": 77,
          "Potential": 83,
          "Position": "Goalkeeper"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        70,
        75,
        77,
        78,
        80,
        82,
        85,
        88
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Potential"
      },
      "range": "height",
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Overall Rating",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Potential",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "OverallRating"
          },
          "y": {
            "scale": "y",
            "field": "Potential"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}