{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing house prices over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "price": 150000
        },
        {
          "year": 2001,
          "price": 155000
        },
        {
          "year": 2002,
          "price": 160000
        },
        {
          "year": 2003,
          "price": 165000
        },
        {
          "year": 2004,
          "price": 170000
        },
        {
          "year": 2005,
          "price": 175000
        },
        {
          "year": 2006,
          "price": 180000
        },
        {
          "year": 2007,
          "price": 185000
        },
        {
          "year": 2008,
          "price": 190000
        },
        {
          "year": 2009,
          "price": 195000
        },
        {
          "year": 2010,
          "price": 200000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002,
        2003,
        2004,
        2005,
        2006,
        2007,
        2008,
        2009,
        2010
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Price (USD)",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}