{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing values for categories in the Porto Seguro Safe Driver dataset.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "High Risk",
          "Value": 0.85
        },
        {
          "Category": "Moderate Risk",
          "Value": 0.65
        },
        {
          "Category": "Low Risk",
          "Value": 0.45
        },
        {
          "Category": "Very Low Risk",
          "Value": 0.3
        },
        {
          "Category": "High Risk",
          "Value": 0.8
        },
        {
          "Category": "Moderate Risk",
          "Value": 0.7
        },
        {
          "Category": "Low Risk",
          "Value": 0.5
        },
        {
          "Category": "Very Low Risk",
          "Value": 0.25
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Risk Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Probability Value",
      "grid": true
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}