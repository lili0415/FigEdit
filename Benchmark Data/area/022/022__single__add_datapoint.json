{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing Bitcoin closing prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "close": 16500
        },
        {
          "date": "2023-01-02",
          "close": 16750
        },
        {
          "date": "2023-01-03",
          "close": 17000
        },
        {
          "date": "2023-01-04",
          "close": 17200
        },
        {
          "date": "2023-01-05",
          "close": 16900
        },
        {
          "date": "2023-01-06",
          "close": 17500
        },
        {
          "date": "2023-01-07",
          "close": 17750
        },
        {
          "date": "2023-01-08",
          "close": 18000
        },
        {
          "date": "2023-01-09",
          "close": 18250
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "close"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "format": "%b %d",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Closing Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "close"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightgreen"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.7
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}