{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy consumption trends over years for different energy sources.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "energy_data",
      "values": [
        {
          "year": 2000,
          "consumption": 500,
          "source": "Coal"
        },
        {
          "year": 2001,
          "consumption": 520,
          "source": "Coal"
        },
        {
          "year": 2002,
          "consumption": 540,
          "source": "Coal"
        },
        {
          "year": 2000,
          "consumption": 300,
          "source": "Natural Gas"
        },
        {
          "year": 2001,
          "consumption": 310,
          "source": "Natural Gas"
        },
        {
          "year": 2002,
          "consumption": 320,
          "source": "Natural Gas"
        },
        {
          "year": 2000,
          "consumption": 150,
          "source": "Renewables"
        },
        {
          "year": 2001,
          "consumption": 170,
          "source": "Renewables"
        },
        {
          "year": 2002,
          "consumption": 190,
          "source": "Renewables"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2001,
        2002
      ],
      "padding": 0.9
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "energy_data",
        "field": "consumption"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "energy_data",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Consumption (TWh)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Energy Source",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "energy_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "consumption"
          },
          "stroke": {
            "scale": "color",
            "field": "source"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}