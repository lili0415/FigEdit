{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing FAO Food Price Index components across categories.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Dairy",
          "series": "2018",
          "value": 120
        },
        {
          "category": "Dairy",
