{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing category distribution across multiple series.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Politics",
          "series": "Positive",
          "value": 45
        },
        {
          "category": "Politics",
          "series": "Negative",
          "value": 30
        },
        {
          "category": "Politics",
