{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing individual values for comment categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Toxic",
          "Value": 85
        },
        {
          "Category": "Severe Toxic",
          "Value": 90
        },
        {
          "Category": "Obscene",
          "Value": 78
        },
        {
          "Category": "Threat",
          "Value": 92
        },
        {
          "Category": "Insult",
          "Value": 88
        },
        {
          "Category": "Identity Hate",
          "Value": 76
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Comment Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value",
      "grid": true
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "tooltip": {
            "signal": "datum.Category + ': ' + datum.Value"
          }
        }
      }
    }
  ]
}