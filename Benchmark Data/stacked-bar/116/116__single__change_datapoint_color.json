          "population": 200
        },
        {
          "region": "Middle East & North Africa",
          "income_group": "High income",
          "population": 90
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "region"
          ],
          "sort": {
            "field": "income_group"
          },
          "field": "population"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "region"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#FF5733",
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ],
      "domain": {
        "data": "table",
        "field": "income_group"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Population (millions)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Income Group",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "region"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "income_group"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['region']==='Sub-Saharan Africa'",
              "value": "#d62728"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}