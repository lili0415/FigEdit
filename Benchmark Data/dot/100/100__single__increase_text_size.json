{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing the distribution of insincere question categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "questions",
      "values": [
        {
          "Category": "Politics",
          "Value": 15
        },
        {
          "Category": "Religion",
          "Value": 8
        },
        {
          "Category": "Education",
          "Value": 12
        },
        {
          "Category": "Health",
          "Value": 10
        },
        {
          "Category": "Technology",
          "Value": 5
        },
        {
          "Category": "Entertainment",
          "Value": 9
        },
        {
          "Category": "Business",
          "Value": 7
        },
        {
          "Category": "Sports",
          "Value": 11
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "questions",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "questions",
        "field": "Value"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Question Category",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Number of Insincere Questions",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "questions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}