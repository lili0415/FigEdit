{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing stock prices of selected S&P 500 companies over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "company": "Apple",
          "price": 145
        },
        {
          "date": "2023-02-01",
          "company": "Apple",
          "price": 150
        },
        {
          "date": "2023-03-01",
          "company": "Apple",
          "price": 155
        },
        {
          "date": "2023-01-01",
          "company": "Microsoft",
          "price": 240
        },
        {
          "date": "2023-02-01",
          "company": "Microsoft",
          "price": 245
        },
        {
          "date": "2023-03-01",
          "company": "Microsoft",
          "price": 250
        },
        {
          "date": "2023-01-01",
          "company": "Amazon",
          "price": 95
        },
        {
          "date": "2023-02-01",
          "company": "Amazon",
          "price": 100
        },
        {
          "date": "2023-03-01",
          "company": "Amazon",
          "price": 105
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        },
        {
          "type": "filter",
          "expr": "datum['company']=='Apple' || datum['company']=='Microsoft'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "company"
      },
      "range": [
        "steelblue",
        "orange",
        "green"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelFontSize": 14,
      "titleFontSize": 16,
      "tickSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stock Price (USD)",
      "labelFontSize": 14,
      "titleFontSize": 16,
      "tickSize": 12
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "company"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "price"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "company"
              },
              "fillOpacity": {
                "value": 0.7
              }
            },
            "update": {
              "interpolate": {
                "value": "monotone"
              },
              "fillOpacity": {
                "value": 0.7
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.9
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Company",
      "orient": "right"
    }
  ]
}