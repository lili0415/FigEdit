{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "FAO Food Price Index area chart showing trends over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "2022-01",
          "index_value": 135.7
        },
        {
          "month": "2022-02",
          "index_value": 140.8
        },
        {
          "month": "2022-03",
          "index_value": 159.7
        },
        {
          "month": "2022-04",
          "index_value": 158.5
        },
        {
          "month": "2022-05",
          "index_value": 157.4
        },
        {
          "month": "2022-06",
          "index_value": 154.2
        },
        {
          "month": "2022-07",
          "index_value": 141.9
        },
        {
          "month": "2022-08",
          "index_value": 138.0
        },
        {
          "month": "2022-09",
          "index_value": 136.3
        },
        {
          "month": "2022-10",
          "index_value": 135.9
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "index_value"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Index Value"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "month"
          },
          "y": {
            "scale": "yscale",
            "field": "index_value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightgreen"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}