{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Dot plot showing FAO Food Price Index values for different food categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Cereals",
          "Value": 125.6
        },
        {
          "Category": "Vegetable Oils",
          "Value": 142.3
        },
        {
          "Category": "Dairy",
          "Value": 117.8
        },
        {
          "Category": "Meat",
          "Value": 114.2
        },
        {
          "Category": "Sugar",
          "Value": 99.4
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Food Categories"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "FAO Food Price Index Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "#000"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}