  "legends": [
    {
      "fill": "color",
      "title": "Sex",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Length"
          },
          "y": {
            "scale": "y",
            "field": "ShellWeight"
          },
          "fill": {
