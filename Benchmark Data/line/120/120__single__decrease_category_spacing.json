{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing global CO2 emissions and land use change over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "emissions",
      "values": [
        {
          "year": 1990,
          "value": 22.3,
          "category": "Fossil Fuels"
        },
        {
          "year": 1990,
          "value": 1.5,
          "category": "Land Use Change"
        },
        {
          "year": 2000,
          "value": 24.1,
          "category": "Fossil Fuels"
        },
        {
          "year": 2000,
          "value": 1.8,
          "category": "Land Use Change"
        },
        {
          "year": 2010,
          "value": 31.2,
          "category": "Fossil Fuels"
        },
        {
          "year": 2010,
          "value": 1.6,
          "category": "Land Use Change"
        },
        {
          "year": 2020,
          "value": 34.5,
          "category": "Fossil Fuels"
        },
        {
          "year": 2020,
          "value": 1.4,
          "category": "Land Use Change"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        1990,
        2000,
        2010,
        2020
      ],
      "padding": 0.7000000000000001
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "emissions",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "emissions",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Emissions (GtCO2)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Emission Source",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "emissions"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "value"
          },
          "stroke": {
            "scale": "color",
            "field": "category"
          },
          "strokeWidth": {
            "value": 2
          }
        },
        "update": {
          "strokeOpacity": {
            "value": 1
          }
        },
        "hover": {
          "strokeOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}