{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the number of gold medals won by countries in Olympic history.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "country": "USA",
          "gold_medals": 1022
        },
        {
          "country": "Russia",
          "gold_medals": 590
        },
        {
          "country": "Germany",
          "gold_medals": 428
        },
        {
          "country": "UK",
          "gold_medals": 285
        },
        {
          "country": "France",
          "gold_medals": 212
        },
        {
          "country": "China",
          "gold_medals": 275
        },
        {
          "country": "Italy",
          "gold_medals": 206
        },
        {
          "country": "Australia",
          "gold_medals": 152
        },
        {
          "country": "Japan",
          "gold_medals": 176
        },
        {
          "country": "Canada",
          "gold_medals": 136
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "country"
      },
      "range": "width",
      "padding": 0.30000000000000004,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "gold_medals"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Country"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Gold Medals"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "country"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "gold_medals"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "gold"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.country",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.gold_medals",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.gold_medals"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}