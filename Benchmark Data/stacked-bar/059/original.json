{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing carbon emission sources over years.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "1990",
          "series": "Coal",
          "value": 5.2
        },
        {
          "category": "1990",
          "series": "Oil",
          "value": 3.8
        },
        {
          "category": "1990",
          "series": "Gas",
          "value": 2.5
        },
        {
          "category": "1990",
          "series": "Cement",
          "value": 0.7
        },
        {
          "category": "2000",
          "series": "Coal",
          "value": 6.1
        },
        {
          "category": "2000",
          "series": "Oil",
          "value": 4.2
        },
        {
          "category": "2000",
          "series": "Gas",
          "value": 3.0
        },
        {
          "category": "2000",
          "series": "Cement",
          "value": 0.9
        },
        {
          "category": "2010",
          "series": "Coal",
          "value": 7.5
        },
        {
          "category": "2010",
          "series": "Oil",
          "value": 4.8
        },
        {
          "category": "2010",
          "series": "Gas",
          "value": 3.6
        },
        {
          "category": "2010",
          "series": "Cement",
          "value": 1.1
        },
        {
          "category": "2020",
          "series": "Coal",
          "value": 6.8
        },
        {
          "category": "2020",
          "series": "Oil",
          "value": 4.4
        },
        {
          "category": "2020",
          "series": "Gas",
          "value": 3.8
        },
        {
          "category": "2020",
          "series": "Cement",
          "value": 1.2
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Emissions (GtCO2)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Emission Source",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}