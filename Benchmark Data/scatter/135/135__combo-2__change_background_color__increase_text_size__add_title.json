{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing student performance data.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Math_Score": 78,
          "Reading_Score": 85,
          "Gender": "Male"
        },
        {
          "Math_Score": 92,
          "Reading_Score": 88,
          "Gender": "Female"
        },
        {
          "Math_Score": 65,
          "Reading_Score": 70,
          "Gender": "Male"
        },
        {
          "Math_Score": 80,
          "Reading_Score": 82,
          "Gender": "Female"
        },
        {
          "Math_Score": 55,
          "Reading_Score": 60,
          "Gender": "Male"
        },
        {
          "Math_Score": 90,
          "Reading_Score": 95,
          "Gender": "Female"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        55,
        65,
        78,
        80,
        90,
        92
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Reading_Score"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Gender"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Math Score",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Reading Score",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Gender",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Math_Score"
          },
          "y": {
            "scale": "y",
            "field": "Reading_Score"
          },
          "fill": {
            "scale": "color",
            "field": "Gender"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}