{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing stock prices of two companies over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "company": "Company A",
          "price": 150
        },
        {
          "date": "2023-01-02",
          "company": "Company A",
          "price": 152
        },
        {
          "date": "2023-01-03",
          "company": "Company A",
          "price": 148
        },
        {
          "date": "2023-01-04",
          "company": "Company A",
          "price": 155
        },
        {
          "date": "2023-01-05",
          "company": "Company A",
          "price": 160
        },
        {
          "date": "2023-01-01",
          "company": "Company B",
          "price": 120
        },
        {
          "date": "2023-01-02",
          "company": "Company B",
          "price": 125
        },
        {
          "date": "2023-01-03",
          "company": "Company B",
          "price": 122
        },
        {
          "date": "2023-01-04",
          "company": "Company B",
          "price": 130
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "company"
      },
      "range": [
        "steelblue",
        "orange"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "format": "%b %d",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stock Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "company"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "price"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "company"
              },
              "interpolate": {
                "value": "monotone"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Company",
      "orient": "right"
    }
  ]
}