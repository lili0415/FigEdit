{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing item category proportions.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.283185307179586
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Electronics",
          "value": 120
        },
        {
          "category": "Furniture",
          "value": 80
        },
        {
          "category": "Clothing",
          "value": 150
        },
        {
          "category": "Toys",
          "value": 90
        },
        {
          "category": "Groceries",
          "value": 110
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "title": {
    "text": "Edited Chart"
  }
}