{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing Netflix stock prices for different months.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "January",
          "price": 540
        },
        {
          "month": "February",
          "price": 560
        },
        {
          "month": "March",
          "price": 580
        },
        {
          "month": "April",
          "price": 590
        },
        {
          "month": "May",
          "price": 610
        },
        {
          "month": "June",
          "price": 630
        },
        {
          "month": "July",
          "price": 650
        },
        {
          "month": "August",
          "price": 640
        },
        {
          "month": "September",
          "price": 620
        },
        {
          "month": "October",
          "price": 600
        },
        {
          "month": "November",
          "price": 580
        },
        {
          "month": "December",
          "price": 560
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "month"
      },
      "range": "width",
      "padding": 0.2,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "price"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stock Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "month"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.month",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.price",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.price"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}