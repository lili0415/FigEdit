{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing CO2 emissions and fossil fuel usage over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2000,
          "emissions": 25.4,
          "series": "CO2 Emissions"
        },
        {
          "year": 2000,
          "emissions": 8.2,
          "series": "Fossil Fuel Usage"
        },
        {
          "year": 2005,
          "emissions": 28.1,
          "series": "CO2 Emissions"
        },
        {
          "year": 2005,
          "emissions": 9.1,
          "series": "Fossil Fuel Usage"
        },
        {
          "year": 2010,
          "emissions": 31.0,
          "series": "CO2 Emissions"
        },
        {
          "year": 2010,
          "emissions": 10.5,
          "series": "Fossil Fuel Usage"
        },
        {
          "year": 2015,
          "emissions": 33.5,
          "series": "CO2 Emissions"
        },
        {
          "year": 2015,
          "emissions": 11.7,
          "series": "Fossil Fuel Usage"
        },
        {
          "year": 2020,
          "emissions": 34.8,
          "series": "CO2 Emissions"
        },
        {
          "year": 2020,
          "emissions": 12.3,
          "series": "Fossil Fuel Usage"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "emissions"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Emissions (GtCO2 or Gt Fossil Fuel)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "emissions"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}