{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing the distribution of scores across different categories and metrics for universities.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "University A",
          "series": "Teaching",
          "value": 85
        },
        {
          "category": "University A",
          "series": "Research",
          "value": 90
        },
        {
          "category": "University A",
          "series": "International Outlook",
          "value": 70
        },
        {
          "category": "University B",
          "series": "Teaching",
          "value": 78
        },
        {
          "category": "University B",
          "series": "Research",
          "value": 88
        },
        {
          "category": "University B",
          "series": "International Outlook",
          "value": 75
        },
        {
          "category": "University C",
          "series": "Teaching",
          "value": 80
        },
        {
          "category": "University C",
          "series": "Research",
          "value": 85
        },
        {
          "category": "University C",
          "series": "International Outlook",
          "value": 65
        },
        {
          "category": "University D",
          "series": "Teaching",
          "value": 75
        },
        {
          "category": "University D",
          "series": "Research",
          "value": 82
        },
        {
          "category": "University D",
          "series": "International Outlook",
          "value": 60
        },
        {
          "category": "University E",
          "series": "Teaching",
          "value": 88
        },
        {
          "category": "University E",
          "series": "Research",
          "value": 92
        },
        {
          "category": "University E",
          "series": "International Outlook",
          "value": 80
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c"
      ],
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "University",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Score",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Metrics",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}