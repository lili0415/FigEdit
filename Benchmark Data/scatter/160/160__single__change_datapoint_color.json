{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing NBA player statistics.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "PointsPerGame": 25.3,
          "ReboundsPerGame": 10.1,
          "Position": "Center"
        },
        {
          "PointsPerGame": 30.1,
          "ReboundsPerGame": 8.2,
          "Position": "Guard"
        },
        {
          "PointsPerGame": 15.2,
          "ReboundsPerGame": 12.5,
          "Position": "Forward"
        },
        {
          "PointsPerGame": 20.5,
          "ReboundsPerGame": 9.8,
          "Position": "Guard"
        },
        {
          "PointsPerGame": 18.3,
          "ReboundsPerGame": 11.0,
          "Position": "Center"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        15.2,
        30.1
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "ReboundsPerGame"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": [
        "#1f77b4",
        "#d62728",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Points Per Game"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Rebounds Per Game"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Position",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "PointsPerGame"
          },
          "y": {
            "scale": "y",
            "field": "ReboundsPerGame"
          },
          "fill": {
            "scale": "color",
            "field": "Position"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          }
        }
      }
    }
  ]
}