{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing the average shell weight for different abalone age groups.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "age_group": "1-5",
          "avg_shell_weight": 0.2
        },
        {
          "age_group": "6-10",
          "avg_shell_weight": 0.35
        },
        {
          "age_group": "11-15",
          "avg_shell_weight": 0.5
        },
        {
          "age_group": "16-20",
          "avg_shell_weight": 0.65
        },
        {
          "age_group": "21-25",
          "avg_shell_weight": 0.75
        },
        {
          "age_group": "31-35",
          "avg_shell_weight": 0.9
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "age_group"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "avg_shell_weight"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Age Group (Years)"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Shell Weight (kg)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "age_group"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_shell_weight"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}