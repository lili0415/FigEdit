{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the frequency of car evaluations by category.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Buying Price: Low",
          "frequency": 120
        },
        {
          "category": "Buying Price: Medium",
          "frequency": 90
        },
        {
          "category": "Buying Price: High",
          "frequency": 60
        },
        {
          "category": "Maintenance: Low",
          "frequency": 140
        },
        {
          "category": "Maintenance: Medium",
          "frequency": 100
        },
        {
          "category": "Maintenance: High",
          "frequency": 50
        },
        {
          "category": "Safety: Poor",
          "frequency": 40
        },
        {
          "category": "Safety: Average",
          "frequency": 110
        },
        {
          "category": "Safety: Excellent",
          "frequency": 130
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.25,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "frequency"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Car Evaluation Categories"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Frequency"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "frequency"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.frequency",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.frequency"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}