{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing category proportions in Rossmann Store Sales.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.29
    },
    {
      "name": "padAngle",
      "value": 0.02
    },
    {
      "name": "innerRadius",
      "value": 80
    },
    {
      "name": "cornerRadius",
      "value": 5
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "sales",
      "values": [
        {
          "category": "Promotion 1",
          "value": 12000
        },
        {
          "category": "Promotion 2",
          "value": 8000
        },
        {
          "category": "Promotion 3",
          "value": 5000
        },
        {
          "category": "Promotion 4",
          "value": 7000
        },
        {
          "category": "Promotion 5",
          "value": 6000
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    },
    {
      "name": "table",
      "values": [
        {
          "category": "A",
          "value": 30
        },
        {
          "category": "B",
          "value": 45
        },
        {
          "category": "C",
          "value": 25
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "sales",
        "field": "category"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#ff5733",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "sales"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Promotions",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  }
}