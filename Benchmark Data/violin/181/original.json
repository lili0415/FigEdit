{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing the distribution of maximum heart rate achieved for different chest pain types.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 4"
    },
    {
      "name": "bandwidth",
      "value": 20,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "heart_data",
      "values": [
        {
          "Chest Pain Type": "Typical Angina",
          "Max Heart Rate": 150
        },
        {
          "Chest Pain Type": "Typical Angina",
          "Max Heart Rate": 160
        },
        {
          "Chest Pain Type": "Typical Angina",
          "Max Heart Rate": 170
        },
        {
          "Chest Pain Type": "Non-Anginal",
          "Max Heart Rate": 140
        },
        {
          "Chest Pain Type": "Non-Anginal",
          "Max Heart Rate": 155
        },
        {
          "Chest Pain Type": "Non-Anginal",
          "Max Heart Rate": 165
        },
        {
          "Chest Pain Type": "Asymptomatic",
          "Max Heart Rate": 130
        },
        {
          "Chest Pain Type": "Asymptomatic",
          "Max Heart Rate": 145
        },
        {
          "Chest Pain Type": "Asymptomatic",
          "Max Heart Rate": 150
        },
        {
          "Chest Pain Type": "Atypical Angina",
          "Max Heart Rate": 135
        },
        {
          "Chest Pain Type": "Atypical Angina",
          "Max Heart Rate": 140
        },
        {
          "Chest Pain Type": "Atypical Angina",
          "Max Heart Rate": 155
        }
      ]
    },
    {
      "name": "density",
      "source": "heart_data",
      "transform": [
        {
          "type": "kde",
          "field": "Max Heart Rate",
          "groupby": [
            "Chest Pain Type"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "heart_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Chest Pain Type"
          ],
          "fields": [
            "Max Heart Rate",
            "Max Heart Rate",
            "Max Heart Rate"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "heart_data",
        "field": "Chest Pain Type"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "heart_data",
        "field": "Max Heart Rate"
      },
      "nice": true,
      "zero": false
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "heart_data",
        "field": "Chest Pain Type"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Max Heart Rate"
    },
    {
      "orient": "left",
      "scale": "layout",
      "title": "Chest Pain Type"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Chest Pain Type"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Chest Pain Type",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Chest Pain Type'] === parent['Chest Pain Type']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Chest Pain Type"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}