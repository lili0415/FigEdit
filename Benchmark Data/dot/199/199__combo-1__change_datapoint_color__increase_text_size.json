{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing weekly sales for different departments.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Department": "Electronics",
          "Weekly_Sales": 45000
        },
        {
          "Department": "Clothing",
          "Weekly_Sales": 32000
        },
        {
          "Department": "Groceries",
          "Weekly_Sales": 51000
        },
        {
          "Department": "Home Decor",
          "Weekly_Sales": 28000
        },
        {
          "Department": "Pharmacy",
          "Weekly_Sales": 37000
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Electronics",
        "Clothing",
        "Groceries",
        "Home Decor",
        "Pharmacy"
      ],
      "range": [
        "red",
        "steelblue",
        "steelblue",
        "steelblue",
        "steelblue"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Department",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Weekly Sales ($)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Department"
          },
          "y": {
            "scale": "y",
            "field": "Weekly_Sales"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "field": "Department",
            "scale": "color"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}