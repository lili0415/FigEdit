{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing average sales across different store types.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "anchor": "start"
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "store_type": "A",
          "average_sales": 125000
        },
        {
          "store_type": "B",
          "average_sales": 98000
        },
        {
          "store_type": "C",
          "average_sales": 112000
        },
        {
          "store_type": "D",
          "average_sales": 89000
        },
        {
          "store_type": "E",
          "average_sales": 134000
        },
        {
          "store_type": "F",
          "average_sales": 102000
        },
        {
          "store_type": "G",
          "average_sales": 117000
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "store_type"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "average_sales"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Store Type"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Sales ($)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "store_type"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "average_sales"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.store_type",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.average_sales",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.average_sales"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}