{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature and humidity trends over time in Delhi.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-10-01",
          "temperature": 31,
          "humidity": 70
        },
        {
          "date": "2023-10-02",
          "temperature": 32,
          "humidity": 68
        },
        {
          "date": "2023-10-03",
          "temperature": 33,
          "humidity": 65
        },
        {
          "date": "2023-10-04",
          "temperature": 34,
          "humidity": 60
        },
        {
          "date": "2023-10-05",
          "temperature": 35,
          "humidity": 58
        },
        {
          "date": "2023-10-06",
          "temperature": 36,
          "humidity": 55
        },
        {
          "date": "2023-10-07",
          "temperature": 37,
          "humidity": 50
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "y2",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "humidity"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "blue",
        "green"
      ],
      "domain": [
        "temperature",
        "humidity"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "tickSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature (Â°C)",
      "labelFontSize": 16,
      "tickSize": 12
    },
    {
      "orient": "right",
      "scale": "y2",
      "title": "Humidity (%)",
      "labelFontSize": 16,
      "tickSize": 12
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Metrics",
      "orient": "top-right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "temperature"
          },
          "stroke": {
            "scale": "color",
            "value": "blue"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    },
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y2",
            "field": "humidity"
          },
          "stroke": {
            "scale": "color",
            "value": "green"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}