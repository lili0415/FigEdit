{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing the distribution of stroke risk factors.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Hypertension",
          "value": 120
        },
        {
          "category": "Heart Disease",
          "value": 80
        },
        {
          "category": "Smoking Status",
          "value": 150
        },
        {
          "category": "BMI",
          "value": 100
        },
        {
          "category": "Age",
          "value": 200
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#FF5733",
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Stroke Risk Factors",
      "orient": "right",
      "symbolType": "circle"
    }
  ]
}