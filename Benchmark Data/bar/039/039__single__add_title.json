{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing US Economic Indicators.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "GDP Growth",
          "value": 2.3
        },
        {
          "category": "Inflation Rate",
          "value": 1.8
        },
        {
          "category": "Unemployment Rate",
          "value": 3.7
        },
        {
          "category": "Consumer Spending",
          "value": 4.2
        },
        {
          "category": "Industrial Production",
          "value": 0.9
        },
        {
          "category": "Retail Sales",
          "value": 5.1
        },
        {
          "category": "Housing Starts",
          "value": 1.6
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Indicator"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Value (%)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "field": "category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "value",
            "offset": -5
          },
          "text": {
            "field": "value"
          },
          "fillOpacity": {
            "value": 1
          }
        }
      }
    }
  ]
}