{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing Bitcoin prices over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 16500
        },
        {
          "date": "2023-02-01",
          "price": 23000
        },
        {
          "date": "2023-03-01",
          "price": 28000
        },
        {
          "date": "2023-04-01",
          "price": 30000
        },
        {
          "date": "2023-05-01",
          "price": 27000
        },
        {
          "date": "2023-06-01",
          "price": 25000
        },
        {
          "date": "2023-07-01",
          "price": 29500
        },
        {
          "date": "2023-08-01",
          "price": 31000
        },
        {
          "date": "2023-09-01",
          "price": 29000
        },
        {
          "date": "2023-10-01",
          "price": 33000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Bitcoin Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "orange"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}