{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing distributions of transaction amounts for different customer segments.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "transactions",
      "values": [
        {
          "Segment": "High Value",
          "Transaction Amount": 1200
        },
        {
          "Segment": "High Value",
          "Transaction Amount": 1300
        },
        {
          "Segment": "High Value",
          "Transaction Amount": 1400
        },
        {
          "Segment": "High Value",
          "Transaction Amount": 1500
        },
        {
          "Segment": "Medium Value",
          "Transaction Amount": 800
        },
        {
          "Segment": "Medium Value",
          "Transaction Amount": 850
        },
        {
          "Segment": "Medium Value",
          "Transaction Amount": 900
        },
        {
          "Segment": "Medium Value",
          "Transaction Amount": 950
        },
        {
          "Segment": "Low Value",
          "Transaction Amount": 300
        },
        {
          "Segment": "Low Value",
          "Transaction Amount": 350
        },
        {
          "Segment": "Low Value",
          "Transaction Amount": 400
        },
        {
          "Segment": "Low Value",
          "Transaction Amount": 450
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Segment != null && datum['Transaction Amount'] != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "transactions",
      "transform": [
        {
          "type": "kde",
          "field": "Transaction Amount",
          "groupby": [
            "Segment"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "transactions",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Segment"
          ],
          "fields": [
            "Transaction Amount",
            "Transaction Amount",
            "Transaction Amount"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "transactions",
        "field": "Segment"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "transactions",
        "field": "Transaction Amount"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "transactions",
        "field": "Segment"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Transaction Amount"
    },
    {
      "orient": "left",
      "scale": "layout",
      "title": "Customer Segment"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Segment"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Segment",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Segment === parent.Segment"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Segment"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}