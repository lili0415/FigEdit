{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing IMDB review ratings and word counts, with sentiment as the categorical series.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Rating": 7.5,
          "WordCount": 1500,
          "Sentiment": "Positive"
        },
        {
          "Rating": 6.2,
          "WordCount": 800,
          "Sentiment": "Neutral"
        },
        {
          "Rating": 8.9,
          "WordCount": 2200,
          "Sentiment": "Positive"
        },
        {
          "Rating": 5.1,
          "WordCount": 600,
          "Sentiment": "Negative"
        },
        {
          "Rating": 4.3,
          "WordCount": 450,
          "Sentiment": "Negative"
        },
        {
          "Rating": 9.0,
          "WordCount": 3000,
          "Sentiment": "Positive"
        },
        {
          "Rating": 7.0,
          "WordCount": 1200,
          "Sentiment": "Neutral"
        },
        {
          "Rating": 5.8,
          "WordCount": 700,
          "Sentiment": "Negative"
        },
        {
          "Rating": 8.5,
          "WordCount": 2000,
          "Sentiment": "Positive"
        },
        {
          "Rating": 6.0,
          "WordCount": 900,
          "Sentiment": "Neutral"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        4.3,
        9.0
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "WordCount"
      },
      "range": "height",
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Sentiment"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "IMDB Rating",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Word Count",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Sentiment",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Rating"
          },
          "y": {
            "scale": "y",
            "field": "WordCount"
          },
          "fill": {
            "scale": "color",
            "field": "Sentiment"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}