{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Scatter plot showing Abalone data based on shell weight and diameter.",
  "width": 400,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Shell_Weight": 0.5,
          "Diameter": 0.35,
          "Sex": "Male"
        },
        {
          "Shell_Weight": 0.7,
          "Diameter": 0.42,
          "Sex": "Female"
        },
        {
          "Shell_Weight": 0.3,
          "Diameter": 0.25,
          "Sex": "Infant"
        },
        {
          "Shell_Weight": 0.6,
          "Diameter": 0.38,
          "Sex": "Male"
        },
        {
          "Shell_Weight": 0.8,
          "Diameter": 0.45,
          "Sex": "Female"
        },
        {
          "Shell_Weight": 0.4,
          "Diameter": 0.3,
          "Sex": "Infant"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [
        0.3,
        0.8
      ],
      "range": "width",
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Diameter"
      },
      "range": "height",
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Sex"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Shell Weight (g)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Diameter (mm)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "scale": "color",
      "title": "Sex",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Shell_Weight"
          },
          "y": {
            "scale": "y",
            "field": "Diameter"
          },
          "fill": {
            "scale": "color",
            "field": "Sex"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}