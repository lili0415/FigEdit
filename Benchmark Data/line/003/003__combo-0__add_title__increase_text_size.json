{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy production trends over years for different energy sources.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2010,
          "production": 400,
          "source": "Renewables"
        },
        {
          "year": 2011,
          "production": 420,
          "source": "Renewables"
        },
        {
          "year": 2012,
          "production": 450,
          "source": "Renewables"
        },
        {
          "year": 2010,
          "production": 800,
          "source": "Nuclear"
        },
        {
          "year": 2011,
          "production": 780,
          "source": "Nuclear"
        },
        {
          "year": 2012,
          "production": 760,
          "source": "Nuclear"
        },
        {
          "year": 2010,
          "production": 1200,
          "source": "Hydropower"
        },
        {
          "year": 2011,
          "production": 1250,
          "source": "Hydropower"
        },
        {
          "year": 2012,
          "production": 1300,
          "source": "Hydropower"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2010,
        2011,
        2012
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "production"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Production (GWh)",
      "labelFontSize": 16,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Energy Source",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "source"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "production"
              },
              "stroke": {
                "scale": "color",
                "field": "source"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}