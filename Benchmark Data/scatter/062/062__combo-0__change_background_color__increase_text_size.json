{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot depicting review statistics from Amazon Reviews dataset.",
  "width": 300,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Review_Length": 120,
          "Rating": 4.5,
          "Category": "Electronics"
        },
        {
          "Review_Length": 85,
          "Rating": 3.8,
          "Category": "Books"
        },
        {
          "Review_Length": 200,
          "Rating": 4.9,
          "Category": "Home & Kitchen"
        },
        {
          "Review_Length": 150,
          "Rating": 4.0,
          "Category": "Clothing"
        },
        {
          "Review_Length": 95,
          "Rating": 3.5,
          "Category": "Toys"
        },
        {
          "Review_Length": 180,
          "Rating": 4.8,
          "Category": "Sports"
        },
        {
          "Review_Length": 110,
          "Rating": 4.2,
          "Category": "Beauty"
        },
        {
          "Review_Length": 70,
          "Rating": 3.0,
          "Category": "Automotive"
        },
        {
          "Review_Length": 130,
          "Rating": 4.4,
          "Category": "Health"
        },
        {
          "Review_Length": 160,
          "Rating": 4.7,
          "Category": "Pet Supplies"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        70,
        85,
        95,
        110,
        120,
        130,
        150,
        160,
        180,
        200
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Rating"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Review Length (words)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Rating",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "scale": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Review_Length"
          },
          "y": {
            "scale": "y",
            "field": "Rating"
          },
          "fill": {
            "scale": "color",
            "field": "Category"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}