{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing transaction values for different customer categories.",
  "width": 300,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "CustomerCategory": "A",
          "TransactionValue": 1200
        },
        {
          "CustomerCategory": "B",
          "TransactionValue": 1500
        },
        {
          "CustomerCategory": "C",
          "TransactionValue": 800
        },
        {
          "CustomerCategory": "D",
          "TransactionValue": 950
        },
        {
          "CustomerCategory": "E",
          "TransactionValue": 1100
        },
        {
          "CustomerCategory": "F",
          "TransactionValue": 1300
        },
        {
          "CustomerCategory": "G",
          "TransactionValue": 1400
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "CustomerCategory"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "TransactionValue"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Customer Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Transaction Value",
      "grid": true
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "CustomerCategory"
          },
          "y": {
            "scale": "y",
            "field": "TransactionValue"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}