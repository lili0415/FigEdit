{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing precipitation over time in Seattle.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "weather",
      "values": [
        {
          "date": "2023-04-01",
          "precipitation": 0.1
        },
        {
          "date": "2023-04-02",
          "precipitation": 0.3
        },
        {
          "date": "2023-04-03",
          "precipitation": 0.2
        },
        {
          "date": "2023-04-04",
          "precipitation": 0.0
        },
        {
          "date": "2023-04-05",
          "precipitation": 0.4
        },
        {
          "date": "2023-04-06",
          "precipitation": 0.5
        },
        {
          "date": "2023-04-07",
          "precipitation": 0.2
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "weather",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "weather",
        "field": "precipitation"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "format": "%b %d",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Precipitation (inches)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "weather"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "precipitation"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}