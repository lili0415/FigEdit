{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing trends over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2010,
          "category": "A",
          "value": 35
        },
        {
          "year": 2011,
          "category": "A",
          "value": 45
        },
        {
          "year": 2012,
          "category": "A",
          "value": 50
        },
        {
          "year": 2013,
          "category": "A",
          "value": 55
        },
        {
          "year": 2014,
          "category": "A",
          "value": 60
        },
        {
          "year": 2010,
          "category": "B",
          "value": 25
        },
        {
          "year": 2011,
          "category": "B",
          "value": 30
        },
        {
          "year": 2012,
          "category": "B",
          "value": 35
        },
        {
          "year": 2013,
          "category": "B",
          "value": 40
        },
        {
          "year": 2014,
          "category": "B",
          "value": 45
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2010,
        2011,
        2012,
        2013,
        2014
      ]
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": {
        "scheme": "category10"
      },
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "series_facet",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "value"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "category"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "year",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right"
    }
  ]
}