{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing temperature anomalies over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "temperature",
      "values": [
        {
          "year": 1880,
          "anomaly": -0.12
        },
        {
          "year": 1890,
          "anomaly": -0.08
        },
        {
          "year": 1900,
          "anomaly": -0.1
        },
        {
          "year": 1910,
          "anomaly": -0.15
        },
        {
          "year": 1920,
          "anomaly": -0.12
        },
        {
          "year": 1930,
          "anomaly": -0.06
        },
        {
          "year": 1940,
          "anomaly": 0.03
        },
        {
          "year": 1950,
          "anomaly": -0.02
        },
        {
          "year": 1960,
          "anomaly": -0.05
        },
        {
          "year": 1970,
          "anomaly": -0.09
        },
        {
          "year": 1980,
          "anomaly": 0.11
        },
        {
          "year": 1990,
          "anomaly": 0.23
        },
        {
          "year": 2000,
          "anomaly": 0.33
        },
        {
          "year": 2010,
          "anomaly": 0.54
        },
        {
          "year": 2020,
          "anomaly": 0.68
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        1880,
        1890,
        1900,
        1910,
        1920,
        1930,
        1940,
        1950,
        1960,
        1970,
        1980,
        1990,
        2000,
        2010,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "temperature",
        "field": "anomaly"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Temperature Anomaly (Â°C)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "temperature"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year"
          },
          "y": {
            "scale": "yscale",
            "field": "anomaly"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.6
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}