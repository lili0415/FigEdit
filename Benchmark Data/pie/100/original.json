{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing video game sales by genre.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.28318
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "padAngle",
      "value": 0
    },
    {
      "name": "cornerRadius",
      "value": 0
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Adventure",
          "sales": 15
        },
        {
          "genre": "Strategy",
          "sales": 10
        },
        {
          "genre": "Fighting",
          "sales": 8
        },
        {
          "genre": "Platformer",
          "sales": 12
        },
        {
          "genre": "Puzzle",
          "sales": 5
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "genre"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}