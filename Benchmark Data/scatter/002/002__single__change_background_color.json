{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing severity and traffic delay in US accidents.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Severity": 2,
          "Traffic_Delay_Minutes": 15.2,
          "State": "CA"
        },
        {
          "Severity": 3,
          "Traffic_Delay_Minutes": 24.5,
          "State": "TX"
        },
        {
          "Severity": 4,
          "Traffic_Delay_Minutes": 38.1,
          "State": "FL"
        },
        {
          "Severity": 2,
          "Traffic_Delay_Minutes": 12.7,
          "State": "NY"
        },
        {
          "Severity": 3,
          "Traffic_Delay_Minutes": 29.3,
          "State": "PA"
        },
        {
          "Severity": 4,
          "Traffic_Delay_Minutes": 45.0,
          "State": "IL"
        },
        {
          "Severity": 2,
          "Traffic_Delay_Minutes": 10.5,
          "State": "GA"
        },
        {
          "Severity": 3,
          "Traffic_Delay_Minutes": 22.8,
          "State": "NC"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        2,
        3,
        4
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Traffic_Delay_Minutes"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "State"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Severity"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Traffic Delay (Minutes)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "State",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Severity"
          },
          "y": {
            "scale": "y",
            "field": "Traffic_Delay_Minutes"
          },
          "fill": {
            "scale": "color",
            "field": "State"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}