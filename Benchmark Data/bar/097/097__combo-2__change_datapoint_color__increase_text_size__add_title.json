{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the average cost for two people across different restaurant cuisines.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "cuisine": "North Indian",
          "avg_cost": 800
        },
        {
          "cuisine": "Chinese",
          "avg_cost": 600
        },
        {
          "cuisine": "Italian",
          "avg_cost": 1000
        },
        {
          "cuisine": "Mexican",
          "avg_cost": 750
        },
        {
          "cuisine": "Thai",
          "avg_cost": 850
        },
        {
          "cuisine": "Japanese",
          "avg_cost": 1200
        },
        {
          "cuisine": "Mediterranean",
          "avg_cost": 900
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "cuisine"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "avg_cost"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Cuisine",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Cost (â‚¹)",
      "labelFontSize": 16,
      "tickSize": 10,
      "titleFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "cuisine"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_cost"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['cuisine']==='Thai'",
              "value": "#ff7f0e"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum['cuisine']==='Thai'",
              "value": "#ff7f0e"
            },
            {
              "test": "datum.cuisine === 'Japanese'",
              "value": "#ff6347"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}