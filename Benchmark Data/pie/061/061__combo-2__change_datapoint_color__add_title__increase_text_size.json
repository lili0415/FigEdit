{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions in the UCI Yeast Dataset.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 10,
    "top": 10,
    "right": 10,
    "bottom": 10
  },
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "CYT",
          "value": 20
        },
        {
          "category": "NUC",
          "value": 35
        },
        {
          "category": "MIT",
          "value": 15
        },
        {
          "category": "ME3",
          "value": 10
        },
        {
          "category": "EXC",
          "value": 8
        },
        {
          "category": "VAC",
          "value": 12
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318530718
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10",
        "override": {
          "NUC": "#FF5733"
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle",
      "titleFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}