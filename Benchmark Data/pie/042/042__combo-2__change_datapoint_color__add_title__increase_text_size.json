{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions for Netflix Stock Price data.",
  "width": 300,
  "height": 300,
  "padding": 10,
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.283185
    },
    {
      "name": "padAngle",
      "value": 0
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "cornerRadius",
      "value": 0
    },
    {
      "name": "sort",
      "value": false
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Technology",
          "value": 35
        },
        {
          "category": "Media",
          "value": 25
        },
        {
          "category": "Consumer Services",
          "value": 20
        },
        {
          "category": "Other",
          "value": 20
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": [
          "#1f77b4",
          "#FF5733",
          "#2ca02c",
          "#d62728"
        ]
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Category",
      "orient": "right",
      "symbolType": "circle",
      "titleFontSize": 14
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 14
  },
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}