{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing Bitcoin price trends over time.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "anchor": "start"
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-07-01",
          "price": 30500,
          "series": "Close Price"
        },
        {
          "date": "2023-07-02",
          "price": 31000,
          "series": "Close Price"
        },
        {
          "date": "2023-07-03",
          "price": 31500,
          "series": "Close Price"
        },
        {
          "date": "2023-07-01",
          "price": 30000,
          "series": "Open Price"
        },
        {
          "date": "2023-07-02",
          "price": 30500,
          "series": "Open Price"
        },
        {
          "date": "2023-07-03",
          "price": 31000,
          "series": "Open Price"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}