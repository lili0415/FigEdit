{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing NYC Airbnb listings with price and number of reviews.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Price": 150,
          "Reviews": 30,
          "RoomType": "Entire home/apt"
        },
        {
          "Price": 75,
          "Reviews": 15,
          "RoomType": "Private room"
        },
        {
          "Price": 200,
          "Reviews": 50,
          "RoomType": "Entire home/apt"
        },
        {
          "Price": 100,
          "Reviews": 20,
          "RoomType": "Shared room"
        },
        {
          "Price": 120,
          "Reviews": 25,
          "RoomType": "Private room"
        },
        {
          "Price": 250,
          "Reviews": 80,
          "RoomType": "Entire home/apt"
        },
        {
          "Price": 60,
          "Reviews": 10,
          "RoomType": "Shared room"
        },
        {
          "Price": 180,
          "Reviews": 40,
          "RoomType": "Private room"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        60,
        75,
        100,
        120,
        150,
        180,
        200,
        250
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Reviews"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "RoomType"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Price ($)",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Number of Reviews",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Room Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Price"
          },
          "y": {
            "scale": "y",
            "field": "Reviews"
          },
          "fill": {
            "scale": "color",
            "field": "RoomType"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}