{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing proportions of subscription types in a bank marketing dataset.",
  "width": 300,
  "height": 300,
  "padding": {
    "left": 5,
    "top": 5,
    "right": 5,
    "bottom": 5
  },
  "signals": [
    {
      "name": "startAngle",
      "value": 0
    },
    {
      "name": "endAngle",
      "value": 6.29
    },
    {
      "name": "innerRadius",
      "value": 0
    },
    {
      "name": "padAngle",
      "value": 0.03
    },
    {
      "name": "cornerRadius",
      "value": 5
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Subscribed",
          "value": 45
        },
        {
          "category": "Not Subscribed",
          "value": 55
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": false
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": [
        "#FF5733",
        "#1f77b4"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Subscription Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ]
}