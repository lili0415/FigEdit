{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing category proportions from Pew Research Center Surveys.",
  "width": 300,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Social Media Usage",
          "value": 40
        },
        {
          "category": "Internet Access",
          "value": 25
        },
        {
          "category": "News Consumption",
          "value": 20
        },
        {
          "category": "Online Shopping",
          "value": 15
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Categories",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ]
}