{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing trends over time for different series.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-01",
          "value": 45,
          "series": "Series A"
        },
        {
          "date": "2021-02",
          "value": 50,
          "series": "Series A"
        },
        {
          "date": "2021-03",
          "value": 55,
          "series": "Series A"
        },
        {
          "date": "2021-01",
          "value": 30,
          "series": "Series B"
        },
        {
          "date": "2021-02",
          "value": 35,
          "series": "Series B"
        },
        {
          "date": "2021-03",
          "value": 40,
          "series": "Series B"
        },
        {
          "date": "2021-01",
          "value": 20,
          "series": "Series C"
        },
        {
          "date": "2021-02",
          "value": 25,
          "series": "Series C"
        },
        {
          "date": "2021-03",
          "value": 30,
          "series": "Series C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Series",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "series"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "value"
              },
              "stroke": {
                "scale": "color",
                "field": "series"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}