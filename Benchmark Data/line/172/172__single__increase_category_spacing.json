{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing accident counts over time for different severity levels.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "count": 120,
          "severity": "Low"
        },
        {
          "date": "2023-01-01",
          "count": 80,
          "severity": "Medium"
        },
        {
          "date": "2023-01-01",
          "count": 50,
          "severity": "High"
        },
        {
          "date": "2023-02-01",
          "count": 150,
          "severity": "Low"
        },
        {
          "date": "2023-02-01",
          "count": 100,
          "severity": "Medium"
        },
        {
          "date": "2023-02-01",
          "count": 60,
          "severity": "High"
        },
        {
          "date": "2023-03-01",
          "count": 180,
          "severity": "Low"
        },
        {
          "date": "2023-03-01",
          "count": 120,
          "severity": "Medium"
        },
        {
          "date": "2023-03-01",
          "count": 70,
          "severity": "High"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.9
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "count"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "severity"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Accident Count"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Severity Level",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "severity"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "count"
              },
              "stroke": {
                "scale": "color",
                "field": "severity"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}