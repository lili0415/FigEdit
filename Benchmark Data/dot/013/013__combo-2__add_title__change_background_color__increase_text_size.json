{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing trip durations for different taxi vendor categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Vendor": "Vendor A",
          "TripDuration": 120
        },
        {
          "Vendor": "Vendor A",
          "TripDuration": 240
        },
        {
          "Vendor": "Vendor A",
          "TripDuration": 180
        },
        {
          "Vendor": "Vendor B",
          "TripDuration": 300
        },
        {
          "Vendor": "Vendor B",
          "TripDuration": 150
        },
        {
          "Vendor": "Vendor B",
          "TripDuration": 200
        },
        {
          "Vendor": "Vendor C",
          "TripDuration": 400
        },
        {
          "Vendor": "Vendor C",
          "TripDuration": 270
        },
        {
          "Vendor": "Vendor C",
          "TripDuration": 350
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "source",
        "field": "Vendor"
      },
      "range": "width",
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "TripDuration"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Vendor",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Trip Duration (seconds)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Vendor"
          },
          "y": {
            "scale": "y",
            "field": "TripDuration"
          },
          "size": {
            "value": 50
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "steelblue"
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}