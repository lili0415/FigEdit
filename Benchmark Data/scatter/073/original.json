{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing the relationship between crime incidents and their associated time with a category for primary crime type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Incident_Count": 120,
          "Average_Response_Time": 6.5,
          "Primary_Type": "Theft"
        },
        {
          "Incident_Count": 95,
          "Average_Response_Time": 5.2,
          "Primary_Type": "Battery"
        },
        {
          "Incident_Count": 180,
          "Average_Response_Time": 7.1,
          "Primary_Type": "Assault"
        },
        {
          "Incident_Count": 75,
          "Average_Response_Time": 4.8,
          "Primary_Type": "Burglary"
        },
        {
          "Incident_Count": 130,
          "Average_Response_Time": 6.0,
          "Primary_Type": "Robbery"
        },
        {
          "Incident_Count": 160,
          "Average_Response_Time": 7.5,
          "Primary_Type": "Narcotics"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "round": true,
      "domain": [
        75,
        95,
        120,
        130,
        160,
        180
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Average_Response_Time"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Primary_Type"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Incident Count"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Average Response Time (minutes)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Primary Crime Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Incident_Count"
          },
          "y": {
            "scale": "y",
            "field": "Average_Response_Time"
          },
          "fill": {
            "scale": "color",
            "field": "Primary_Type"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}