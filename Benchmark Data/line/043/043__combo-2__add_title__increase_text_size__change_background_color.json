{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature anomalies over years.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "background": "#f0f8ff",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 1880,
          "temperature_anomaly": -0.12,
          "region": "Global"
        },
        {
          "year": 1881,
          "temperature_anomaly": -0.1,
          "region": "Global"
        },
        {
          "year": 1882,
          "temperature_anomaly": -0.15,
          "region": "Global"
        },
        {
          "year": 1880,
          "temperature_anomaly": -0.25,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1881,
          "temperature_anomaly": -0.2,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1882,
          "temperature_anomaly": -0.18,
          "region": "Northern Hemisphere"
        },
        {
          "year": 1880,
          "temperature_anomaly": -0.05,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1881,
          "temperature_anomaly": -0.08,
          "region": "Southern Hemisphere"
        },
        {
          "year": 1882,
          "temperature_anomaly": -0.1,
          "region": "Southern Hemisphere"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        1880,
        1881,
        1882
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "temperature_anomaly"
      },
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year",
      "labelFontSize": 14,
      "tickFontSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature Anomaly (Â°C)",
      "labelFontSize": 14,
      "tickFontSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "temperature_anomaly"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}