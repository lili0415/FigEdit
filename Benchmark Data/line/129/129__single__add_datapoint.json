{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing price trends over time for different item categories.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-01",
          "price": 25,
          "category": "Electronics"
        },
        {
          "date": "2021-02",
          "price": 30,
          "category": "Electronics"
        },
        {
          "date": "2021-03",
          "price": 28,
          "category": "Electronics"
        },
        {
          "date": "2021-04",
          "price": 35,
          "category": "Electronics"
        },
        {
          "date": "2021-01",
          "price": 15,
          "category": "Clothing"
        },
        {
          "date": "2021-02",
          "price": 18,
          "category": "Clothing"
        },
        {
          "date": "2021-03",
          "price": 20,
          "category": "Clothing"
        },
        {
          "date": "2021-01",
          "price": 40,
          "category": "Home Appliances"
        },
        {
          "date": "2021-02",
          "price": 45,
          "category": "Home Appliances"
        },
        {
          "date": "2021-03",
          "price": 42,
          "category": "Home Appliances"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "category"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}