{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing goals scored versus match year with point color representing match type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Year": 1950,
          "Goals": 3,
          "MatchType": "Friendly"
        },
        {
          "Year": 1960,
          "Goals": 5,
          "MatchType": "World Cup"
        },
        {
          "Year": 1970,
          "Goals": 2,
          "MatchType": "Qualifier"
        },
        {
          "Year": 1980,
          "Goals": 4,
          "MatchType": "Friendly"
        },
        {
          "Year": 1990,
          "Goals": 6,
          "MatchType": "World Cup"
        },
        {
          "Year": 2000,
          "Goals": 1,
          "MatchType": "Qualifier"
        },
        {
          "Year": 2010,
          "Goals": 3,
          "MatchType": "Friendly"
        },
        {
          "Year": 2020,
          "Goals": 7,
          "MatchType": "World Cup"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        1950,
        1960,
        1970,
        1980,
        1990,
        2000,
        2010,
        2020
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Goals"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "MatchType"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Year"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Goals Scored"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Match Type"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Year"
          },
          "y": {
            "scale": "y",
            "field": "Goals"
          },
          "fill": {
            "scale": "color",
            "field": "MatchType"
          },
          "size": {
            "value": 100
          },
          "tooltip": {
            "signal": "datum"
          }
        }
      }
    }
  ]
}