{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing proportions of video game sales by genre.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "startAngle",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.28,
        "step": 0.01
      }
    },
    {
      "name": "endAngle",
      "value": 6.28,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.28,
        "step": 0.01
      }
    },
    {
      "name": "padAngle",
      "value": 0.02,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 0.1
      }
    },
    {
      "name": "innerRadius",
      "value": 80,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 120,
        "step": 1
      }
    },
    {
      "name": "cornerRadius",
      "value": 5,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 20,
        "step": 1
      }
    },
    {
      "name": "sort",
      "value": false,
      "bind": {
        "input": "checkbox"
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Action",
          "sales": 30
        },
        {
          "genre": "Sports",
          "sales": 25
        },
        {
          "genre": "Shooter",
          "sales": 20
        },
        {
          "genre": "Role-Playing",
          "sales": 15
        },
        {
          "genre": "Puzzle",
          "sales": 10
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": {
            "signal": "sort"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c",
        "#d62728",
        "#9467bd"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "genre"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  }
}