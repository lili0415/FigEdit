{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the average alcohol content for different wine classes.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "class": "Class 1",
          "average_alcohol": 13.7
        },
        {
          "class": "Class 2",
          "average_alcohol": 12.2
        },
        {
          "class": "Class 3",
          "average_alcohol": 11.8
        },
        {
          "class": "Class 4",
          "average_alcohol": 14.0
        },
        {
          "class": "Class 5",
          "average_alcohol": 13.5
        },
        {
          "class": "Class 6",
          "average_alcohol": 12.8
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "class"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "average_alcohol"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Wine Class",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Alcohol Content (%)",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "class"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "average_alcohol"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['class']==='Class 2'",
              "value": "#ff7f0e"
            },
            {
              "test": "datum.class === 'Class 4'",
              "value": "#ff9900"
            },
            {
              "value": "steelblue"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}