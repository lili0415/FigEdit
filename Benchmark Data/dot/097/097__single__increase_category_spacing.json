{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing Yelp review counts for different business categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Restaurants",
          "ReviewCount": 1200
        },
        {
          "Category": "Shopping",
          "ReviewCount": 800
        },
        {
          "Category": "Beauty & Spas",
          "ReviewCount": 450
        },
        {
          "Category": "Health & Medical",
          "ReviewCount": 600
        },
        {
          "Category": "Home Services",
          "ReviewCount": 300
        },
        {
          "Category": "Nightlife",
          "ReviewCount": 700
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.9
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "ReviewCount"
      },
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Business Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Review Count"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "ReviewCount"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}