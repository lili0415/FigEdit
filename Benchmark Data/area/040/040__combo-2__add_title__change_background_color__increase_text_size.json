{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing daily COVID-19 cases for multiple countries.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  },
  "data": [
    {
      "name": "cases",
      "values": [
        {
          "date": "2023-01-01",
          "country": "USA",
          "cases": 120000
        },
        {
          "date": "2023-01-01",
          "country": "India",
          "cases": 95000
        },
        {
          "date": "2023-01-02",
          "country": "USA",
          "cases": 115000
        },
        {
          "date": "2023-01-02",
          "country": "India",
          "cases": 98000
        },
        {
          "date": "2023-01-03",
          "country": "USA",
          "cases": 110000
        },
        {
          "date": "2023-01-03",
          "country": "India",
          "cases": 92000
        },
        {
          "date": "2023-01-04",
          "country": "USA",
          "cases": 125000
        },
        {
          "date": "2023-01-04",
          "country": "India",
          "cases": 89000
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "cases",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "cases",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange"
      ],
      "domain": {
        "data": "cases",
        "field": "country"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Daily Cases",
      "labelFontSize": 16
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "cases",
          "name": "series_facet",
          "groupby": "country"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "cases"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "country"
              },
              "interpolate": {
                "value": "monotone"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Country",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}