{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing COVID-19 cases over time with multiple series.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2020-01",
          "region": "North America",
          "cases": 100
        },
        {
          "date": "2020-02",
          "region": "North America",
          "cases": 200
        },
        {
          "date": "2020-03",
          "region": "North America",
          "cases": 500
        },
        {
          "date": "2020-01",
          "region": "Europe",
          "cases": 150
        },
        {
          "date": "2020-02",
          "region": "Europe",
          "cases": 300
        },
        {
          "date": "2020-03",
          "region": "Europe",
          "cases": 700
        },
        {
          "date": "2020-01",
          "region": "Asia",
          "cases": 200
        },
        {
          "date": "2020-02",
          "region": "Asia",
          "cases": 400
        },
        {
          "date": "2020-03",
          "region": "Asia",
          "cases": 1000
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['region']=='North America' || datum['region']=='Europe'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.9
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "cases"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Cases"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "date"
              },
              "y": {
                "scale": "yscale",
                "field": "cases"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "region"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Region",
      "orient": "right"
    }
  ]
}