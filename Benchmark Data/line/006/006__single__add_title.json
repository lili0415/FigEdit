{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing CO2 emissions and methane emissions over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "dx": 10,
    "dy": -10
  },
  "data": [
    {
      "name": "emissions",
      "values": [
        {
          "year": 2000,
          "value": 25.3,
          "type": "CO2 Emissions"
        },
        {
          "year": 2000,
          "value": 12.1,
          "type": "Methane Emissions"
        },
        {
          "year": 2005,
          "value": 27.8,
          "type": "CO2 Emissions"
        },
        {
          "year": 2005,
          "value": 13.4,
          "type": "Methane Emissions"
        },
        {
          "year": 2010,
          "value": 30.5,
          "type": "CO2 Emissions"
        },
        {
          "year": 2010,
          "value": 14.2,
          "type": "Methane Emissions"
        },
        {
          "year": 2015,
          "value": 32.7,
          "type": "CO2 Emissions"
        },
        {
          "year": 2015,
          "value": 15.0,
          "type": "Methane Emissions"
        },
        {
          "year": 2020,
          "value": 34.1,
          "type": "CO2 Emissions"
        },
        {
          "year": 2020,
          "value": 15.8,
          "type": "Methane Emissions"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "emissions",
        "field": "value"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "emissions",
        "field": "type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Emissions (GtCO2e)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Emission Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "emissions",
          "groupby": "type"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "value"
              },
              "stroke": {
                "scale": "color",
                "field": "type"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}