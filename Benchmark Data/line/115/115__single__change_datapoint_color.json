{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing trends from Pew Research Center Surveys.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2015,
          "percentage": 45,
          "category": "Social Media Use"
        },
        {
          "year": 2016,
          "percentage": 50,
          "category": "Social Media Use"
        },
        {
          "year": 2017,
          "percentage": 55,
          "category": "Social Media Use"
        },
        {
          "year": 2018,
          "percentage": 60,
          "category": "Social Media Use"
        },
        {
          "year": 2019,
          "percentage": 65,
          "category": "Social Media Use"
        },
        {
          "year": 2020,
          "percentage": 70,
          "category": "Social Media Use"
        },
        {
          "year": 2015,
          "percentage": 40,
          "category": "Online News Consumption"
        },
        {
          "year": 2016,
          "percentage": 43,
          "category": "Online News Consumption"
        },
        {
          "year": 2017,
          "percentage": 47,
          "category": "Online News Consumption"
        },
        {
          "year": 2018,
          "percentage": 50,
          "category": "Online News Consumption"
        },
        {
          "year": 2019,
          "percentage": 54,
          "category": "Online News Consumption"
        },
        {
          "year": 2020,
          "percentage": 58,
          "category": "Online News Consumption"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2015,
        2016,
        2017,
        2018,
        2019,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "percentage"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "orange"
      ],
      "domain": {
        "data": "table",
        "field": "category"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Percentage"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Category",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "category"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "percentage"
              },
              "stroke": {
                "scale": "color",
                "field": "category"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}