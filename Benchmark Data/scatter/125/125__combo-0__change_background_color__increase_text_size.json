{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Scatter plot of trip duration vs bike speed, colored by user type.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Trip_Duration": 12.5,
          "Bike_Speed": 18.2,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 7.8,
          "Bike_Speed": 14.5,
          "User_Type": "Customer"
        },
        {
          "Trip_Duration": 15.2,
          "Bike_Speed": 19.8,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 10.3,
          "Bike_Speed": 16.7,
          "User_Type": "Customer"
        },
        {
          "Trip_Duration": 9.5,
          "Bike_Speed": 15.3,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 13.7,
          "Bike_Speed": 17.9,
          "User_Type": "Customer"
        },
        {
          "Trip_Duration": 11.2,
          "Bike_Speed": 18.5,
          "User_Type": "Subscriber"
        },
        {
          "Trip_Duration": 8.6,
          "Bike_Speed": 14.8,
          "User_Type": "Customer"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": false,
      "domain": [
        7.8,
        15.2
      ],
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {
        "data": "source",
        "field": "Bike_Speed"
      },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "User_Type"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "title": "Trip Duration (minutes)",
      "labelFontSize": 16
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "title": "Bike Speed (km/h)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "User Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Trip_Duration"
          },
          "y": {
            "scale": "y",
            "field": "Bike_Speed"
          },
          "fill": {
            "scale": "color",
            "field": "User_Type"
          },
          "size": {
            "value": 100
          },
          "opacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}