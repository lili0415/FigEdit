{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing temperature trends in Delhi over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "temperature": 12
        },
        {
          "date": "2023-01-02",
          "temperature": 14
        },
        {
          "date": "2023-01-03",
          "temperature": 13
        },
        {
          "date": "2023-01-04",
          "temperature": 15
        },
        {
          "date": "2023-01-05",
          "temperature": 16
        },
        {
          "date": "2023-01-06",
          "temperature": 18
        },
        {
          "date": "2023-01-07",
          "temperature": 20
        },
        {
          "date": "2023-01-08",
          "temperature": 19
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Temperature (Â°C)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "temperature"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 0.8
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}