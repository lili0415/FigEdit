{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the export values of different commodities.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "commodity": "Electronics",
          "export_value": 120
        },
        {
          "commodity": "Machinery",
          "export_value": 95
        },
        {
          "commodity": "Vehicles",
          "export_value": 110
        },
        {
          "commodity": "Pharmaceuticals",
          "export_value": 80
        },
        {
          "commodity": "Textiles",
          "export_value": 60
        },
        {
          "commodity": "Food Products",
          "export_value": 75
        },
        {
          "commodity": "Metals",
          "export_value": 90
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "commodity"
      },
      "range": "width",
      "padding": 0.30000000000000004
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "export_value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Commodity"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Export Value (in billion USD)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "commodity"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "export_value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        },
        "update": {}
      }
    }
  ]
}