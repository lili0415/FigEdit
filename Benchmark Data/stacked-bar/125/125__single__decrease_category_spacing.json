{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing bike rentals by season and user type.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "season": "Spring",
          "user_type": "Casual",
          "rentals": 1200
        },
        {
          "season": "Spring",
          "user_type": "Registered",
          "rentals": 3500
        },
        {
          "season": "Summer",
          "user_type": "Casual",
          "rentals": 2400
        },
        {
          "season": "Summer",
          "user_type": "Registered",
          "rentals": 4800
        },
        {
          "season": "Fall",
          "user_type": "Casual",
          "rentals": 1800
        },
        {
          "season": "Fall",
          "user_type": "Registered",
          "rentals": 4200
        },
        {
          "season": "Winter",
          "user_type": "Casual",
          "rentals": 800
        },
        {
          "season": "Winter",
          "user_type": "Registered",
          "rentals": 3000
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "season"
          ],
          "sort": {
            "field": "user_type"
          },
          "field": "rentals"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "season"
      },
      "paddingInner": 0.2,
      "padding": 0.0
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "user_type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Season"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Number of Rentals"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "User Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "season"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "user_type"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}