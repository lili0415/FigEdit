{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing transaction categories and their average values.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Category 1",
          "value": 120
        },
        {
          "category": "Category 2",
          "value": 85
        },
        {
          "category": "Category 3",
          "value": 150
        },
        {
          "category": "Category 4",
          "value": 95
        },
        {
          "category": "Category 5",
          "value": 130
        },
        {
          "category": "Category 6",
          "value": 75
        },
        {
          "category": "Category 7",
          "value": 110
        },
        {
          "category": "Category 8",
          "value": 140
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.05
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Transaction Categories"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Value"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "steelblue"
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}