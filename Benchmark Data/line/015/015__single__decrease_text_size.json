{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing price trends and sales count over time for Kaggle: Mercari Price Suggestion dataset.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 25,
          "sales_count": 120
        },
        {
          "date": "2023-01-02",
          "price": 30,
          "sales_count": 130
        },
        {
          "date": "2023-01-03",
          "price": 28,
          "sales_count": 110
        },
        {
          "date": "2023-01-04",
          "price": 32,
          "sales_count": 140
        },
        {
          "date": "2023-01-05",
          "price": 27,
          "sales_count": 125
        },
        {
          "date": "2023-01-06",
          "price": 29,
          "sales_count": 150
        },
        {
          "date": "2023-01-07",
          "price": 31,
          "sales_count": 135
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y_price",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "y_sales",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "sales_count"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ],
      "domain": [
        "Price",
        "Sales Count"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y_price",
      "title": "Price ($)",
      "grid": true,
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "right",
      "scale": "y_sales",
      "title": "Sales Count",
      "grid": true,
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Metrics",
      "orient": "top-right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "color"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y_price",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "value": "#1f77b4"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        },
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y_sales",
                "field": "sales_count"
              },
              "stroke": {
                "scale": "color",
                "value": "#ff7f0e"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}