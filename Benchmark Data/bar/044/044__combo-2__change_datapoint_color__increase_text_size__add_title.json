{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing loan purposes and their counts from the Home Credit Default Risk dataset.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Cash loans",
          "count": 120
        },
        {
          "category": "Revolving loans",
          "count": 85
        },
        {
          "category": "Consumer goods",
          "count": 60
        },
        {
          "category": "Education",
          "count": 45
        },
        {
          "category": "Business",
          "count": 30
        },
        {
          "category": "Housing",
          "count": 75
        },
        {
          "category": "Other",
          "count": 50
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Loan Purpose",
      "labelFontSize": 14
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count",
      "labelFontSize": 14
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": [
            {
              "test": "datum['category']==='Business'",
              "value": "#2ca02c"
            },
            {
              "test": "datum['category']==='Cash loans'",
              "value": "#ff7f0e"
            },
            {
              "test": "datum.category === 'Education'",
              "value": "green"
            },
            {
              "value": "steelblue"
            }
          ]
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.count",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.count"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}