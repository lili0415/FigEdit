{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Line chart showing temperature and humidity trends over time in Delhi.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-08-01",
          "temperature": 35,
          "humidity": 75
        },
        {
          "date": "2023-08-02",
          "temperature": 36,
          "humidity": 73
        },
        {
          "date": "2023-08-03",
          "temperature": 34,
          "humidity": 78
        },
        {
          "date": "2023-08-04",
          "temperature": 33,
          "humidity": 80
        },
        {
          "date": "2023-08-05",
          "temperature": 32,
          "humidity": 82
        },
        {
          "date": "2023-08-06",
          "temperature": 31,
          "humidity": 85
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "padding": 0.9,
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "y2",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "humidity"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ],
      "domain": [
        "Temperature",
        "Humidity"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature (Â°C)"
    },
    {
      "orient": "right",
      "scale": "y2",
      "title": "Humidity (%)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Metrics",
      "orient": "top-right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y",
            "field": "temperature"
          },
          "stroke": {
            "scale": "color",
            "value": "#1f77b4"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    },
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y2",
            "field": "humidity"
          },
          "stroke": {
            "scale": "color",
            "value": "#ff7f0e"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    }
  ]
}