{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A donut chart showing proportions of different health conditions in NHANES Survey Data.",
  "width": 300,
  "height": 300,
  "autosize": "pad",
  "signals": [
    {
      "name": "innerRadius",
      "value": 80
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Hypertension",
          "value": 45
        },
        {
          "category": "Diabetes",
          "value": 30
        },
        {
          "category": "Obesity",
          "value": 50
        },
        {
          "category": "High Cholesterol",
          "value": 25
        },
        {
          "category": "No Condition",
          "value": 100
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category10",
        "extent": [
          "#ff0000",
          "#1f77b4",
          "#2ca02c",
          "#d62728",
          "#9467bd"
        ]
      }
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Health Conditions",
      "orient": "right"
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 16
  },
  "background": "#f0f8ff"
}