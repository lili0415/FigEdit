{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing GDP contribution by industry sectors.",
  "width": 500,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Agriculture",
          "amount": 120
        },
        {
          "category": "Mining",
          "amount": 85
        },
        {
          "category": "Utilities",
          "amount": 95
        },
        {
          "category": "Wholesale Trade",
          "amount": 150
        },
        {
          "category": "Real Estate",
          "amount": 220
        },
        {
          "category": "Professional Services",
          "amount": 180
        },
        {
          "category": "Arts and Recreation",
          "amount": 60
        },
        {
          "category": "Accommodation and Food Services",
          "amount": 110
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "amount"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Industry Sectors"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "GDP Contribution (in billions)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "amount"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "teal"
          }
        },
        "update": {
          "fill": {
            "value": "teal"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}