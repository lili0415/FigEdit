{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing temperature and precipitation trends over time in Seattle.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "temperature": 45,
          "precipitation": 0.2
        },
        {
          "date": "2023-01-02",
          "temperature": 47,
          "precipitation": 0.1
        },
        {
          "date": "2023-01-03",
          "temperature": 44,
          "precipitation": 0.5
        },
        {
          "date": "2023-01-04",
          "temperature": 46,
          "precipitation": 0.0
        },
        {
          "date": "2023-01-05",
          "temperature": 43,
          "precipitation": 0.3
        },
        {
          "date": "2023-01-06",
          "temperature": 42,
          "precipitation": 0.4
        },
        {
          "date": "2023-01-07",
          "temperature": 41,
          "precipitation": 0.6
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      },
      "padding": 0.1
    },
    {
      "name": "y_temperature",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "y_precipitation",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "precipitation"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#ff7f0e"
      ],
      "domain": [
        "temperature",
        "precipitation"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y_temperature",
      "title": "Temperature (Â°F)",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "right",
      "scale": "y_precipitation",
      "title": "Precipitation (inches)",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Metrics",
      "orient": "top-left"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y_temperature",
            "field": "temperature"
          },
          "stroke": {
            "scale": "color",
            "value": "#1f77b4"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    },
    {
      "type": "line",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "date"
          },
          "y": {
            "scale": "y_precipitation",
            "field": "precipitation"
          },
          "stroke": {
            "scale": "color",
            "value": "#ff7f0e"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}