{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing distributions of cholesterol levels for different age groups.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "patients",
      "values": [
        {
          "Age Group": "30-39",
          "Cholesterol Level": 200
        },
        {
          "Age Group": "30-39",
          "Cholesterol Level": 210
        },
        {
          "Age Group": "30-39",
          "Cholesterol Level": 220
        },
        {
          "Age Group": "30-39",
          "Cholesterol Level": 230
        },
        {
          "Age Group": "40-49",
          "Cholesterol Level": 240
        },
        {
          "Age Group": "40-49",
          "Cholesterol Level": 250
        },
        {
          "Age Group": "40-49",
          "Cholesterol Level": 260
        },
        {
          "Age Group": "40-49",
          "Cholesterol Level": 270
        },
        {
          "Age Group": "50-59",
          "Cholesterol Level": 280
        },
        {
          "Age Group": "50-59",
          "Cholesterol Level": 290
        },
        {
          "Age Group": "50-59",
          "Cholesterol Level": 300
        },
        {
          "Age Group": "50-59",
          "Cholesterol Level": 310
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['Age Group'] != null && datum['Cholesterol Level'] != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "patients",
      "transform": [
        {
          "type": "kde",
          "field": "Cholesterol Level",
          "groupby": [
            "Age Group"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "patients",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Age Group"
          ],
          "fields": [
            "Cholesterol Level",
            "Cholesterol Level",
            "Cholesterol Level"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "patients",
        "field": "Age Group"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "patients",
        "field": "Cholesterol Level"
      },
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "patients",
        "field": "Age Group"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale"
    },
    {
      "orient": "left",
      "scale": "layout"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Age Group"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Age Group",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Age Group'] === parent['Age Group']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Age Group"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}