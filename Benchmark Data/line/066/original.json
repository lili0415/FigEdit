{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing airline on-time performance over months.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "performance",
      "values": [
        {
          "month": "2021-06",
          "on_time_rate": 85,
          "airline": "Airline A"
        },
        {
          "month": "2021-06",
          "on_time_rate": 78,
          "airline": "Airline B"
        },
        {
          "month": "2021-07",
          "on_time_rate": 88,
          "airline": "Airline A"
        },
        {
          "month": "2021-07",
          "on_time_rate": 82,
          "airline": "Airline B"
        },
        {
          "month": "2021-08",
          "on_time_rate": 90,
          "airline": "Airline A"
        },
        {
          "month": "2021-08",
          "on_time_rate": 85,
          "airline": "Airline B"
        },
        {
          "month": "2021-09",
          "on_time_rate": 87,
          "airline": "Airline A"
        },
        {
          "month": "2021-09",
          "on_time_rate": 80,
          "airline": "Airline B"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "performance",
        "field": "month"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "performance",
        "field": "on_time_rate"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "performance",
        "field": "airline"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "On-Time Rate (%)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Airline",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "performance",
          "groupby": "airline"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "month"
              },
              "y": {
                "scale": "y",
                "field": "on_time_rate"
              },
              "stroke": {
                "scale": "color",
                "field": "airline"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}