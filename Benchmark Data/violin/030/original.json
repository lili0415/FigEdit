{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing distributions of income for different contract types.",
  "width": 500,
  "padding": 5,
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 3"
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "income_data",
      "values": [
        {
          "Contract Type": "Cash loans",
          "Annual Income": 25000
        },
        {
          "Contract Type": "Cash loans",
          "Annual Income": 28000
        },
        {
          "Contract Type": "Cash loans",
          "Annual Income": 30000
        },
        {
          "Contract Type": "Cash loans",
          "Annual Income": 32000
        },
        {
          "Contract Type": "Cash loans",
          "Annual Income": 35000
        },
        {
          "Contract Type": "Revolving loans",
          "Annual Income": 15000
        },
        {
          "Contract Type": "Revolving loans",
          "Annual Income": 18000
        },
        {
          "Contract Type": "Revolving loans",
          "Annual Income": 20000
        },
        {
          "Contract Type": "Revolving loans",
          "Annual Income": 22000
        },
        {
          "Contract Type": "Revolving loans",
          "Annual Income": 24000
        }
      ]
    },
    {
      "name": "density",
      "source": "income_data",
      "transform": [
        {
          "type": "kde",
          "field": "Annual Income",
          "groupby": [
            "Contract Type"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "income_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Contract Type"
          ],
          "fields": [
            "Annual Income",
            "Annual Income",
            "Annual Income"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "income_data",
        "field": "Contract Type"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "domain": {
        "data": "income_data",
        "field": "Annual Income"
      },
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "income_data",
        "field": "Contract Type"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Contract Type"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Contract Type",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum['Contract Type'] === parent['Contract Type']"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Contract Type"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}