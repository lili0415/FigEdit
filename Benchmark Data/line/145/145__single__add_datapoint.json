{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing population trends over years for different age groups.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "year": 2010,
          "population": 120000,
          "age_group": "0-18"
        },
        {
          "year": 2010,
          "population": 150000,
          "age_group": "19-35"
        },
        {
          "year": 2010,
          "population": 130000,
          "age_group": "36-55"
        },
        {
          "year": 2010,
          "population": 110000,
          "age_group": "56+"
        },
        {
          "year": 2015,
          "population": 125000,
          "age_group": "0-18"
        },
        {
          "year": 2015,
          "population": 160000,
          "age_group": "19-35"
        },
        {
          "year": 2015,
          "population": 140000,
          "age_group": "36-55"
        },
        {
          "year": 2015,
          "population": 120000,
          "age_group": "56+"
        },
        {
          "year": 2020,
          "population": 130000,
          "age_group": "0-18"
        },
        {
          "year": 2020,
          "population": 170000,
          "age_group": "19-35"
        },
        {
          "year": 2020,
          "population": 150000,
          "age_group": "36-55"
        },
        {
          "year": 2020,
          "population": 130000,
          "age_group": "56+"
        },
        {
          "year": 2025,
          "population": 135000,
          "age_group": "0-18"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "population"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "age_group"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Population"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Age Group",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "age_group"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "year"
              },
              "y": {
                "scale": "y",
                "field": "population"
              },
              "stroke": {
                "scale": "color",
                "field": "age_group"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}