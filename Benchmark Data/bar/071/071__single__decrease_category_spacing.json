{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Bar chart showing the distribution of yeast classes.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "class": "CYT",
          "count": 148
        },
        {
          "class": "NUC",
          "count": 99
        },
        {
          "class": "MIT",
          "count": 44
        },
        {
          "class": "ME3",
          "count": 51
        },
        {
          "class": "EXC",
          "count": 35
        },
        {
          "class": "VAC",
          "count": 36
        },
        {
          "class": "POX",
          "count": 46
        },
        {
          "class": "ERL",
          "count": 5
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "class"
      },
      "range": "width",
      "padding": 0.0,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "count"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Yeast Class"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Count"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "class"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    }
  ]
}