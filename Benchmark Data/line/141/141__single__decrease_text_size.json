{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing university rankings over years for multiple universities.",
  "width": 600,
  "height": 400,
  "padding": 5,
  "data": [
    {
      "name": "rankings",
      "values": [
        {
          "year": 2016,
          "rank": 1,
          "university": "University A"
        },
        {
          "year": 2017,
          "rank": 2,
          "university": "University A"
        },
        {
          "year": 2018,
          "rank": 1,
          "university": "University A"
        },
        {
          "year": 2016,
          "rank": 5,
          "university": "University B"
        },
        {
          "year": 2017,
          "rank": 4,
          "university": "University B"
        },
        {
          "year": 2018,
          "rank": 3,
          "university": "University B"
        },
        {
          "year": 2016,
          "rank": 10,
          "university": "University C"
        },
        {
          "year": 2017,
          "rank": 8,
          "university": "University C"
        },
        {
          "year": 2018,
          "rank": 7,
          "university": "University C"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2016,
        2017,
        2018
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "rankings",
        "field": "rank"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "rankings",
        "field": "university"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Rank",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "University",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "rankings",
          "groupby": "university"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "rank"
              },
              "stroke": {
                "scale": "color",
                "field": "university"
              },
              "strokeWidth": {
                "value": 2
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}