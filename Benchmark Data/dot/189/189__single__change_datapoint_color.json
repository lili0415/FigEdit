{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing player ratings for different FIFA player positions.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Position": "Forward",
          "Rating": 89
        },
        {
          "Position": "Midfielder",
          "Rating": 85
        },
        {
          "Position": "Defender",
          "Rating": 82
        },
        {
          "Position": "Goalkeeper",
          "Rating": 91
        },
        {
          "Position": "Forward",
          "Rating": 87
        },
        {
          "Position": "Midfielder",
          "Rating": 83
        },
        {
          "Position": "Defender",
          "Rating": 79
        },
        {
          "Position": "Goalkeeper",
          "Rating": 88
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Position"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Rating"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Player Position"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Player Rating"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Position"
          },
          "y": {
            "scale": "y",
            "field": "Rating"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "orange"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}