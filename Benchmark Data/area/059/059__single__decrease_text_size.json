{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing energy consumption by source over years.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "energy_data",
      "values": [
        {
          "year": 2000,
          "source": "Coal",
          "consumption": 2000
        },
        {
          "year": 2000,
          "source": "Renewables",
          "consumption": 500
        },
        {
          "year": 2000,
          "source": "Nuclear",
          "consumption": 800
        },
        {
          "year": 2010,
          "source": "Coal",
          "consumption": 1800
        },
        {
          "year": 2010,
          "source": "Renewables",
          "consumption": 1000
        },
        {
          "year": 2010,
          "source": "Nuclear",
          "consumption": 900
        },
        {
          "year": 2020,
          "source": "Coal",
          "consumption": 1500
        },
        {
          "year": 2020,
          "source": "Renewables",
          "consumption": 2000
        },
        {
          "year": 2020,
          "source": "Nuclear",
          "consumption": 950
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['source']=='Coal' || datum['source']=='Renewables'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2010,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "energy_data",
        "field": "consumption"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c"
      ],
      "domain": {
        "data": "energy_data",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Year",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Energy Consumption (TWh)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "energy_data",
          "name": "series_facet",
          "groupby": "source"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series_facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "consumption"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "source"
              }
            },
            "update": {
              "fillOpacity": {
                "value": 0.7
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.9
              }
            }
          },
          "sort": {
            "field": "year",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Source",
      "orient": "right"
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}