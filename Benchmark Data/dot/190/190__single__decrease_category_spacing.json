{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing air quality values for different categories.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "CO",
          "Value": 2.1
        },
        {
          "Category": "NO2",
          "Value": 18.4
        },
        {
          "Category": "O3",
          "Value": 25.0
        },
        {
          "Category": "SO2",
          "Value": 5.3
        },
        {
          "Category": "PM10",
          "Value": 42.7
        },
        {
          "Category": "PM2.5",
          "Value": 15.2
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": [
        50,
        350
      ],
      "padding": 0.0
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Pollutant Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Concentration (µg/m³)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#1f77b4"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}