{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing Bitcoin trading volume by month and exchange type.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "January",
          "series": "Spot",
          "value": 1200
        },
        {
          "category": "January",
          "series": "Derivatives",
          "value": 800
        },
        {
          "category": "February",
          "series": "Spot",
          "value": 1500
        },
        {
          "category": "February",
          "series": "Derivatives",
          "value": 1000
        },
        {
          "category": "March",
          "series": "Spot",
          "value": 2000
        },
        {
          "category": "March",
          "series": "Derivatives",
          "value": 1200
        },
        {
          "category": "April",
          "series": "Spot",
          "value": 1800
        },
        {
          "category": "April",
          "series": "Derivatives",
          "value": 1400
        },
        {
          "category": "May",
          "series": "Spot",
          "value": 2200
        },
        {
          "category": "May",
          "series": "Derivatives",
          "value": 1600
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Trading Volume (in millions)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Exchange Type",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}