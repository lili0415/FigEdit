{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing energy production by source across regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "region": "Northeast",
          "source": "Coal",
          "value": 120
        },
        {
          "region": "Northeast",
          "source": "Natural Gas",
          "value": 200
        },
        {
          "region": "Northeast",
          "source": "Renewables",
          "value": 80
        },
        {
          "region": "Midwest",
          "source": "Coal",
          "value": 150
        },
        {
          "region": "Midwest",
          "source": "Natural Gas",
          "value": 220
        },
        {
          "region": "Midwest",
          "source": "Renewables",
          "value": 90
        },
        {
          "region": "South",
          "source": "Coal",
          "value": 180
        },
        {
          "region": "South",
          "source": "Natural Gas",
          "value": 250
        },
        {
          "region": "South",
          "source": "Renewables",
          "value": 100
        },
        {
          "region": "West",
          "source": "Coal",
          "value": 100
        },
        {
          "region": "West",
          "source": "Natural Gas",
          "value": 180
        },
        {
          "region": "West",
          "source": "Renewables",
          "value": 120
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "region"
          ],
          "sort": {
            "field": "source"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "region"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#FF5733"
      ],
      "domain": {
        "data": "table",
        "field": "source"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "labelFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Production (in GWh)",
      "labelFontSize": 16
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Energy Source",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "region"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "source"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['region']==='Northeast'",
              "value": "#2ca02c"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}