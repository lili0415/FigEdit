{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing Netflix stock prices over time.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "stock_data",
      "values": [
        {
          "date": "2022-05-01",
          "price": 190.5
        },
        {
          "date": "2022-05-02",
          "price": 195.3
        },
        {
          "date": "2022-05-03",
          "price": 200.1
        },
        {
          "date": "2022-05-04",
          "price": 198.7
        },
        {
          "date": "2022-05-05",
          "price": 202.8
        },
        {
          "date": "2022-05-06",
          "price": 208.4
        },
        {
          "date": "2022-05-07",
          "price": 210.2
        },
        {
          "date": "2022-05-08",
          "price": 215.0
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "stock_data",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {
        "data": "stock_data",
        "field": "price"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stock Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "stock_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}