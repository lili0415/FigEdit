{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing proportions of customer education levels.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "education": "High School",
          "count": 150
        },
        {
          "education": "Bachelor's",
          "count": 200
        },
        {
          "education": "Master's",
          "count": 100
        },
        {
          "education": "Doctorate",
          "count": 50
        },
        {
          "education": "Other",
          "count": 25
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "count"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "education"
      },
      "range": [
        "#1f77b4",
        "#FF5733",
        "#2ca02c",
        "#d62728",
        "#9467bd"
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Education Levels",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "education"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          }
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  }
}