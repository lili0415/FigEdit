{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A violin plot showing the distribution of points scored by NBA players across positions.",
  "width": 500,
  "padding": 5,
  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },
  "signals": [
    {
      "name": "plotWidth",
      "value": 60
    },
    {
      "name": "height",
      "update": "(plotWidth + 10) * 5"
    },
    {
      "name": "trim",
      "value": true,
      "bind": {
        "input": "checkbox"
      }
    },
    {
      "name": "bandwidth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "nba_stats",
      "values": [
        {
          "Position": "Guard",
          "Points": 25
        },
        {
          "Position": "Guard",
          "Points": 30
        },
        {
          "Position": "Guard",
          "Points": 22
        },
        {
          "Position": "Guard",
          "Points": 28
        },
        {
          "Position": "Guard",
          "Points": 24
        },
        {
          "Position": "Forward",
          "Points": 18
        },
        {
          "Position": "Forward",
          "Points": 20
        },
        {
          "Position": "Forward",
          "Points": 22
        },
        {
          "Position": "Forward",
          "Points": 25
        },
        {
          "Position": "Center",
          "Points": 15
        },
        {
          "Position": "Center",
          "Points": 18
        },
        {
          "Position": "Center",
          "Points": 20
        },
        {
          "Position": "Center",
          "Points": 14
        },
        {
          "Position": "Center",
          "Points": 16
        },
        {
          "Position": "Guard",
          "Points": 26
        },
        {
          "Position": "Forward",
          "Points": 23
        },
        {
          "Position": "Center",
          "Points": 17
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Position != null && datum['Points'] != null"
        }
      ]
    },
    {
      "name": "density",
      "source": "nba_stats",
      "transform": [
        {
          "type": "kde",
          "field": "Points",
          "groupby": [
            "Position"
          ],
          "bandwidth": {
            "signal": "bandwidth"
          },
          "extent": {
            "signal": "trim ? null : [10, 40]"
          }
        }
      ]
    },
    {
      "name": "stats",
      "source": "nba_stats",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Position"
          ],
          "fields": [
            "Points",
            "Points",
            "Points"
          ],
          "ops": [
            "q1",
            "median",
            "q3"
          ],
          "as": [
            "q1",
            "median",
            "q3"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "nba_stats",
        "field": "Position"
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "round": true,
      "domain": {
        "data": "nba_stats",
        "field": "Points"
      },
      "domainMin": 10,
      "zero": false,
      "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [
        0,
        {
          "signal": "plotWidth"
        }
      ],
      "domain": {
        "data": "density",
        "field": "density"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "nba_stats",
        "field": "Position"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "zindex": 1
    },
    {
      "orient": "left",
      "scale": "layout",
      "tickCount": 5,
      "zindex": 1
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "Position"
        }
      },
      "encode": {
        "enter": {
          "yc": {
            "scale": "layout",
            "field": "Position",
            "band": 0.5
          },
          "height": {
            "signal": "plotWidth"
          },
          "width": {
            "signal": "width"
          }
        }
      },
      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.Position === parent.Position"
            }
          ]
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "violin"
          },
          "encode": {
            "enter": {
              "fill": {
                "scale": "color",
                "field": {
                  "parent": "Position"
                }
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "value"
              },
              "yc": {
                "signal": "plotWidth / 2"
              },
              "height": {
                "scale": "hscale",
                "field": "density"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "height": {
                "value": 2
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "q1"
              },
              "x2": {
                "scale": "xscale",
                "field": "q3"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": {
            "data": "summary"
          },
          "encode": {
            "enter": {
              "fill": {
                "value": "black"
              },
              "width": {
                "value": 2
              },
              "height": {
                "value": 8
              }
            },
            "update": {
              "x": {
                "scale": "xscale",
                "field": "median"
              },
              "yc": {
                "signal": "plotWidth / 2"
              }
            }
          }
        }
      ]
    }
  ]
}