{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing item demand over time for multiple stores.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01",
          "demand": 120,
          "store": "Store A"
        },
        {
          "date": "2022-01",
          "demand": 150,
          "store": "Store B"
        },
        {
          "date": "2022-02",
          "demand": 130,
          "store": "Store A"
        },
        {
          "date": "2022-02",
          "demand": 140,
          "store": "Store B"
        },
        {
          "date": "2022-03",
          "demand": 170,
          "store": "Store A"
        },
        {
          "date": "2022-03",
          "demand": 160,
          "store": "Store B"
        },
        {
          "date": "2022-04",
          "demand": 190,
          "store": "Store A"
        },
        {
          "date": "2022-04",
          "demand": 180,
          "store": "Store B"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": [
        0,
        400
      ],
      "padding": 0.7000000000000001,
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "store"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Demand"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Store",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "store"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "demand"
              },
              "stroke": {
                "scale": "color",
                "field": "store"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}