{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing stock prices of S&P 500 companies over time.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "price": 150,
          "company": "Apple"
        },
        {
          "date": "2023-01-02",
          "price": 152,
          "company": "Apple"
        },
        {
          "date": "2023-01-03",
          "price": 148,
          "company": "Apple"
        },
        {
          "date": "2023-01-01",
          "price": 320,
          "company": "Microsoft"
        },
        {
          "date": "2023-01-02",
          "price": 325,
          "company": "Microsoft"
        },
        {
          "date": "2023-01-03",
          "price": 318,
          "company": "Microsoft"
        },
        {
          "date": "2023-01-01",
          "price": 210,
          "company": "Amazon"
        },
        {
          "date": "2023-01-02",
          "price": 215,
          "company": "Amazon"
        },
        {
          "date": "2023-01-03",
          "price": 208,
          "company": "Amazon"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "company"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Stock Price (USD)",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Company",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "company"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "price"
              },
              "stroke": {
                "scale": "color",
                "field": "company"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}