{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing bike sharing demand over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2021-05-01",
          "demand": 120,
          "season": "Spring"
        },
        {
          "date": "2021-05-02",
          "demand": 150,
          "season": "Spring"
        },
        {
          "date": "2021-05-03",
          "demand": 180,
          "season": "Spring"
        },
        {
          "date": "2021-06-01",
          "demand": 200,
          "season": "Summer"
        },
        {
          "date": "2021-06-02",
          "demand": 220,
          "season": "Summer"
        },
        {
          "date": "2021-06-03",
          "demand": 250,
          "season": "Summer"
        },
        {
          "date": "2021-07-01",
          "demand": 300,
          "season": "Summer"
        },
        {
          "date": "2021-07-02",
          "demand": 280,
          "season": "Summer"
        },
        {
          "date": "2021-07-03",
          "demand": 310,
          "season": "Summer"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "demand"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "season"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "titleFontSize": 16,
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Bike Demand",
      "titleFontSize": 16,
      "labelFontSize": 12
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Season",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "seasonSeries",
          "data": "table",
          "groupby": "season"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "seasonSeries"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "demand"
              },
              "stroke": {
                "scale": "color",
                "field": "season"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}