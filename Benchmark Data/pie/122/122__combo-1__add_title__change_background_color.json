{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing the distribution of restaurant types.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Casual Dining",
          "value": 40
        },
        {
          "category": "Quick Bites",
          "value": 30
        },
        {
          "category": "Cafe",
          "value": 15
        },
        {
          "category": "Dessert Parlor",
          "value": 10
        },
        {
          "category": "Fine Dining",
          "value": 5
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Restaurant Type",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "category"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "value": 0.01
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "value": 5
          }
        }
      }
    }
  ]
}