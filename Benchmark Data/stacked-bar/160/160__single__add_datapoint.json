{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing Netflix stock price trends by quarter and year.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "2018 Q1",
          "series": "Open",
          "value": 275
        },
        {
          "category": "2018 Q1",
          "series": "Close",
          "value": 280
        },
        {
          "category": "2018 Q2",
          "series": "Open",
          "value": 300
        },
        {
          "category": "2018 Q2",
          "series": "Close",
          "value": 310
        },
        {
          "category": "2018 Q3",
          "series": "Open",
          "value": 320
        },
        {
          "category": "2018 Q3",
          "series": "Close",
          "value": 330
        },
        {
          "category": "2018 Q4",
          "series": "Open",
          "value": 290
        },
        {
          "category": "2018 Q4",
          "series": "Close",
          "value": 295
        },
        {
          "category": "2019 Q1",
          "series": "Open",
          "value": 305
        },
        {
          "category": "2019 Q1",
          "series": "Close",
          "value": 315
        },
        {
          "category": "2019 Q2",
          "series": "Open",
          "value": 320
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Quarter"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Stock Price ($)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Series",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}