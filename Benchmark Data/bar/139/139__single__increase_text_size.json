{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing the overall ratings of players in FIFA 19.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "player": "Lionel Messi",
          "rating": 94
        },
        {
          "player": "Cristiano Ronaldo",
          "rating": 93
        },
        {
          "player": "Neymar",
          "rating": 92
        },
        {
          "player": "Kevin De Bruyne",
          "rating": 91
        },
        {
          "player": "Eden Hazard",
          "rating": 91
        },
        {
          "player": "Mohamed Salah",
          "rating": 90
        },
        {
          "player": "Virgil van Dijk",
          "rating": 90
        },
        {
          "player": "Luis Suarez",
          "rating": 91
        },
        {
          "player": "Sergio Ramos",
          "rating": 91
        },
        {
          "player": "Luka Modric",
          "rating": 90
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "player"
      },
      "range": "width",
      "padding": 0.1,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "rating"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Player",
      "labelFontSize": 12
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Rating",
      "labelFontSize": 12
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "player"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "rating"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          },
          "fontSize": {
            "value": 14
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.player",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.rating",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.rating"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  }
}