{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing wine categories and their respective alcohol levels.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Class 1",
          "Alcohol": 13.5
        },
        {
          "Category": "Class 1",
          "Alcohol": 14.1
        },
        {
          "Category": "Class 2",
          "Alcohol": 12.8
        },
        {
          "Category": "Class 2",
          "Alcohol": 13.0
        },
        {
          "Category": "Class 3",
          "Alcohol": 11.5
        },
        {
          "Category": "Class 3",
          "Alcohol": 12.2
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.6
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Alcohol"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Wine Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Alcohol Level"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Alcohol"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.5
          }
        }
      }
    }
  ]
}