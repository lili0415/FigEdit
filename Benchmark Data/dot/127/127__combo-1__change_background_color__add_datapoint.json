{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A dot plot showing values for categories from the Kaggle: Give Me Some Credit dataset.",
  "width": 300,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Category": "Age",
          "Value": 45
        },
        {
          "Category": "NumberOfDependents",
          "Value": 2
        },
        {
          "Category": "RevolvingUtilization",
          "Value": 0.35
        },
        {
          "Category": "DebtRatio",
          "Value": 0.6
        },
        {
          "Category": "MonthlyIncome",
          "Value": 5000
        },
        {
          "Category": "NumberOfOpenCreditLines",
          "Value": 5
        },
        {
          "Category": "CreditScore",
          "Value": 700
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source",
        "field": "Category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Category"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Value"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "Category"
          },
          "y": {
            "scale": "y",
            "field": "Value"
          },
          "shape": {
            "value": "circle"
          },
          "size": {
            "value": 100
          },
          "fill": {
            "value": "steelblue"
          },
          "opacity": {
            "value": 0.8
          }
        }
      }
    }
  ]
}