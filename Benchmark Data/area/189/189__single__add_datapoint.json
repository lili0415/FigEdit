{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing Netflix stock prices over time.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2022-01-01",
          "price": 600
        },
        {
          "date": "2022-02-01",
          "price": 620
        },
        {
          "date": "2022-03-01",
          "price": 580
        },
        {
          "date": "2022-04-01",
          "price": 560
        },
        {
          "date": "2022-05-01",
          "price": 590
        },
        {
          "date": "2022-06-01",
          "price": 610
        },
        {
          "date": "2022-07-01",
          "price": 630
        },
        {
          "date": "2022-08-01",
          "price": 650
        },
        {
          "date": "2022-09-01",
          "price": 640
        },
        {
          "date": "2022-10-01",
          "price": 620
        },
        {
          "date": "2022-11-01",
          "price": 610
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "table",
        "field": "price"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Stock Price (USD)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "price"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightblue"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}