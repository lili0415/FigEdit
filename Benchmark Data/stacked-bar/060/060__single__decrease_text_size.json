{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing economic indicators across regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Africa",
          "series": "GDP Growth",
          "value": 3.5
        },
        {
          "category": "Africa",
          "series": "Unemployment Rate",
          "value": 7.8
        },
        {
          "category": "Africa",
          "series": "Inflation Rate",
          "value": 12.4
        },
        {
          "category": "Asia",
          "series": "GDP Growth",
          "value": 5.6
        },
        {
          "category": "Asia",
          "series": "Unemployment Rate",
          "value": 4.3
        },
        {
          "category": "Asia",
          "series": "Inflation Rate",
          "value": 8.1
        },
        {
          "category": "Europe",
          "series": "GDP Growth",
          "value": 2.1
        },
        {
          "category": "Europe",
          "series": "Unemployment Rate",
          "value": 6.5
        },
        {
          "category": "Europe",
          "series": "Inflation Rate",
          "value": 2.7
        },
        {
          "category": "North America",
          "series": "GDP Growth",
          "value": 2.8
        },
        {
          "category": "North America",
          "series": "Unemployment Rate",
          "value": 5.0
        },
        {
          "category": "North America",
          "series": "Inflation Rate",
          "value": 3.4
        },
        {
          "category": "South America",
          "series": "GDP Growth",
          "value": 1.5
        },
        {
          "category": "South America",
          "series": "Unemployment Rate",
          "value": 10.2
        },
        {
          "category": "South America",
          "series": "Inflation Rate",
          "value": 15.6
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Region",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Value",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Economic Indicator",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}