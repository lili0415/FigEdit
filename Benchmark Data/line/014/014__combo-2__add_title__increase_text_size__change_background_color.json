{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing taxi trip duration trends over time for different passenger counts.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "title": {
    "text": "Edited Chart",
    "fontSize": 18
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "date": "2023-01-01",
          "duration": 15,
          "passenger_count": 1
        },
        {
          "date": "2023-01-01",
          "duration": 20,
          "passenger_count": 2
        },
        {
          "date": "2023-01-02",
          "duration": 18,
          "passenger_count": 1
        },
        {
          "date": "2023-01-02",
          "duration": 25,
          "passenger_count": 2
        },
        {
          "date": "2023-01-03",
          "duration": 22,
          "passenger_count": 1
        },
        {
          "date": "2023-01-03",
          "duration": 30,
          "passenger_count": 2
        },
        {
          "date": "2023-01-04",
          "duration": 19,
          "passenger_count": 1
        },
        {
          "date": "2023-01-04",
          "duration": 28,
          "passenger_count": 2
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "date"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "duration"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "passenger_count"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Trip Duration (minutes)",
      "labelFontSize": 16,
      "tickSize": 12,
      "titleFontSize": 16
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Passenger Count",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "passenger_count"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "date"
              },
              "y": {
                "scale": "y",
                "field": "duration"
              },
              "stroke": {
                "scale": "color",
                "field": "passenger_count"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              },
              "defined": {
                "signal": "isValid(datum) && isValid(datum['date'])"
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          },
          "sort": {
            "field": "date",
            "order": "ascending"
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 16
    }
  }
}