{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing mortality rates by cause.",
  "width": 400,
  "height": 250,
  "padding": 10,
  "title": {
    "text": "Edited Chart",
    "anchor": "start",
    "fontSize": 16
  },
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "Cardiovascular Diseases",
          "value": 17.9
        },
        {
          "category": "Respiratory Diseases",
          "value": 3.9
        },
        {
          "category": "Cancer",
          "value": 9.6
        },
        {
          "category": "Diabetes",
          "value": 1.6
        },
        {
          "category": "Infectious Diseases",
          "value": 2.5
        },
        {
          "category": "Maternal Conditions",
          "value": 0.3
        },
        {
          "category": "Neonatal Conditions",
          "value": 2.4
        },
        {
          "category": "Unintentional Injuries",
          "value": 4.4
        },
        {
          "category": "Intentional Injuries",
          "value": 1.3
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "category"
      },
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "value"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Cause of Death"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Mortality Rate (millions)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "category"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "value"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "#4682b4"
          }
        },
        "update": {
          "fill": {
            "value": "#4682b4"
          }
        },
        "hover": {
          "fill": {
            "value": "#ff6347"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#000"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "field": "category",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "field": "value",
            "offset": -5
          },
          "text": {
            "field": "value"
          },
          "fillOpacity": {
            "value": 1
          }
        }
      }
    }
  ]
}