{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart representing economic indicators across regions.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "category": "GDP Growth",
          "series": "North America",
          "value": 3.5
        },
        {
          "category": "GDP Growth",
          "series": "Europe",
          "value": 2.1
        },
        {
          "category": "GDP Growth",
          "series": "Asia",
          "value": 6.3
        },
        {
          "category": "GDP Growth",
          "series": "Africa",
          "value": 4.2
        },
        {
          "category": "Inflation Rate",
          "series": "North America",
          "value": 2.0
        },
        {
          "category": "Inflation Rate",
          "series": "Europe",
          "value": 1.8
        },
        {
          "category": "Inflation Rate",
          "series": "Asia",
          "value": 3.1
        },
        {
          "category": "Inflation Rate",
          "series": "Africa",
          "value": 5.0
        },
        {
          "category": "Unemployment Rate",
          "series": "North America",
          "value": 4.5
        },
        {
          "category": "Unemployment Rate",
          "series": "Europe",
          "value": 6.0
        },
        {
          "category": "Unemployment Rate",
          "series": "Asia",
          "value": 5.2
        },
        {
          "category": "Unemployment Rate",
          "series": "Africa",
          "value": 8.7
        },
        {
          "category": "Population Growth",
          "series": "North America",
          "value": 0.7
        },
        {
          "category": "Population Growth",
          "series": "Europe",
          "value": 0.3
        },
        {
          "category": "Population Growth",
          "series": "Asia",
          "value": 1.2
        },
        {
          "category": "Population Growth",
          "series": "Africa",
          "value": 2.5
        }
      ],
      "transform": [
        {
          "type": "stack",
          "groupby": [
            "category"
          ],
          "sort": {
            "field": "series"
          },
          "field": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "category"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "series"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Economic Indicators"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Values"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Regions",
      "orient": "right",
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "category"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "series"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        },
        "hover": {
          "fillOpacity": {
            "value": 0.5
          }
        }
      }
    }
  ]
}