{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A scatter plot showing athletes' weight vs. height, categorized by sport.",
  "width": 400,
  "height": 300,
  "padding": 5,
  "background": "#fff5e6",
  "data": [
    {
      "name": "source",
      "values": [
        {
          "Height": 180,
          "Weight": 75,
          "Sport": "Basketball"
        },
        {
          "Height": 165,
          "Weight": 60,
          "Sport": "Gymnastics"
        },
        {
          "Height": 190,
          "Weight": 85,
          "Sport": "Swimming"
        },
        {
          "Height": 175,
          "Weight": 68,
          "Sport": "Athletics"
        },
        {
          "Height": 185,
          "Weight": 78,
          "Sport": "Volleyball"
        },
        {
          "Height": 170,
          "Weight": 64,
          "Sport": "Tennis"
        },
        {
          "Height": 195,
          "Weight": 90,
          "Sport": "Basketball"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": [
        165,
        170,
        175,
        180,
        185,
        190,
        195
      ],
      "range": "width",
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "Weight"
      },
      "range": "height",
      "nice": true,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Sport"
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Height (cm)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Weight (kg)"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Sport",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "Height"
          },
          "y": {
            "scale": "y",
            "field": "Weight"
          },
          "fill": {
            "scale": "color",
            "field": "Sport"
          },
          "size": {
            "value": 100
          },
          "shape": {
            "value": "circle"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}