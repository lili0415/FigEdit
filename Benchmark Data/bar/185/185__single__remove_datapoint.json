{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A bar chart showing average trip durations by pickup borough in NYC.",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "pickup_borough": "Manhattan",
          "avg_duration": 15.4
        },
        {
          "pickup_borough": "Brooklyn",
          "avg_duration": 12.7
        },
        {
          "pickup_borough": "Queens",
          "avg_duration": 18.9
        },
        {
          "pickup_borough": "Bronx",
          "avg_duration": 14.2
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:pointerover",
          "update": "datum"
        },
        {
          "events": "rect:pointerout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "pickup_borough"
      },
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "avg_duration"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Pickup Borough"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Average Trip Duration (minutes)"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "pickup_borough"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "avg_duration"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          }
        },
        "hover": {
          "fill": {
            "value": "orange"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#333"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.pickup_borough",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.avg_duration",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.avg_duration"
          },
          "fillOpacity": [
            {
              "test": "datum === tooltip",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    }
  ]
}