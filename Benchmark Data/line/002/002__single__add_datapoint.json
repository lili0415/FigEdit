{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing energy consumption trends over years for different energy types.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "energy_data",
      "values": [
        {
          "year": 2000,
          "energy_type": "Coal",
          "consumption": 1200
        },
        {
          "year": 2000,
          "energy_type": "Oil",
          "consumption": 1500
        },
        {
          "year": 2000,
          "energy_type": "Gas",
          "consumption": 1000
        },
        {
          "year": 2005,
          "energy_type": "Coal",
          "consumption": 1300
        },
        {
          "year": 2005,
          "energy_type": "Oil",
          "consumption": 1600
        },
        {
          "year": 2005,
          "energy_type": "Gas",
          "consumption": 1100
        },
        {
          "year": 2010,
          "energy_type": "Coal",
          "consumption": 1400
        },
        {
          "year": 2010,
          "energy_type": "Oil",
          "consumption": 1700
        },
        {
          "year": 2010,
          "energy_type": "Gas",
          "consumption": 1200
        },
        {
          "year": 2015,
          "energy_type": "Coal",
          "consumption": 1500
        },
        {
          "year": 2015,
          "energy_type": "Oil",
          "consumption": 1800
        },
        {
          "year": 2015,
          "energy_type": "Gas",
          "consumption": 1300
        },
        {
          "year": 2020,
          "energy_type": "Coal",
          "consumption": 1600
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015,
        2020
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "energy_data",
        "field": "consumption"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "energy_data",
        "field": "energy_type"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Energy Consumption (TWh)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Energy Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {
        "data": "energy_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "year"
          },
          "y": {
            "scale": "y",
            "field": "consumption"
          },
          "stroke": {
            "scale": "color",
            "field": "energy_type"
          },
          "strokeWidth": {
            "value": 2
          }
        }
      }
    }
  ]
}