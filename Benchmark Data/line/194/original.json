{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing monthly average temperatures over years for different regions.",
  "width": 600,
  "height": 300,
  "padding": 10,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "month": "Jan",
          "temperature": 30.2,
          "region": "North"
        },
        {
          "month": "Feb",
          "temperature": 31.5,
          "region": "North"
        },
        {
          "month": "Mar",
          "temperature": 35.0,
          "region": "North"
        },
        {
          "month": "Apr",
          "temperature": 40.2,
          "region": "North"
        },
        {
          "month": "Jan",
          "temperature": 25.4,
          "region": "South"
        },
        {
          "month": "Feb",
          "temperature": 26.7,
          "region": "South"
        },
        {
          "month": "Mar",
          "temperature": 29.8,
          "region": "South"
        },
        {
          "month": "Apr",
          "temperature": 33.5,
          "region": "South"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "month"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "temperature"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "region"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Month"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Temperature (Â°F)"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Region",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "region"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "month"
              },
              "y": {
                "scale": "y",
                "field": "temperature"
              },
              "stroke": {
                "scale": "color",
                "field": "region"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ]
}