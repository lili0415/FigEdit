{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A pie chart showing proportions of video game genres by sales.",
  "width": 300,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "genre": "Action",
          "sales": 120
        },
        {
          "genre": "Role-Playing",
          "sales": 90
        },
        {
          "genre": "Shooter",
          "sales": 150
        },
        {
          "genre": "Simulation",
          "sales": 60
        },
        {
          "genre": "Sports",
          "sales": 180
        }
      ],
      "transform": [
        {
          "type": "pie",
          "field": "sales",
          "startAngle": 0,
          "endAngle": 6.28318
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "genre"
      },
      "range": {
        "scheme": "category20"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Genre",
      "orient": "right",
      "symbolType": "circle"
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "genre"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "tooltip": {
            "signal": "datum.genre + ': ' + datum.sales + 'M sales'"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "innerRadius": {
            "value": 0
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "fill": [
            {
              "test": "datum.genre === 'Shooter'",
              "value": "#FF5733"
            },
            {
              "scale": "color",
              "field": "genre"
            }
          ]
        }
      }
    }
  ],
  "title": {
    "text": "Edited Chart",
    "fontSize": 20
  }
}