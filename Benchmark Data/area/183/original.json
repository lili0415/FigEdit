{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Area chart showing weekly sales trends for multiple stores.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "interpolate",
      "value": "monotone",
      "bind": {
        "input": "select",
        "options": [
          "basis",
          "cardinal",
          "catmull-rom",
          "linear",
          "monotone",
          "natural",
          "step",
          "step-after",
          "step-before"
        ]
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "values": [
        {
          "week": 1,
          "store": "Store A",
          "sales": 1200
        },
        {
          "week": 2,
          "store": "Store A",
          "sales": 1500
        },
        {
          "week": 3,
          "store": "Store A",
          "sales": 1700
        },
        {
          "week": 1,
          "store": "Store B",
          "sales": 1000
        },
        {
          "week": 2,
          "store": "Store B",
          "sales": 1300
        },
        {
          "week": 3,
          "store": "Store B",
          "sales": 1600
        },
        {
          "week": 1,
          "store": "Store C",
          "sales": 900
        },
        {
          "week": 2,
          "store": "Store C",
          "sales": 1100
        },
        {
          "week": 3,
          "store": "Store C",
          "sales": 1400
        }
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum['store']=='Store A' || datum['store']=='Store B'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": [
        1,
        2,
        3
      ]
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "sales"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "steelblue",
        "orange",
        "green"
      ],
      "domain": {
        "data": "table",
        "field": "store"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Week"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Sales"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "facet",
          "groupby": "store"
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "facet"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "week"
              },
              "y": {
                "scale": "yscale",
                "field": "sales"
              },
              "y2": {
                "scale": "yscale",
                "value": 0
              },
              "fill": {
                "scale": "color",
                "field": "store"
              }
            },
            "update": {
              "interpolate": {
                "signal": "interpolate"
              },
              "fillOpacity": {
                "value": 0.8
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Store",
      "orient": "right"
    }
  ]
}