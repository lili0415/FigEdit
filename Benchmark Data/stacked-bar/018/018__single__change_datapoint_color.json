{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A stacked bar chart showing on-time performance by airline and delay type.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "airline": "Delta",
          "delay_type": "Weather",
          "minutes": 120
        },
        {
          "airline": "Delta",
          "delay_type": "Carrier",
          "minutes": 80
        },
        {
          "airline": "Delta",
          "delay_type": "NAS",
          "minutes": 50
        },
        {
          "airline": "American",
          "delay_type": "Weather",
          "minutes": 90
        },
        {
          "airline": "American",
          "delay_type": "Carrier",
          "minutes": 110
        },
        {
          "airline": "American",
          "delay_type": "NAS",
          "minutes": 70
        },
        {
          "airline": "United",
          "delay_type": "Weather",
          "minutes": 100
        },
        {
          "airline": "United",
          "delay_type": "Carrier",
          "minutes": 95
        },
        {
          "airline": "United",
          "delay_type": "NAS",
          "minutes": 60
        },
        {
          "airline": "Southwest",
          "delay_type": "Weather",
          "minutes": 130
        },
        {
          "airline": "Southwest",
          "delay_type": "Carrier",
          "minutes": 75
        },
        {
          "airline": "Southwest",
          "delay_type": "NAS",
          "minutes": 40
        }
      ],
      "transform": [
        {
          "type": "stack",
          "field": "minutes",
          "groupby": [
            "airline"
          ],
          "sort": {
            "field": "delay_type"
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "airline"
      },
      "padding": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "lightblue",
        "#e45756",
        "#f1e05a"
      ],
      "domain": [
        "Weather",
        "Carrier",
        "NAS"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Airline"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Delay Minutes"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Delay Type",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "airline"
          },
          "width": {
            "scale": "x",
            "band": 1,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "y0"
          },
          "y2": {
            "scale": "y",
            "field": "y1"
          },
          "fill": {
            "scale": "color",
            "field": "delay_type"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          },
          "fill": [
            {
              "test": "datum['airline']==='Delta'",
              "value": "#ff7f0e"
            }
          ]
        },
        "hover": {
          "fillOpacity": {
            "value": 0.7
          }
        }
      }
    }
  ]
}