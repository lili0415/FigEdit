{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "An area chart showing precipitation over time in Seattle.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "weather_data",
      "values": [
        {
          "date": "2023-01-01",
          "precipitation": 5.1
        },
        {
          "date": "2023-01-02",
          "precipitation": 3.2
        },
        {
          "date": "2023-01-03",
          "precipitation": 8.3
        },
        {
          "date": "2023-01-04",
          "precipitation": 0.0
        },
        {
          "date": "2023-01-05",
          "precipitation": 12.4
        },
        {
          "date": "2023-01-06",
          "precipitation": 7.8
        },
        {
          "date": "2023-01-07",
          "precipitation": 6.0
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "date",
          "expr": "toDate(datum['date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "range": "width",
      "domain": {
        "data": "weather_data",
        "field": "date"
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {
        "data": "weather_data",
        "field": "precipitation"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "format": "%b %d"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Precipitation (mm)"
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {
        "data": "weather_data"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "date"
          },
          "y": {
            "scale": "yscale",
            "field": "precipitation"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "lightgreen"
          }
        },
        "update": {}
      }
    }
  ]
}