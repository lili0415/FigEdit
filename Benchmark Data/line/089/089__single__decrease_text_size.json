{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing house prices over time for different neighborhoods.",
  "width": 600,
  "height": 300,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "YearBuilt": 2000,
          "Price": 250000,
          "Neighborhood": "A"
        },
        {
          "YearBuilt": 2000,
          "Price": 300000,
          "Neighborhood": "B"
        },
        {
          "YearBuilt": 2005,
          "Price": 275000,
          "Neighborhood": "A"
        },
        {
          "YearBuilt": 2005,
          "Price": 320000,
          "Neighborhood": "B"
        },
        {
          "YearBuilt": 2010,
          "Price": 290000,
          "Neighborhood": "A"
        },
        {
          "YearBuilt": 2010,
          "Price": 340000,
          "Neighborhood": "B"
        },
        {
          "YearBuilt": 2015,
          "Price": 310000,
          "Neighborhood": "A"
        },
        {
          "YearBuilt": 2015,
          "Price": 360000,
          "Neighborhood": "B"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": [
        2000,
        2005,
        2010,
        2015
      ],
      "padding": 0.1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "Price"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "Neighborhood"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Year Built",
      "titleFontSize": 10,
      "labelFontSize": 8
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "Price (USD)",
      "titleFontSize": 10,
      "labelFontSize": 8
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Neighborhood",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "Neighborhood"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x",
                "field": "YearBuilt"
              },
              "y": {
                "scale": "y",
                "field": "Price"
              },
              "stroke": {
                "scale": "color",
                "field": "Neighborhood"
              },
              "strokeWidth": {
                "value": 2
              }
            },
            "update": {
              "strokeOpacity": {
                "value": 1
              }
            },
            "hover": {
              "strokeOpacity": {
                "value": 0.5
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 8
    }
  }
}